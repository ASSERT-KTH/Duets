									</mapper>
								</data>
								<data>
									<src>${basedir}/src/deb/etc/opensearchserver</src>
									<type>file</type>
									<mapper>
										<type>perm</type>
										<prefix>/etc</prefix>
									</mapper>
								</data>
								<data>
									<src>${basedir}/src/deb/init.d</src>
									<type>directory</type>
									<mapper>
