<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.tobiyas</groupId>
  <artifactId>DeathChest</artifactId>
  <version>1.13.3-SNAPSHOT</version>
  <name>DeathChest</name>
  
  <properties>
      <utilsVersion>1.0.11</utilsVersion>
	  <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <repositories>
  	<repository>
  		<id>com.sk89q</id>
  		<name>sk89qRepo</name>
  		<url>http://maven.sk89q.com/repo/</url>
  	</repository>
  	<repository>
      <id>org.bukkit</id>
      <url>http://repo.bukkit.org/content/groups/public</url>
    </repository>
    <repository>
      <id>org.spout</id>
      <url>http://repo.spout.org/</url>
    </repository>
  </repositories>
  
  <dependencies>
  	<!-- Online Dependencies -->
  	<dependency>
  		<groupId>com.sk89q</groupId>
  		<artifactId>worldguard</artifactId>
  		<version>5.7.3-SNAPSHOT</version>
  		<optional>true</optional>
  	</dependency>
  	<dependency>
  		<groupId>de.tobiyas</groupId>
  		<artifactId>Utils</artifactId>
  		<version>${utilsVersion}</version>
  	</dependency>
  	<dependency>
  		<groupId>org.bukkit</groupId>
  		<artifactId>bukkit</artifactId>
  		<version>1.7.2-R0.1-SNAPSHOT</version>
  		<optional>true</optional>
  	</dependency>
  	
  	<!-- Local Dependencies -->
  	<dependency>
  		<groupId>com.griefcraft</groupId>
    	<artifactId>lwc</artifactId>
    	<version>4.1.1</version>
   		<scope>system</scope>
    	<systemPath>${basedir}/libs/LWC.jar</systemPath>
    	<optional>true</optional>
  	</dependency>
  	
  	<dependency>
  		<groupId>org.yi.acru.bukkit</groupId>
    	<artifactId>lockette</artifactId>
    	<version>1.5</version> <!-- Don't know... -->
   		<scope>system</scope>
    	<systemPath>${basedir}/libs/Lockette.jar</systemPath>
    	<optional>true</optional>
  	</dependency>
  	
  	<dependency>
  		<groupId>me.limebyte</groupId>
    	<artifactId>battlenight</artifactId>
    	<version>1.4.7</version> <!-- Don't know... -->
   		<scope>system</scope>
    	<systemPath>${basedir}/libs/BattleNight.jar</systemPath>
    	<optional>true</optional>
  	</dependency>
  	
  	<dependency>
  		<groupId>me.HAklowner</groupId>
    	<artifactId>SecureChests</artifactId>
    	<version>0.7.1</version> <!-- Don't know... -->
   		<scope>system</scope>
    	<systemPath>${basedir}/libs/SecureChests.jar</systemPath>
    	<optional>true</optional>
  	</dependency>
  </dependencies>
  
 <build>
   <sourceDirectory>src/main/java</sourceDirectory>
   <testSourceDirectory>tests/main/java</testSourceDirectory>
    <plugins>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
        	<source>1.6</source>
        	<target>1.6</target>
        </configuration>
      </plugin>
      
      <!-- Shade -->
      <!-- We want to bundle in some dependencies -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>de.tobiyas:Utils</include>
                </includes>
              </artifactSet>
              
              <!-- We want to relocate the Utils -->
              <relocations>
                  <relocation>
                      <pattern>de.tobiyas.util</pattern>
                      <shadedPattern>de.tobiyas.util.v${utilsVersion}</shadedPattern>
                  </relocation>
              </relocations>
            
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <!-- Release -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.2.2</version><!--$NO-MVN-MAN-VER$-->
        <configuration>
          <preparationGoals>assembly:assembly</preparationGoals>
          <goals>assembly:assembly</goals>
          <tagNameFormat>@{project.version}</tagNameFormat>
        </configuration>
      </plugin>
    </plugins>
    
    
    <!-- Resources to add -->
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
        <excludes>
        	<exclude>*.jar</exclude>
        	<exclude>*.project</exclude>
        </excludes>
        <filtering>false</filtering>
      </resource>
    </resources>
    
  </build>
</project>