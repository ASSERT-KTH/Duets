<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.tobiyas</groupId>
  <artifactId>Races</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>Races</name>
  <description>Races plugin for Craftbukkit</description>
  
  <!-- Props -->
  <properties>
    <powermock.version>1.4.12</powermock.version>
  </properties>
  
  <!-- Repos -->
  <repositories>
  	<repository>
      <id>org.bukkit</id>
      <url>http://repo.bukkit.org/content/groups/public</url>
    </repository>
  </repositories>
  
  <!-- Depends -->
  <dependencies>
  	<!-- Depends as Projects -->
  	<dependency>
  		<groupId>de.tobiyas</groupId>
  		<artifactId>Utils</artifactId>
  		<version>1.0.6-SNAPSHOT</version>
  	</dependency>
  	
  	<dependency>
  		<groupId>de.tobiyas</groupId>
  		<artifactId>Mockit-Test-Gen</artifactId>
  		<version>1.0.0</version>
  		<type>test-jar</type>
        <scope>test</scope>
  	</dependency>
  	
  	<!-- Depends from Repos -->
  	<dependency>
  		<groupId>org.bukkit</groupId>
  		<artifactId>bukkit</artifactId>
  		<version>1.4.5-R0.3-SNAPSHOT</version>
  		<optional>true</optional>
  	</dependency>
  	
  	<!-- Local depends -->
  	<dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.1</version>
      <scope>test</scope>
    </dependency>
    
    <!-- Mockito -->
   	 <dependency>
      <groupId>org.powermock</groupId>
      <artifactId>powermock-module-junit4</artifactId>
      <version>${powermock.version}</version>
      <scope>test</scope>
   </dependency>
   <dependency>
      <groupId>org.powermock</groupId>
      <artifactId>powermock-api-mockito</artifactId>
      <version>${powermock.version}</version>
      <scope>test</scope>
   </dependency>
            
  </dependencies>
  
  <!-- BUILDING  -->
  
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      
       <!-- Shade -->
      <!-- We want to bundle in some dependencies -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>de.tobiyas:Utils</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <!-- Release -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.2.2</version><!--$NO-MVN-MAN-VER$-->
        <configuration>
          <preparationGoals>assembly:assembly</preparationGoals>
          <goals>assembly:assembly</goals>
          <tagNameFormat>@{project.version}</tagNameFormat>
        </configuration>
      </plugin>
    </plugins>
    
     <!-- Resources to add -->
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
        <excludes>
        	<exclude>*.jar</exclude>
        	<exclude>*.project</exclude>
        </excludes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>