<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.tobiyas</groupId>
	<artifactId>RacesAndClasses</artifactId>
	<version>1.1.1-SNAPSHOT</version>
	<name>RacesAndClasses</name>
	<description>Races and Classes plugin for Craftbukkit</description>

	<!-- Props -->
	<properties>
		<powermock.version>1.4.12</powermock.version>
		<utilsVersion>1.0.11</utilsVersion>
		<utilsAddition>RaC</utilsAddition>
		<bukkit.version>1.7.9-R0.3-SNAPSHOT</bukkit.version>
	</properties>

	<!-- Repos -->
	<repositories>
		<repository>
			<id>org.bukkit</id>
			<url>http://repo.bukkit.org/content/groups/public</url>
		</repository>

		<!-- Heroes repo -->
		<repository>
			<id>heroes-repo</id>
			<url>http://ci.herocraftonline.com/plugin/repository/everything</url>
		</repository>

		<!-- Vault Repo -->
		<repository>
			<id>vault-repo</id>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
		</repository>

		<!-- Own repo -->
		<repository>
			<id>tobiyas-repo</id>
			<url>http://repository-tobiyas.forge.cloudbees.com/snapshot/</url>
		</repository>

	</repositories>

	<!-- Depends -->
	<dependencies>
		<!-- Depends as Projects -->
		<dependency>
			<groupId>de.tobiyas</groupId>
			<artifactId>Utils</artifactId>
			<version>${utilsVersion}</version>
		</dependency>

		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.4</version>
			<optional>false</optional>
		</dependency>

		<!-- Since we have disabled tests for now, we don't need this dependency at the moment.
		<dependency>
			<groupId>de.tobiyas</groupId>
			<artifactId>Mockit-Test-Gen</artifactId>
			<version>1.0.1</version>
			<scope>test</scope>
		</dependency>
		-->
		
		<!-- Depends from Repos -->
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>${bukkit.version}</version>
			<optional>true</optional>
		</dependency>

		<!-- Vault depends for Permissions -->
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>VaultAPI</artifactId>
			<version>1.4</version>
		</dependency>

		<!-- Local depends -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.1</version>
			<scope>test</scope>
		</dependency>
		
		<!-- Hero chat -->
		<dependency>
           <groupId>com.dthielke</groupId>
           <artifactId>HeroChat</artifactId>
           <version>1.0</version>
           <scope>system</scope>
           <systemPath>${project.basedir}/libs/Chat/HeroChat.jar</systemPath>
        </dependency>
		
		<!-- Heroes -->
		<dependency>
           <groupId>com.dthielke</groupId>
           <artifactId>Heroes</artifactId>
           <version>1.0</version>
           <scope>system</scope>
           <systemPath>${project.basedir}/libs/Misc/Heroes.jar</systemPath>
        </dependency>

		
		<!-- McMMO -->
		<dependency>
			<groupId>com.gmail.nossr50.mcMMO</groupId>
    		<artifactId>mcMMO</artifactId>
    		<version>1.0</version>
           <scope>system</scope>
           <systemPath>${project.basedir}/libs/Misc/mcMMO.jar</systemPath>
		</dependency>
				
		<!-- Mockito -->
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-module-junit4</artifactId>
			<version>${powermock.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-api-mockito</artifactId>
			<version>${powermock.version}</version>
			<scope>test</scope>
		</dependency>

		<!-- Group Manager -->
		<dependency>
			<groupId>org.anjocaido</groupId>
			<artifactId>groupmanager</artifactId>
			<scope>system</scope>
			<version>1.9.60</version>
			<systemPath>${project.basedir}/libs/Permissions/EssentialsGroupManager.jar</systemPath>
			<optional>true</optional>
		</dependency>
		
		<!-- Skill API -->
		<dependency>
			<groupId>com.sucy</groupId>
			<artifactId>skill</artifactId>
			<version>1</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/libs/Misc/SkillAPI.jar</systemPath>
			<optional>true</optional>
		</dependency>

	</dependencies>

	<!-- BUILDING -->

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<!-- Remove Tests for the Moment -->
		<!-- <testSourceDirectory>src/test/java</testSourceDirectory> -->
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<!-- Shade -->
			<!-- We want to bundle in some dependencies -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>de.tobiyas:Utils</include>
									<include>commons-io:commons-io</include>
								</includes>
							</artifactSet>

							<!-- We want to relocate the Utils -->
							<relocations>
								<relocation>
									<pattern>de.tobiyas.util</pattern>
									<shadedPattern>de.tobiyas.util.v${utilsVersion}${utilsAddition}</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.apache.commons.io</pattern>
									<shadedPattern>de.tobiyas.util.apache.commons.io</shadedPattern>
								</relocation>
							</relocations>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Release -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.2.2</version><!--$NO-MVN-MAN-VER$ -->
				<configuration>
					<preparationGoals>assembly:assembly</preparationGoals>
					<goals>assembly:assembly</goals>
					<tagNameFormat>@{project.version}</tagNameFormat>
				</configuration>
			</plugin>

		</plugins>

		<!-- Resources to add -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>plugin.yml</include>
					<include>LICENSE-2.0.html</include>
				</includes>
				<excludes>
					<exclude>*.project</exclude>
				</excludes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.jar</include>
				</includes>
			</resource>
		</resources>

		<!-- Pushing to Maven -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-alpha-6</version>
			</extension>
		</extensions>
	</build>

	<distributionManagement>
		<repository>
			<id>pi-maven</id>
			<url>ftp://192.168.0.116/var/www/maven/</url>
		</repository>
	</distributionManagement>

</project>
