<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.tobiyas</groupId>
	<artifactId>RacesAndClasses</artifactId>
	<version>1.1.14</version>
	<name>RacesAndClasses</name>
	<description>Races and Classes plugin for Craftbukkit</description>

	<!-- Props -->
	<properties>
		<powermock.version>1.4.12</powermock.version>
		<utilsVersion>1.0.14</utilsVersion>
		<utilsAddition>RaC</utilsAddition>
	</properties>

	<!-- Repos -->
	<repositories>
	    <!-- Spigot repo -->
		<repository>
			<id>spigot-repo</id>
			<url>https://hub.spigotmc.org/nexus/content/groups/public/</url>
		</repository>

		<!-- Vault Repo -->
		<repository>
			<id>vault-repo</id>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
		</repository>
		
		<!-- temp repo. Not always online. -->
		<repository>
			<id>tobiyas-repo</id>
			<name>Tobiyas Public Repo</name>
			<url>http://tobiyas.de/maven</url>
		</repository>
		
		<!-- SK Repo -->
		<repository>
			<id>sk89q</id>
			<url>http://maven.sk89q.com/repo/</url>
		</repository>
		
		<!-- Citizens Repo -->
		<repository>
		    <id>Citizens</id>
		    <url>http://repo.citizensnpcs.co</url>
		</repository>
		
		<!-- MVdW repo -->
		<repository>
		  <id>mvdw-software</id>
		  <name>MVdW Public Repositories</name>
		  <url>http://repo.mvdw-software.be/content/groups/public/</url>
		</repository>
	</repositories>

	<!-- Depends -->
	<dependencies>
		<!-- Depends as Projects -->
		<dependency>
			<groupId>de.tobiyas</groupId>
			<artifactId>Utils</artifactId>
			<version>${utilsVersion}</version>
		</dependency>

		<!-- Since we have disabled tests for now, we don't need this dependency at the moment.
		<dependency>
			<groupId>de.tobiyas</groupId>
			<artifactId>Mockit-Test-Gen</artifactId>
			<version>1.0.1</version>
			<scope>test</scope>
		</dependency>
		-->
		
		<!-- Depends from Repos -->
		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>1.10-R0.1-SNAPSHOT</version>
			<optional>true</optional>
		</dependency>
		
		<!-- Add citizens for interactions. -->
		<dependency>
		    <groupId>net.citizensnpcs</groupId>
			<artifactId>citizensapi</artifactId>
			<version>2.0.15-SNAPSHOT</version>
			<optional>true</optional>
		</dependency>

		<!-- Vault depends for Permissions -->
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>VaultAPI</artifactId>
			<version>LATEST</version>
			<optional>true</optional>
		</dependency>

		
		<!-- WorldGuard -->
		<dependency>
			<groupId>com.sk89q</groupId>
			<artifactId>worldguard</artifactId>
			<version>LATEST</version>
			<scope>compile</scope>
			<type>jar</type>
			<optional>true</optional>
		</dependency>

				
		<!-- Local depends -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.1</version>
			<scope>test</scope>
		</dependency>
		
		<!-- Hero chat -->
		<dependency>
           <groupId>com.dthielke</groupId>
           <artifactId>HeroChat</artifactId>
           <version>1.0</version>
           <scope>system</scope>
           <systemPath>${project.basedir}/libs/Chat/HeroChat.jar</systemPath>
        </dependency>
		
		<!-- Heroes -->
		<dependency>
           <groupId>com.dthielke</groupId>
           <artifactId>Heroes</artifactId>
           <version>1.0</version>
           <scope>system</scope>
           <systemPath>${project.basedir}/libs/Misc/Heroes.jar</systemPath>
        </dependency>

		
		<!-- McMMO -->
		<dependency>
			<groupId>com.gmail.nossr50.mcMMO</groupId>
    		<artifactId>mcMMO</artifactId>
    		<version>1.0</version>
           <scope>system</scope>
           <systemPath>${project.basedir}/libs/Misc/mcMMO.jar</systemPath>
		</dependency>
		
		<!-- Parties -->
		<dependency>
			<groupId>me.alessiodp.parties</groupId>
    		<artifactId>Parties</artifactId>
    		<version>1.5.9</version>
           <scope>system</scope>
           <systemPath>${project.basedir}/libs/Misc/Parties.jar</systemPath>
		</dependency>
		
		<!-- Placeholder APIs -->
		<dependency>
		  <groupId>be.maximvdw</groupId>
		  <artifactId>MVdWPlaceholderAPI</artifactId>
		  <version>1.0.2-SNAPSHOT</version>
		  <optional>true</optional>
		</dependency>
		
		<dependency>
			<groupId>me.clip.placeholderapi</groupId>
	   		<artifactId>PlaceholderAPIPlugin</artifactId>
	   		<version>2.3.8</version>
	        <scope>system</scope>
	        <systemPath>${project.basedir}/libs/Misc/PlaceholderAPI.jar</systemPath>
		</dependency>
			
		<!-- Mockito -->
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-module-junit4</artifactId>
			<version>${powermock.version}</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-api-mockito</artifactId>
			<version>${powermock.version}</version>
			<scope>test</scope>
		</dependency>

		<!-- Group Manager -->
		<dependency>
			<groupId>org.anjocaido</groupId>
			<artifactId>groupmanager</artifactId>
			<scope>system</scope>
			<version>1.9.60</version>
			<systemPath>${project.basedir}/libs/Permissions/EssentialsGroupManager.jar</systemPath>
			<optional>true</optional>
		</dependency>
		
		
		<!-- Skill API -->
		<dependency>
			<groupId>com.sucy</groupId>
			<artifactId>skill</artifactId>
			<version>1</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/libs/Misc/SkillAPI.jar</systemPath>
			<optional>true</optional>
		</dependency>
		
		<!-- MCCore -->
		<dependency>
			<groupId>com.sucy</groupId>
			<artifactId>mccore</artifactId>
			<version>1</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/libs/Misc/MCCore.jar</systemPath>
			<optional>true</optional>
		</dependency>

		<!-- Magic Spells -->
		<dependency>
		    <groupId>com.nisovin</groupId>
		    <artifactId>magicspells</artifactId>
		    <version>3.2</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/libs/Misc/MagicSpells.jar</systemPath>
		    <optional>true</optional>
		</dependency>

		<!-- Mythic Mobs -->
		<dependency>
		    <groupId>net.elseland.xikage</groupId>
		    <artifactId>MythicMobs</artifactId>
		    <version>1.0</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/libs/Misc/MythicMobs.jar</systemPath>
		    <optional>true</optional>
		</dependency>

		<!-- Towny Chat -->
		<dependency>
		    <groupId>com.palmergames.bukkit</groupId>
		    <artifactId>TownyChat</artifactId>
		    <version>0.40</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/libs/Chat/TownyChat.jar</systemPath>
		    <optional>true</optional>
		</dependency>
		
		<!-- Snake YML for Standalone Builder! -->
        <dependency>
            <groupId>org.yaml</groupId>
            <artifactId>snakeyaml</artifactId>
            <version>1.15</version>
            <scope>compile</scope>
        </dependency>
		
	</dependencies>

	<!-- BUILDING -->

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<finalName>RacesAndClasses</finalName>
		<!-- Remove Tests for the Moment -->
		<!-- <testSourceDirectory>src/test/java</testSourceDirectory> -->
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>

			<!-- Shade -->
			<!-- We want to bundle in some dependencies -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>de.tobiyas:Utils</include>
								</includes>
							</artifactSet>

							<!-- We want to relocate the Utils -->
							<relocations>
								<relocation>
									<pattern>de.tobiyas.util</pattern>
									<shadedPattern>de.tobiyas.util.${utilsAddition}</shadedPattern>
								</relocation>
							</relocations>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Main-class Setting -->
			<plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-jar-plugin</artifactId>
			    <configuration><archive><manifest>
			    	<mainClass>de.tobiyas.racesandclasses.standalonegui.StandaloneGuiMain</mainClass>
			    </manifest></archive></configuration>
			</plugin>
			
			<!-- Deploy plugin: -->
	        <plugin>
	          <groupId>org.apache.maven.plugins</groupId>
	          <artifactId>maven-deploy-plugin</artifactId>
	          <version>2.8.2</version>
	        </plugin>
				
		</plugins>
			
		<!-- Pushing to Maven -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>2.10</version>
			</extension>
		</extensions>
		
		<!-- Resources to add -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>plugin.yml</include>
					<include>LICENSE-2.0.html</include>
				</includes>
				<excludes>
					<exclude>*.project</exclude>
				</excludes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.jar</include>
				</includes>
			</resource>
		</resources>
	</build>
	
	<distributionManagement>
		<repository>
			<id>home-pi-maven</id>
			<url>sftp://192.168.192.48/var/www/maven/</url>
		</repository>
	</distributionManagement>
	
</project>
