<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.visualdna.kafka</groupId>
  <artifactId>kafka-hadoop-loader</artifactId>
  <packaging>jar</packaging>
  <version>0.1.0-SNAPSHOT</version>
  <name>Kafka Loader Hadoop Job</name>
  <repositories>
    <repository>
        <id>gridport.co-snapshots</id>
        <name>GridPort Snapshots Repository</name>
        <url>http://aos3.gridport.co:8081/nexus/content/repositories/snapshots</url>
        <snapshots>
            <updatePolicy>always</updatePolicy>
        </snapshots>
    </repository>
    <repository>
        <id>gridport.co-releases</id>
        <name>GridPort Releases Repository</name>
        <url>http://aos3.gridport.co:8081/nexus/content/repositories/releases</url>
    </repository>
    <repository>
        <id>cloudera</id>
        <name>Cloudera Maven Repo</name>
        <url>https://repository.cloudera.com/artifactory/cloudera-repos</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
        <groupId>org.apache.kafka</groupId>
        <artifactId>kafka-core</artifactId>
        <version>0.7.1-SNAPSHOT</version>
    </dependency> 

    <dependency>
        <groupId>org.apache.hadoop</groupId>
        <artifactId>hadoop-client</artifactId>
        <version>2.0.0-mr1-cdh4.0.0</version>
    </dependency>
<!-- 
    <dependency>
        <groupId>com.google.protobuf</groupId>
        <artifactId>protobuf-java</artifactId>
        <version>2.4.1</version>
    </dependency>
    <dependency>
        <groupId>com.googlecode.protobuf-java-format</groupId>
        <artifactId>protobuf-java-format</artifactId>
        <version>1.2</version>
    </dependency> -->
    <dependency>
        <groupId>co.gridport.protos</groupId>
        <artifactId>test-protos</artifactId>
        <version>0.0.1-SNAPSHOT</version>    
    </dependency>

    <dependency>
        <groupId>commons-httpclient</groupId>
        <artifactId>commons-httpclient</artifactId>
        <version>3.1</version>
    </dependency>
    <dependency>
        <groupId>commons-logging</groupId>
        <artifactId>commons-logging</artifactId>
        <version>1.1.1</version>
    </dependency>
    <dependency>
        <groupId>commons-cli</groupId>
        <artifactId>commons-cli</artifactId>
        <version>1.2</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>junit:junit</exclude>
                  <exclude>org.apache.hadoop:*</exclude>
                  <!--
                  <exclude>log4j:log4j:jar:</exclude>
                  -->
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <configuration>
              <finalName>kafka-hadoop-consumer</finalName>
              <archive>
                  <manifest>
                      <mainClass>com.visualdna.kafka.hadoop.HadoopJob</mainClass>
                  </manifest>
              </archive>
            <descriptorRefs>
              <descriptorRef>jar-with-dependencies</descriptorRef>
            </descriptorRefs>
            <!-- 
            <dependencySets>
                <depdependencySet>
                    <excludes>
                        <exclude>org.apache.hadoop:hadoop-client</exclude>
                    </excludes>
                </depdependencySet>
            </dependencySets>
             -->
          </configuration>
      </plugin>
    </plugins>
  </build>
</project>
