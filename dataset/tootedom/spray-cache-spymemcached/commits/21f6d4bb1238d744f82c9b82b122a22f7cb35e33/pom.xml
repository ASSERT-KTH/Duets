    </licenses>
    <!-- Required: developer information: -->
    <developers>
        <developer>
            <id>tootedom</id>
            <name>Dominic Tootell</name>
            <email>dominic.tootell@relateit.io</email>
            <organization>greencheek.org</organization>
            <organizationUrl>https://github.com/tootedom</organizationUrl>
            <url>https://github.com/tootedom</url>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:git@github.com:tootedom/spray-cache-spymemcached.git</connection>
        <url>scm:git:git@github.com:tootedom/spray-cache-spymemcached.git</url>
        <developerConnection>scm:git:git@github.com:tootedom/spray-cache-spymemcached.git</developerConnection>
        <tag>spray-cache-spymemcached-0.2.2</tag>
