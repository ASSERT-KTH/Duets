    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.naoghuman</groupId>
    <artifactId>sokubanfx</artifactId>
    <version>0.3.0-BETA</version>
    <packaging>jar</packaging>
    <name>SokubanFX</name>
    
    <description>Inspired by my Java (Swing2D) game Sokuban-Clone which I wrote 2008 I rewrite the game with JavaFX.</description>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <timestamp>${maven.build.timestamp}</timestamp>
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
    </properties>
    
    <build>
        <defaultGoal>clean package</defaultGoal>
        <!-- COMMENT OUT for release -->
        <plugins>
            <!-- 
                See JavaFX-Maven-Plugin Generator how to create the plugin configuration.
                 - https://javafx-maven-plugin.github.io/
                 - Run in your project folder: mvn jfx:jar 
            -->
            <plugin>
                <groupId>com.zenjava</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>8.4.0</version>
                <configuration>
                    <mainClass>com.github.naoghuman.sokubanfx.application.StartApplication</mainClass>
                    <jfxMainAppJarName>${project.artifactId}-${project.version}.jar</jfxMainAppJarName>
                    <allPermissions>true</allPermissions>
                    <verbose>true</verbose>
                </configuration>
