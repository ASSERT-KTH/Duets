            <email>leleuj@gmail.com</email>
        </developer>
        <developer>
            <name>Ratpack team</name>
        </developer>
    </developers>

    <properties>
        <pac4j.version>1.8.9</pac4j.version>
        <java.version>1.8</java.version>
        <ratpack.version>1.4.6</ratpack.version>
        <guava.version>21.0</guava.version>
