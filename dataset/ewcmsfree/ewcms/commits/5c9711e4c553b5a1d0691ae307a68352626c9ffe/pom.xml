        <properties>
                <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
                <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
                <hibernate.entitymanager.version>3.5.1-Final</hibernate.entitymanager.version>
