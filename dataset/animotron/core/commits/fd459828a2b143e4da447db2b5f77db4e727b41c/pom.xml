<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.animotron</groupId>
	<artifactId>core</artifactId>
	<version>0.1.M04</version>
	<name>Animo core</name>
	
	<organization>
		<name>Animotron</name>
		<url>http://animotron.org</url>
	</organization>

	<developers>
		<developer>
			<name>Dmitriy Shabanov</name>
			<email>shabanovd@gmail.com</email>
		</developer>
		<developer>
			<name>Evgeny Gazdovsky</name>
			<email>gazdovsky@gmail.com</email>
		</developer>
	</developers>
	
	<properties>
		<neo4jVersion>1.8</neo4jVersion>
	</properties>
	
	<dependencies>
        <dependency>
            <groupId>org.neo4j</groupId>
            <artifactId>neo4j</artifactId>
            <version>${neo4jVersion}</version>
            <type>pom</type>
        </dependency>

        <dependency>
            <groupId>org.neo4j.build</groupId>
            <artifactId>neo4j-berkeleydb-je-index</artifactId>
            <version>${neo4jVersion}</version>
        </dependency>

		<!-- light/fast date-time (animo/time) -->
		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
			<version>1.6.2</version>
		</dependency>
		
		<!-- Unit of measures & ... -->
		<!-- 
		<dependency>
			<groupId>org.jscience</groupId>
			<artifactId>jscience</artifactId>
			<version>4.3.1</version>
			<scope>test</scope>
		</dependency>
		-->
		 
		<!-- classes utils -->
		<dependency>
			<groupId>org.clapper</groupId>
			<artifactId>javautil</artifactId>
			<version>3.1.1</version>
		</dependency>
		
		<!-- fast map, list ... -->
		<dependency>
			<groupId>javolution</groupId>
			<artifactId>javolution</artifactId>
			<version>5.5.1</version>
		</dependency>

        <!-- library for multicast communication via a flexible protocol stack. -->
		<dependency>
			<groupId>jgroups</groupId>
			<artifactId>jgroups</artifactId>
			<version>2.9.0.GA</version>
		</dependency>

		<dependency>
            <groupId>org.jetlang</groupId>
            <artifactId>jetlang</artifactId>
            <version>0.2.5</version>
        </dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.eaio.uuid</groupId>
			<artifactId>uuid</artifactId>
			<version>3.3</version>
		</dependency>
	</dependencies>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8.2</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<pluginRepositories>
		<pluginRepository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/</url>
		</pluginRepository>
	</pluginRepositories>
	<repositories>
		<!-- 
		<repository>
			<id>geotoolkit</id>
			<reference>Geotoolkit repository</reference>
			<url>http://maven.geotoolkit.org</url>
		</repository>
		-->
		<repository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/</url>
		</repository>
		
		<!-- org.jscience -->
		<repository>
			<id>jcurl-snapshots</id>
			<name>JCurl Maven Snapshots</name>
			<url>http://www.jcurl.org/m2/repo/</url>
		</repository>
		
		<!-- org.clapper -->
		<repository>
			<id>maven.clapper.org</id>
			<name>Maven repository for software published by Brian Clapper</name>
			<url>http://maven.clapper.org</url>
		</repository>
		<repository>
            <id>jetlang.googlecode.com</id>
            <name>Jetlang Repository for Maven</name>
            <url>http://jetlang.googlecode.com/svn/repo/</url>
        </repository>		
        <repository>
			<id>eaio.com</id>
			<url>http://eaio.com/maven2</url>
		</repository>
		<!--
		<repository>
			<id>http://repository.codehaus.org/</id>
			<url>http://repository.codehaus.org/</url>
		</repository>
		-->
		<!-- 
		<repository>
			<id>scala-tools.org</id>
			<reference>Scala-tools Maven2 Repository</reference>
			<url>http://scala-tools.org/repo-releases</url>
		</repository>
		-->
	</repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<!--<forkMode>pertest</forkMode>-->
					<argLine>-Xms512m -Xmx1024m</argLine> <testFailureIgnore>false</testFailureIgnore>
					<!--<skip>false</skip>-->
					<!-- 
					<includes>
						<include>**/*.java</include>
					</includes>
					-->
				</configuration>
			</plugin>
		</plugins>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
	</build>
</project>
