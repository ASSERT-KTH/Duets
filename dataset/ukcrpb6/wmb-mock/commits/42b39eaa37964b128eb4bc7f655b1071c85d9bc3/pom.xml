<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.googlecode.wmbutil</groupId>
    <artifactId>wmb-parent</artifactId>
    <version>0.3.5-SNAPSHOT</version>

    <packaging>pom</packaging>

    <name>WebSphere Message Broker Extensions - Parent</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <mqsi.version>8.0.0.0</mqsi.version>
    </properties>

    <modules>
        <!--<module>jplugin2-test</module>-->
        <module>wmb-util</module>
        <module>wmb-mock</module>
        <!--<module>wmb-hibernate</module>-->
        <!--<module>wmb-cache-dao</module>-->
        <!--<module>wmb-logging-dao</module>-->
    </modules>

    <dependencyManagement>
        <dependencies>
            <!-- Message Broker -->
            <dependency>
                <groupId>com.ibm.broker</groupId>
                <artifactId>javacompute</artifactId>
                <version>${mqsi.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>com.ibm.broker</groupId>
                <artifactId>jplugin2</artifactId>
                <version>${mqsi.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>com.ibm.mq</groupId>
                <artifactId>headers</artifactId>
                <version>7.0.1.8</version>
                <scope>provided</scope>
            </dependency>

            <!-- Guava -->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>12.0</version>
            </dependency>

            <!-- Unit tests -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.9</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>1.9.0</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>jaxen</groupId>
                <artifactId>jaxen</artifactId>
                <version>1.1.3</version>
                <scope>test</scope>
                <exclusions>
                    <exclusion>
                        <groupId>maven-plugins</groupId>
                        <artifactId>maven-cobertura-plugin</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>maven-plugins</groupId>
                        <artifactId>maven-findbugs-plugin</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.googlecode.wmbutil</groupId>
                <artifactId>wmb-hibernate</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>javadoc</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>create-javadoc-jar</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <source>${project.build.sourceDirectory}</source>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>jplugin</id>
            <modules>
                <module>jplugin2-test</module>
            </modules>
        </profile>
    </profiles>

</project>
