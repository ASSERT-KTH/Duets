	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<flapdoodle.version>1.50.5</flapdoodle.version>
		<hamcrest.version>1.3</hamcrest.version>
		<jackson.version>2.9.0.pr3</jackson.version>
