<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.rhetorical</groupId>
    <artifactId>com-warfare</artifactId>
    <packaging>jar</packaging>
    <version>RELEASE-2.4.${v}</version>
    <name>COM-Warfare</name>

    <repositories>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/</url>
        </repository>

        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>

        <repository>
            <id>bstats-repo</id>
            <url>http://repo.bstats.org/content/repositories/releases/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>com.github.mrrhetorical</groupId>
            <artifactId>McTranslatePlusPlus</artifactId>
            <version>master-1.1-g9681908-1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.bstats</groupId>
            <artifactId>bstats-bukkit</artifactId>
            <version>1.2</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.13.1-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>plugin.yml</include>
                    <include>config.yml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <version>3.8.0</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <relocations>
                        <relocation>
                            <pattern>org.bstats</pattern>
                            <shadedPattern>com.rhetorical.cod</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

<profiles>


    <!-- 1.12 Build Profile -->


    <profile>
        <id>1.12</id>

        <dependencies>
            <dependency>
                <groupId>org.spigotmc</groupId>
                <artifactId>spigot-api</artifactId>
                <version>1.12.1-R0.1-SNAPSHOT</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>

        <build>

            <plugins>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <finalName>com-warfare-2.4.${v}-1.12</finalName>
                    </configuration>
                </plugin>

                <plugin> 
                    <groupId>com.google.code.maven-replacer-plugin</groupId> 
                    <artifactId>replacer</artifactId>
                    <version>1.5.1</version> 
                    <executions> 
                        <execution> 
                            <phase>process-sources</phase> 
                            <goals> 
                                <goal>replace</goal> 
                            </goals> 
                        </execution>
                    </executions> 
                    <configuration>
                        <includes> 
                            <include>src/main/java/com/rhetorical/cod/object/GameInstance.java</include>
                            <include>src/main/java/com/rhetorical/cod/inventories/InventoryManager.java</include>
                        </includes>
                        <replacements>
                            <replacement>
                                <token>CRAFTING_TABLE</token>
                                <value>WORKBENCH</value> 
                            </replacement>
                            <replacement>
                                <token>WOODEN_HOE</token>
                                <value>WOOD_HOE</value> 
                            </replacement> 
                            <replacement>
                                <token>SKELETON_SKULL</token>
                                <value>SKULL</value> 
                            </replacement>

                            <!-- ^^^ InventoryManager.java ^^^ -->
                            <!-- vvv GameInstance.java vvv -->

                            <replacement>
                                <token>BLUE_BANNER</token>
                                <value>BANNER</value> 
                            </replacement>
                            <replacement>
                                <token>RED_BANNER</token>
                                <value>BANNER</value>
                            </replacement>
                            <replacement>
                                <token>GOLDEN_SWORD</token>
                                <value>GOLD_SWORD</value>
                            </replacement>
                            <replacement>
                                <token>WOODEN_SWORD</token>
                                <value>WOOD_SWORD</value>
                            </replacement>
                        </replacements> 
                    </configuration>
                </plugin> 
            </plugins>
        </build>
    </profile>



    <!-- 1.13 Build Profile -->



    <profile>
        <id>1.13</id>

        <build>
            <plugins>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <finalName>com-warfare-2.4.${v}-1.13</finalName>
                    </configuration>
                </plugin> 

            </plugins>
        </build>
    </profile>
</profiles>
</project>