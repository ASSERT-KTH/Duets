<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.rhetorical</groupId>
    <artifactId>com-warfare</artifactId>
    <packaging>jar</packaging>
    <version>RELEASE-2.2.${v}</version>
    <name>COM-Warfare</name>

    <repositories>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <groupId>com.rhetorical</groupId>
            <artifactId>mc-translate</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
            <systemPath>C:/Users/caleb/m2-local-repo/com/rhetorical/mc-translate/mctranslateplusplus.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.rhetorical</groupId>
            <artifactId>mysql-api</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
            <systemPath>C:/Users/caleb/m2-local-repo/com/rhetorical/mysql-api/mysqlapi.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.13.1-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>plugin.yml</include>
                    <include>config.yml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>