<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.mrl.debugger</groupId>
    <artifactId>visual-debugger</artifactId>
    <version>1.0</version>

    <properties>
        <slf4j.version>1.7.12</slf4j.version>
        <maven-compiler-plugin.source>1.8</maven-compiler-plugin.source>
        <maven-compiler-plugin.version>3.3</maven-compiler-plugin.version>
        <maven.jar.plugin.version>2.6</maven.jar.plugin.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.reflections</groupId>
            <artifactId>reflections</artifactId>
            <version>0.9.10</version>
        </dependency>
        <dependency>
            <groupId>math.geom2d</groupId>
            <artifactId>javaGeom</artifactId>
            <version>0.11.1</version>
        </dependency>
        <dependency>
            <groupId>org.uncommons.maths</groupId>
            <artifactId>uncommons-maths</artifactId>
            <version>1.2.1</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>

        <!-- Rescuecore dependencies -->

        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>clear</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>collapse</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>gis2</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>handy</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>human</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>ignition</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>kernel</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>maps</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>misc</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>rescuecore2</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>resq-fire</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>sample</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>standard</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.rescuecore</groupId>
            <artifactId>traffic3</artifactId>
            <version>2.0</version>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${maven.jar.plugin.version}</version>
                    <configuration>
                        <!-- DO NOT include log4j.properties file in your Jar -->
                        <excludes>
                            <exclude>**/log4j.properties</exclude>
                        </excludes>
                        <archive>
                            <manifest>
                                <mainClass>com.mrl.debugger.LaunchMRLViewer</mainClass>
                            </manifest>
                        </archive>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven-compiler-plugin.version}</version>
                    <configuration>
                        <source>${maven-compiler-plugin.source}</source>
                        <target>${maven-compiler-plugin.source}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <repositories>
        <repository>
            <id>my-local-repo</id>
            <url>file://${basedir}/my-repo</url>
        </repository>
    </repositories>
</project>