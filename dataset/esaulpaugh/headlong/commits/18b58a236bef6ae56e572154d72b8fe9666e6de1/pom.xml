<!--                        &lt;!&ndash; 2. Change jmh-core and jmh-generator-annprocess dependency scope from "test" to "compile" &ndash;&gt;-->
<!--                        &lt;!&ndash; 3. Uncomment package phase here vv &ndash;&gt;-->
<!--&lt;!&ndash;                        <phase>package</phase>&ndash;&gt;-->
<!--                        <goals>-->
<!--                            <goal>shade</goal>-->
<!--                        </goals>-->
