<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <name>Slide Set: Batch Processing for ImageJ</name>
  <groupId>edu.emory.cellbio.ijbat</groupId>
  <artifactId>slideset-core</artifactId>
  <version>alpha-2</version>

  <developers>
     <developer>
          <name>Benjamin Nanes</name>
          <email>bnanes@emory.edu</email>
          <organizationUrl>http://cellbio.emory.edu</organizationUrl>
     </developer>
  </developers>

  <!--<parent>
     <groupId>edu.emory.cellbio</groupId>
     <artifactId>bn-ij2</artifactId>
     <version>0</version>
     <relativePath>..</relativePath>
  </parent>-->
  
  <properties>
     <imagej.version>2.0.0-beta-7</imagej.version>
     <scijava.version>1.4.0</scijava.version>
     <imagej1.version>1.48f</imagej1.version>
  </properties>
  
    <dependencies>   
     <!-- ij-core is needed to use ImageJ. -->
     <dependency>
          <groupId>net.imagej</groupId>
          <artifactId>ij-core</artifactId>
          <version>${imagej.version}</version>
     </dependency>

     <!-- ij-data is needed to work with image data. -->
     <dependency>
          <groupId>net.imagej</groupId>
          <artifactId>ij-data</artifactId>
          <version>${imagej.version}</version>
     </dependency>

     <!-- ij-app lets us launch the complete ImageJ application. -->
     <dependency>
          <groupId>net.imagej</groupId>
          <artifactId>ij-app</artifactId>
          <version>${imagej.version}</version>
     </dependency>
     
     <dependency>
          <groupId>net.imagej</groupId>
          <artifactId>ij-ui-swing</artifactId>
          <version>${imagej.version}</version>
     </dependency>
      
    <dependency>
      <artifactId>imglib2-io</artifactId>
      <groupId>net.imglib2</groupId>
      <type>jar</type>
      <version>2.0.0-beta-9</version>
    </dependency>
    
        <dependency>
            <artifactId>sezpoz</artifactId>
            <groupId>net.java.sezpoz</groupId>
            <type>jar</type>
            <version>1.9</version>
        </dependency>
        
        <dependency>
             <artifactId>ij</artifactId>
             <groupId>net.imagej</groupId>
             <type>jar</type>
             <version>${imagej1.version}</version>
        </dependency>
        
        <dependency>
             <artifactId>scijava-common</artifactId>
             <groupId>org.scijava</groupId>
             <type>jar</type>
             <version>${scijava.version}</version>
        </dependency>
        
    </dependencies>
    
    <repositories>
       <repository>
         <id>imagej.releases</id>
         <url>http://maven.imagej.net:8081/content/repositories/releases</url>
       </repository>
       <repository>
         <id>imagej.snapshots</id>
         <url>http://maven.imagej.net:8081/content/repositories/snapshots</url>
       </repository>
  </repositories>
  
  <build>
       <resources>
            <resource>
                 <directory>src/main/resources</directory>
                 <filtering>true</filtering>
            </resource>
            <resource>
                <directory>target/site</directory>
                <filtering>false</filtering>
                <targetPath>edu/emory/cellbio/ijbat/docs</targetPath>
            </resource>
       </resources>
       
       <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                </configuration>
            </plugin>
            
            <plugin>
                 <groupId>org.apache.maven.plugins</groupId>
                 <artifactId>maven-assembly-plugin</artifactId>
                 <version>2.4</version>
                 <configuration>
                      <descriptors>
                          <descriptor>assembly-descriptor.xml</descriptor>
                      </descriptors>
                 </configuration>
                 <executions>
                      <execution>
                           <id>assembly</id>
                           <phase>package</phase>
                           <goals>
                                <goal>single</goal>
                           </goals>
                      </execution>
                 </executions>
            </plugin>
            
       </plugins>
       
  </build>
  
  <reporting>
      <plugins>  
           <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>2.7</version>
                <reportSets>
                     <reportSet>
                          <reports>
                          </reports>
                     </reportSet>
                </reportSets>
           </plugin>
      </plugins>
  </reporting>
    
</project>
