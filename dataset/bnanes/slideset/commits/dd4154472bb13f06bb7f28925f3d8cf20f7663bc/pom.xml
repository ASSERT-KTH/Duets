<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <name>Slide Set: Batch Processing for ImageJ</name>
  <groupId>edu.emory.cellbio.ijbat</groupId>
  <artifactId>slideset-core</artifactId>
  <version>1.4.4_</version>

  <developers>
     <developer>
          <name>Benjamin Nanes</name>
          <email>bnanes@emory.edu</email>
          <organizationUrl>http://cellbio.emory.edu</organizationUrl>
     </developer>
  </developers>
  
  <properties>
     <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
     <imagej.version>2.0.0-rc-69</imagej.version>
     <imagej.legacy.version>0.35.2</imagej.legacy.version>
     <imagej.ui.version>0.22.0</imagej.ui.version>
     <scijava.version>2.76.1</scijava.version>
     <scifo.version>0.37.3</scifo.version>
     <imagej1.version>1.52n</imagej1.version>
     <trainable.segmentation.version>3.2.33</trainable.segmentation.version>
  </properties>
  
    <dependencies>
        
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej</artifactId>
            <type>jar</type>
            <version>${imagej.version}</version>
        </dependency>
        
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej-legacy</artifactId>
            <type>jar</type>
            <version>${imagej.legacy.version}</version>
        </dependency>
        
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej-ui-swing</artifactId>
            <type>jar</type>
            <version>${imagej.ui.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>scifio</artifactId>
            <groupId>io.scif</groupId>
            <type>jar</type>
            <version>${scifo.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>sezpoz</artifactId>
            <groupId>net.java.sezpoz</groupId>
            <type>jar</type>
            <version>1.9</version>
        </dependency>
        
        <dependency>
             <artifactId>ij</artifactId>
             <groupId>net.imagej</groupId>
             <type>jar</type>
             <version>${imagej1.version}</version>
        </dependency>
        
        <dependency>
             <artifactId>scijava-common</artifactId>
             <groupId>org.scijava</groupId>
             <type>jar</type>
             <version>${scijava.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>Trainable_Segmentation</artifactId>
            <groupId>sc.fiji</groupId>
            <type>jar</type>
            <version>${trainable.segmentation.version}</version>
        </dependency>
        
    </dependencies>
    
    <repositories>
        <repository>
                <id>scijava.public</id>
                <url>https://maven.scijava.org/content/groups/public</url>
        </repository>
  </repositories>
  
  <build>
       <resources>
            <resource>
                 <directory>src/main/resources</directory>
                 <filtering>true</filtering>
            </resource>
            <resource>
                <directory>target/site</directory>
                <excludes>
                    <exclude>apidocs/*</exclude>
                    <exclude>apidocs/**/*</exclude>
                </excludes>
                <filtering>false</filtering>
                <targetPath>edu/emory/cellbio/ijbat/docs</targetPath>
            </resource>
       </resources>
       
       <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                </configuration>
                <executions>
                    <execution>
                        <id>build-docs-site</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>site</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
            <plugin>
                 <groupId>org.apache.maven.plugins</groupId>
                 <artifactId>maven-assembly-plugin</artifactId>
                 <version>2.4</version>
                 <configuration>
                      <descriptors>
                          <descriptor>assembly-descriptor.xml</descriptor>
                      </descriptors>
                 </configuration>
                 <executions>
                      <execution>
                           <id>assembly</id>
                           <phase>package</phase>
                           <goals>
                                <goal>single</goal>
                           </goals>
                      </execution>
                 </executions>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <configuration>
                    <show>private</show>
                    <additionalparam>-Xdoclint:none</additionalparam>
                </configuration>
                <executions>
                    <execution>
                        <id>javadoc</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>javadoc</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>javadoc-package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
       </plugins>
       
  </build>
  
  <reporting>
      <plugins>  
           <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>2.7</version>
                <reportSets>
                     <reportSet>
                          <reports>
                          </reports>
                     </reportSet>
                </reportSets>
           </plugin>
      </plugins>
  </reporting>
    
</project>
