<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.gmail.timaaarrreee</groupId>
    <artifactId>mineload</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>MineloadPlugin</name>
    <url>http://timatooth.com</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
  
    <repositories>
        <repository>
            <id>bukkit-repo</id>
            <url>http://repo.bukkit.org/content/groups/public</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.0</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
  
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
    
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.5.1-R0.2</version>
            <optional>false</optional>
        </dependency>
        
        <!-- shouldn't really do this but the HTTP download method sucked -->
        <dependency>
            <groupId>com.alecgorge.minecraft.jsonapi</groupId>
            <artifactId>JSONAPI</artifactId>
            <version>4.3.4</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/JSONAPI.jar</systemPath>
        </dependency>
        
        <dependency>
            <groupId>com.alecgorge.minecraft.jsonapi</groupId>
            <artifactId>LWC</artifactId>
            <version>4.3.2-B3</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/LWC.jar</systemPath>
        </dependency>
    </dependencies>
</project>
