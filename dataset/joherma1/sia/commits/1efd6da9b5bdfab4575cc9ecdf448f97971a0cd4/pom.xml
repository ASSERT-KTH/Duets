        </license>
    </licenses>
    <developers>
        <developer>
            <id>joherma1</id>
            <name>Jose Antonio Hernandez Martinez</name>
            <email>joherma1@gmail.com</email>
            <url>https://github.com/joherma1</url>
            <organization>sia-sysreg</organization>
            <roles>
                <role>developer</role>
