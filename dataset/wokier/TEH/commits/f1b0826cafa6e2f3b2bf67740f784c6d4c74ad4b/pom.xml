   <groupId>com.googlecode</groupId>
   <artifactId>teh</artifactId>
   <version>0.0.1-SNAPSHOT</version>

   <build>
      <plugins>
         <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.0.2</version>
            <configuration>
               <source>1.5</source>
               <target>1.5</target>
            </configuration>
         </plugin>
      </plugins>
   </build>
   
   <dependencies>
   	<dependency>
