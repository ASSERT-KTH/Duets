   		<version>2.5</version>
   	</dependency>
   	<dependency>
   		<groupId>org.hamcrest</groupId>
   		<artifactId>hamcrest-all</artifactId>
   		<version>1.1</version>
         <scope>test</scope>
   	</dependency>
   	<dependency>
   		<groupId>junit</groupId>
   		<artifactId>junit</artifactId>
   		<version>4.5</version>
   		<scope>test</scope>
   	</dependency>
   </dependencies>
</project>