<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>jahia-modules</artifactId>
        <groupId>org.jahia.modules</groupId>
        <version>7.0.0.0-SNAPSHOT</version>
		<relativePath/>
    </parent>
    <artifactId>myconnections</artifactId>
    <name>Jahia My Connections</name>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <description>This is a module for running on a Jahia server.</description>
    <scm>
        <connection>scm:git:git@github.com:Jahia/JahiApp-MyConnections.git</connection>
        <url>scm:git:git@github.com:Jahia/JahiApp-MyConnections.git</url>
        <developerConnection>scm:git:git@github.com:Jahia/JahiApp-MyConnections.git</developerConnection>
    </scm>
    <repositories>
        <repository>
            <id>jahia-public</id>
            <name>Jahia Public Repository</name>
            <url>https://devtools.jahia.com/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
			<scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet.jsp</groupId>
            <artifactId>jsp-api</artifactId>
			<scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>social-lib</artifactId>
            <version>2.0.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Jahia-Depends>search,profile,social,tasks,skins,default-skins</Jahia-Depends>
                        <Jahia-Module-Type>profileModule</Jahia-Module-Type>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
