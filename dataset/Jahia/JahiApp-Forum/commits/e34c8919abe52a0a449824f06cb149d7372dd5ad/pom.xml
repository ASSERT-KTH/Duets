<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jahia.modules</groupId>
    <artifactId>jahia-modules</artifactId>
    <version>8.0.0.0</version>
  </parent>
  <artifactId>forum</artifactId>
  <version>4.0.0-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>Jahia Forum</name>
  <description>These are the custom templates (jahiaForum) for running on a Jahia server.</description>
  <scm>
    <connection>scm:git:git@github.com:Jahia/JahiApp-Forum.git</connection>
    <developerConnection>scm:git:git@github.com:Jahia/JahiApp-Forum.git</developerConnection>
    <url>scm:git:git@github.com:Jahia/JahiApp-Forum.git</url>
    <tag>HEAD</tag>
  </scm>
  <properties>
    <require-capability>osgi.extender;filter:="(osgi.extender=org.jahia.bundles.blueprint.extender.config)"</require-capability>
    <jahia-module-signature>MCsCEyjUwHG6BpbwIXKLW+ob7683ugoCFCvXuLdY/JClrDUSwIFSlbk1FKGs</jahia-module-signature>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>jahia-public</id>
      <name>Jahia Public Repository</name>
      <url>https://devtools.jahia.com/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-descriptor</id>
            <goals>
              <goal>attach-descriptor</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Jahia-Depends>default,rating,grid,skins,default-skins</Jahia-Depends>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
