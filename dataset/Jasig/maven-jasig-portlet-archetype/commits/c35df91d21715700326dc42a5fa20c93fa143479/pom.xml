<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
    <parent>
        <groupId>org.jasig.parent</groupId>
        <artifactId>jasig-parent</artifactId>
        <version>30</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jasig.portlet.archetype</groupId>
    <artifactId>jsr286-archetype</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>JSR 286 Archetype</name>

    <scm>
        <connection>scm:svn:https://source.jasig.org/sandbox/portlet-archetypes/jasig-portlet-286/trunk</connection>
        <developerConnection>scm:svn:https://source.jasig.org/sandbox/portlet-archetypes/jasig-portlet-286/trunk</developerConnection>
        <url>https://developer.jasig.org/source/browse/jasigsvn/portlet-archetypes/jasig-portlet-286/trunk</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                    <excludes>
                        <exclude>target/**</exclude>
                        <exclude>pom.xml.*</exclude>
                        <exclude>release.properties</exclude>
                        <exclude>LICENSE</exclude>
                        <exclude>NOTICE</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
