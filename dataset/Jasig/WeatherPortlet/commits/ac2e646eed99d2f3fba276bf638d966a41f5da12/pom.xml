    <description>Jasig Weather Portlet</description>
    <url>${jasig-site-base}/WeatherPortlet/${project.version}</url>

    <scm>
        <connection>scm:git:git@github.com:Jasig/WeatherPortlet.git</connection>
        <developerConnection>scm:git:git@github.com:Jasig/WeatherPortlet.git</developerConnection>
        <url>scm:git:git@github.com:Jasig/WeatherPortlet.git</url>
