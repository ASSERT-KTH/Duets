    <scm>
        <connection>scm:svn:https://www.ja-sig.org/svn/sandbox/WeatherPortlet/trunk</connection>
        <developerConnection>scm:svn:https://www.ja-sig.org/svn/sandbox/WeatherPortlet/trunk</developerConnection>
        <url>http://developer.jasig.org/source/browse/jasigsvn/sandbox/WeatherPortlet/trunk</url>
    </scm>
    
    <distributionManagement>
        <site>
            <id>developer.jasig</id>
            <url>${jasig-site-dist-base}/WeatherPortlet/${project.version}</url>
        </site>
    </distributionManagement>
    
    <issueManagement>
        <url>${jasig-issues-base}/WPT</url>
        <system>${jasig-issues-system}</system>
    </issueManagement>
    
	<properties>
