	<version>0.0.58-SNAPSHOT</version>
	<name>Hecuba</name>
	<description>An abstraction over available Apache Cassandra clients</description>
	<url>http://github.com/WizeCommerce/hecuba</url>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
