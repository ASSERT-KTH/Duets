				      <groupId>org.aspectj</groupId>
				      <artifactId>aspectjrt</artifactId>
				      <version>1.6.3</version>
				    </dependency>
				    <dependency>
				      <groupId>org.aspectj</groupId>
				      <artifactId>aspectjtools</artifactId>
				      <version>1.6.3</version>
				    </dependency>
				  </dependencies>
				  <executions>
				    <execution>
				      <goals>
				        <goal>compile</goal>
				    <goal>test-compile</goal>
				      </goals>
				    </execution>
				  </executions>
				  <configuration>
				    <aspectLibraries>
				    <aspectLibrary>
				      <groupId>org.springframework</groupId>
				      <artifactId>spring-aspects</artifactId>
				      </aspectLibrary>
				    </aspectLibraries>
				    <source>1.6</source>
				    <target>1.6</target>
				  </configuration>
				</plugin>
        		
        		
        	</plugins>
