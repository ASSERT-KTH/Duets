			<version>2.3.1</version>
			<scope>provided</scope>
		</dependency>

		<!-- 添加jtl支持 -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>1.2</version>
		</dependency>
		<!-- 添加Junit的支持 -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
