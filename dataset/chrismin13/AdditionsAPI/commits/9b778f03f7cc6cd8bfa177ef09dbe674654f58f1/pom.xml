<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.chrismin13</groupId>
    <artifactId>AdditionsAPI</artifactId>
    <version>1.2.2-SNAPSHOT</version>
    <name>Additions API</name>
    <description>Custom Items and Textures for Minecraft 1.9+ Spigot Servers! No Mods!</description>

    <properties>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
    </properties>

    <dependencies>

        <!-- https://mvnrepository.com/artifact/commons-io/commons-io -->
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>

        <!-- If you are compiling this from the GitHub Repo, you must first install the Yamakaja Runtime Transformer local Maven repo by following the instructions on its Github page -->
        <dependency>
            <groupId>me.yamakaja.runtimetransformer</groupId>
            <artifactId>api</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>

        <!-- If you are compiling this from the GitHub Repo, you must first install the Yamakaja Runtime Transformer local Maven repo by following the instructions on its Github page -->
        <dependency>
            <groupId>me.yamakaja.runtimetransformer</groupId>
            <artifactId>agent</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <!-- If you are compiling this from the GitHub Repo, change systemPath to a Spigot jar of that version that is located on your computer. THere is no maven repo that satisfies the dependencies in NMS, this is the best solution -->
        <dependency>
            <groupId>Spigot</groupId>
            <artifactId>org.spigotmc</artifactId>
            <version>1.12</version>
            <scope>system</scope>
            <systemPath>E:/Chris' OneDrive/OneDrive/Eclipse Workspace/Test Server/spigot-1.12.jar</systemPath>
        </dependency>

    </dependencies>


</project>