<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>relex</groupId>
  <artifactId>relex</artifactId>
  <packaging>jar</packaging>
  <version>0.10.1</version>
  <name>relex</name>
  <url>http://maven.apache.org</url>
  <build>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <testSourceDirectory>${basedir}/src/java_test</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org</groupId>
      <artifactId>linkgrammar</artifactId>
      <version>4.3.6</version>
    </dependency>
    <dependency>
      <groupId>net.didion</groupId>
      <artifactId>jwnl</artifactId>
      <version>1.3.3</version>
    </dependency>
    <dependency>
      <groupId>opennlp</groupId>
      <artifactId>tools</artifactId>
      <version>1.3.0</version>
    </dependency>
    <dependency>
      <groupId>opennlp</groupId>
      <artifactId>maxent</artifactId>
      <version>2.4.0</version>
    </dependency>
    <dependency>
      <groupId>gate</groupId>
      <artifactId>gate</artifactId>
      <version>4.0</version>
    </dependency>
  </dependencies>
</project>
