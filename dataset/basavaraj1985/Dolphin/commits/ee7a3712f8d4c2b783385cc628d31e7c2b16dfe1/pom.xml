	<properties>
		<!-- <maven.test.error.ignore>true</maven.test.error.ignore> -->
		<!-- <maven.test.failure.ignore>true</maven.test.failure.ignore> -->
	</properties>

	<build>
		<testSourceDirectory>src</testSourceDirectory>
		<resources>
			<resource>
				<directory>resources</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source />
					<target />
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.17</version>
				<configuration>
					<!--debugForkedProcess>true</debugForkedProcess -->
					<testErrorIgnore>true</testErrorIgnore>
					<testFailureIgnore>true</testFailureIgnore>
					<argLine>-Xmx1024m</argLine>
					<suiteXmlFiles>
						<suiteXmlFile>resources/${testngFile}</suiteXmlFile>
					</suiteXmlFiles>
					<verbose>true</verbose>
					<groups>${includeGroups}</groups>
					<excludedGroups>${excludeGroups}</excludedGroups>

					<systemPropertyVariables>
						<baseUrl>${baseUrl}</baseUrl>
						<intl>${intl}</intl>
						<browser>${browser}</browser>
						<additionalParams>${additionalParams}</additionalParams>
						<logLink>${BUILD_URL}artifact/Reports/testLog.html</logLink>
					</systemPropertyVariables>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<doctitle>My API for ${project.name} ${project.version}</doctitle> <!-- Used by javadoc:javadoc goal -->
					<windowtitle>My API for ${project.name} ${project.version}</windowtitle> <!-- Used by javadoc:javadoc goal -->
					<testDoctitle>My Test API for ${project.name} ${project.version}</testDoctitle> <!-- Used by javadoc:test-javadoc goal -->
					<testWindowtitle>My Test API for ${project.name} ${project.version}</testWindowtitle> <!-- Used by javadoc:test-javadoc goal -->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.0-alpha-1</version>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>${basedir}/Reports/MetaData/${intl}_briefSummary.properties</file>
							</files>
							<quiet>true</quiet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.googlecode.velocity-maven-plugin</groupId>
				<artifactId>velocity-maven-plugin</artifactId>
				<version>1.0.0</version>
				<configuration>
					<outputDirectory>target/surefire-reports</outputDirectory>
					<templateFiles>
						<directory>resources/configuration/mail</directory>
						<includes>
							<include>report.html</include>
						</includes>
					</templateFiles>
					<templateValues>
						<property>
							<name>baseUrl</name>
							<value>${baseUrl}</value>
						</property>
						<property>
							<name>INTL</name>
							<value>${intl}</value>
						</property>
						<property>
							<name>failed</name>
							<value>${failed}</value>
						</property>
						<property>
							<name>failedMethods</name>
							<value>${failedMethods}</value>
						</property>
						<property>
							<name>passed</name>
							<value>${passed}</value>
						</property>
						<property>
							<name>passedMethods</name>
							<value>${passedMethods}</value>
						</property>
						<property>
							<name>skipped</name>
							<value>${skipped}</value>
						</property>
						<property>
							<name>skippedMethods</name>
							<value>${skippedMethods}</value>
						</property>
						<property>
							<name>total</name>
							<value>${total}</value>
						</property>
						<property>
							<name>totalMethodCount</name>
							<value>${totalMethodCount}</value>
						</property>
						<property>
							<name>OverallFailurePercentage</name>
							<value>${OverallFailurePercentage}</value>
						</property>
						<property>
							<name>MethodFailurePercentage</name>
							<value>${MethodFailurePercentage}</value>
						</property>
						<property>
							<name>RedDeltaMethods</name>
							<value>${RedDeltaMethods}</value>
						</property>
						<property>
							<name>StagnantFailures</name>
							<value>${StagnantFailures}</value>
						</property>
						<property>
							<name>FailureBasedReport</name>
							<value>${FailureBasedReport}</value>
						</property>
						<property>
							<name>GreenDeltaMethods</name>
							<value>${GreenDeltaMethods}</value>
						</property>
						<property>
							<name>additionalParams</name>
							<value>${additionalParams}</value>
						</property>
						<property>
							<name>IncludedGroups</name>
							<value>${IncludedGroups}</value>
						</property>
						<property>
							<name>ExcludedGroups</name>
							<value>${ExcludedGroups}</value>
						</property>
						<property>
							<name>buildURL</name>
							<value>${BUILD_URL}</value>
						</property>
						<property>
							<name>buildNumber</name>
							<value>${BUILD_NUMBER}</value>
						</property>
						<property>
							<name>svnRevision</name>
							<value>${SVN_REVISION}</value>
						</property>
						<property>
							<name>bucket</name>
							<value>${bucket}</value>
						</property>
					</templateValues>
				</configuration>
				<executions>
					<execution>
						<id>velocity id</id>
						<phase>test</phase>
						<goals>
							<goal>velocity</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>ch.fortysix</groupId>
				<artifactId>maven-postman-plugin</artifactId>
				<configuration>
					<failonerror>false</failonerror>
					<from>testerdolfin@gmail.com</from>
					<!-- <subject>Dolphin Report #${BUILD_NUMBER} Râˆ†: ${RedDeltaMethodCount} ${intl} env:${baseUrl}</subject> -->
					<subject>Dolphin Report env:${baseUrl}</subject>
					<failonerror>false</failonerror>
					<mailhost>smtp.gmail.com</mailhost>
					<mailport>465</mailport>
					<mailssl>true</mailssl>
					<mailAltConfig>true</mailAltConfig>
					<multipartSupported>true</multipartSupported>
					<mailcontenttype>text/html</mailcontenttype>
					<mailuser>testerdolfin@gmail.com</mailuser>
					<mailpassword>testerdolfin123</mailpassword>
					<htmlMessageFile>target/surefire-reports/report.html</htmlMessageFile>
					<failonerror>false</failonerror>
					<receivers>
						<receiver>${mailTo}</receiver>
					</receivers>
					<fileSets>
						<fileSet>
							<directory>${basedir}/target/surefire-reports/</directory>
							<includes>
								<include>emailable-report.html</include>
							</includes>
						</fileSet>
					</fileSets>
				</configuration>
				<executions>
					<execution>
						<id>send a mail</id>
						<phase>test</phase>
						<goals>
							<goal>send-mail</goal>
						</goals>
						<inherited>false</inherited>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

