      <id>PoslavskySV</id>
      <email>stvlpos@mail.ru</email>
      <name>Poslavsky Stanislav</name>
      <organization>MiLaboratory</organization>
      <organizationUrl>https://milaboratory.com/</organizationUrl>
      <roles>
        <role>architect</role>
        <role>developer</role>
        <role>tester</role>
        <role>documentation</role>
      </roles>
      <timezone>UTC+04:00</timezone>
