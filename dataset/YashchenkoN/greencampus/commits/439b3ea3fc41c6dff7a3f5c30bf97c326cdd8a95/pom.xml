    <packaging>war</packaging>

    <properties>
        <spring.version>4.3.0.RELEASE</spring.version>
        <hibernate.version>4.3.5.Final</hibernate.version>
        <spring.security>4.1.0.RELEASE</spring.security>
        <spring.social>1.1.4.RELEASE</spring.social>
