<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>twigkit</groupId>
    <artifactId>cachalot</artifactId>
    <version>1.6</version>
    <packaging>jar</packaging>
    <name>cachalot</name>
    <description>Guice/AOP annotation to cache access to methods, and skip invocation for cached return value.
    </description>

    <url>http://github.com/mrolafsson/cachalot</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>http://github.com/mrolafsson/cachalot</url>
    </scm>

    <organization>
        <name>TwigKit</name>
        <url>http://twigkit.com</url>
    </organization>

    <developers>
        <developer>
            <id>mr.olafsson</id>
            <name>Hjortur Stefan Olafsson</name>
            <email>mr.olafsson@gmail.com</email>
            <url>http://www.linkedin.com/in/mrolafsson/</url>
            <organization>TwigKit</organization>
            <organizationUrl>http://twigkit.com</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>

    <!-- Repositories -->
    <repositories>
        <repository>
            <id>repo.twigkit.com</id>
            <name>TwigKit</name>
            <url>http://twigkit.artifactoryonline.com/twigkit/repo/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
                <checksumPolicy>warn</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>


    <!-- Distribution management -->
    <distributionManagement>
        <repository>
            <id>repo.twigkit.com-releases</id>
            <name>TwigKit Releases</name>
            <url>http://twigkit.artifactoryonline.com/twigkit/release</url>
        </repository>
        <snapshotRepository>
            <id>repo.twigkit.com-snapshots</id>
            <name>TwigKit Snapshots</name>
            <url>http://twigkit.artifactoryonline.com/twigkit/snapshot</url>
            <uniqueVersion>true</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.1</version>
        </dependency>

        <!-- Unit Testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>

        <!-- Guice -->
        <dependency>
            <groupId>com.google.inject</groupId>
            <artifactId>guice</artifactId>
            <version>3.0</version>
        </dependency>

        <!-- ehcache -->
        <dependency>
            <groupId>net.sf.ehcache</groupId>
            <artifactId>ehcache-core</artifactId>
            <version>2.5.2</version>
        </dependency>
    </dependencies>
</project>
