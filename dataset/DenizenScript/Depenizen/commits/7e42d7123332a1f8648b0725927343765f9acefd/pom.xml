            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <type>jar</type>
            <scope>compile</scope>
            <version>${craftbukkit.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
