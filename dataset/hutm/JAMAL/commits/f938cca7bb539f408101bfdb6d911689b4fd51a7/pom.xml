<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.jamal</groupId>
    <artifactId>jamal</artifactId>
    <packaging>jar</packaging>
    <version>2.3-SNAPSHOT</version>
    <name>jamal</name>
    <url>http://jamal.khadkevich.org</url>


    <repositories>
        <repository>
            <id>khadkevich</id>
            <url>http://www.khadkevich.org/repository</url>
        </repository>
    </repositories>

    <distributionManagement>
        <snapshotRepository>
            <id>repo-snapshot</id>
            <name>Snapshots repository</name>
            <url>${env.MAVEN_ARTIFACTORY}</url>
        </snapshotRepository>
        <repository>
            <id>repo-release</id>
            <name>Release repository</name>
            <url>${env.MAVEN_ARTIFACTORY}</url>
        </repository>
    </distributionManagement>

    <scm>
        <connection>scm:git:git://github.com/hutm/JAMAL.git</connection>
        <developerConnection>scm:git:git://github.com/hutm/JAMAL.git</developerConnection>
        <tag>HEAD</tag>
        <url>https://github.com/hutm/JAMAL.git</url>
    </scm>

    <dependencies>

        <dependency>
            <groupId>com.mathworks.jmi</groupId>
            <artifactId>jmi</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.8</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <dependencies>
                    <dependency>
                        <groupId>sun</groupId>
                        <artifactId>tools</artifactId>
                        <version>1.0</version>
                        <scope>system</scope>
                        <systemPath>
                            ${java.home}/../lib/tools.jar
                        </systemPath>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>rmic</id>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <rmic verify="true" debug="on"
                                      classpathref="maven.compile.classpath"
                                      base="${project.build.directory}/classes"
                                      includes="**/*Impl.class"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>com.jamal.client.Jamal</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>


        </plugins>
    </build>

</project>
