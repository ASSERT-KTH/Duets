<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>codoc</groupId>
	<artifactId>codoc</artifactId>
	<version>0.0.2</version>
	<name>CODOC</name>
	<description>Compression of HTS coverage data</description>


	<repositories>

		<repository>
			<id>local-file-repo</id>
			<name>LOCAL Maven Repository</name>
			<url>file:///home/niko/Desktop/projects/repository/</url>
			<releases>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		
		<repository>
			<id>cibiv-repo</id>
			<name>CIBIV Maven Repository</name>
			<url>http://aristoteles.cibiv.univie.ac.at/artifactory/repo/</url>
			<releases>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<repository>
			<id>apache-repo-releases</id>
			<url>https://repository.apache.org/content/repositories/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>

		<repository>
			<id>apache-repo-snapshots</id>
			<url>https://repository.apache.org/content/repositories/snapshots/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>

		<repository>
			<id>mvnrepository</id>
			<name>http://mvnrepository.com/</name>
			<url>http://mvnrepository.com/</url>
		</repository>

	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>test-jar</id>
						<phase>package</phase>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- package with external dependencies, see http://acs.lbl.gov/~ksb/Scratch/Maven_notes.html#jar -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/main/mvn-assemblies/dist.xml</descriptor>
					</descriptors>

					<archive>
						<manifest>
							<mainClass>at.cibiv.codoc.Main</mainClass>
							<packageName>at.cibiv.codoc</packageName>
							<addClasspath>true</addClasspath>
						</manifest>
						<manifestEntries>
							<mode>development</mode>
							<url>http://purl.org/bgraph/codoc/</url>
							<author>niko.popitsch@univie.ac.at</author>
						</manifestEntries>
						<!-- uncomment to use a custom manifest -->
						<!-- manifestFile>src/main/mvn-assemblies/MANIFEST.MF</manifestFile -->
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>

				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

	<dependencies>

		<dependency>
			<groupId>cibiv</groupId>
			<artifactId>ngs-tools</artifactId>
			<version>0.0.1</version>
		</dependency>

		<dependency>
			<groupId>igv</groupId>
			<artifactId>igv</artifactId>
			<version>20130628</version>
			<scope>test</scope>
			<exclusions>
				<!-- exclude sam and picard as it conflicts -->
				<exclusion>
					<groupId>sam</groupId>
					<artifactId>sam</artifactId>
				</exclusion>
				<exclusion>
					<groupId>picard</groupId>
					<artifactId>picard</artifactId>
				</exclusion>
			</exclusions>
		</dependency>



	</dependencies>

	<profiles>
		<!-- define a profile -->
		<profile>
			<id>env-dev</id>
			<activation>
				<property>
					<name>env</name>
					<value>dev</value>
				</property>
			</activation>
			<properties>
				<project.version>${project.version}</project.version>
			</properties>
		</profile>
	</profiles>

</project>