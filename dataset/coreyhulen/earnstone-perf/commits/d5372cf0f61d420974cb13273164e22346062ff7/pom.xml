<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.earnstone.perf</groupId>
  <artifactId>eperf</artifactId>
  <version>0.6-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>eperf</name>
  <description>Java performance counters that are fast, simple, easy to use, and thread-safe (did I mention fast and simple).</description>
  <url>https://github.com/earnstone/eperf</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <issueManagement>
  	<system>Github Issues</system>
  	<url>https://github.com/earnstone/eperf/issues</url>
  </issueManagement>
  <inceptionYear>2011</inceptionYear>
  <scm> 
  	<connection>scm:git:git@github.com:earnstone/eperf.git</connection>
  	<developerConnection>scm:git:git@github.com:earnstone/eperf.git</developerConnection>
  	<url>scm:git:git@github.com:earnstone/eperf.git</url>
  </scm>
  <distributionManagement>
	<repository>
		<id>repo</id>
		<url>file:///maven-repo/releases</url>
	</repository>
	<snapshotRepository>
		<id>snapshot-repo</id>
		<url>file:///maven-repo/snapshots</url>
	</snapshotRepository>
</distributionManagement>
  <organization>
  	<name>Earnstone Corporation</name>
  	<url>http://www.earnstone.com</url>
  </organization>  
  <repositories>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>com.sun.jdmk</groupId>
    	<artifactId>jmxtools</artifactId>
    	<version>1.2.1</version>
    	<scope>compile</scope>
    </dependency>
  </dependencies>
</project>
