<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.toile-libre.libe</groupId>
	<artifactId>athg2sms</artifactId>
	<version>1.6.1.2</version>
	<name>Anything With Sms</name>
	<packaging>apk</packaging>
	<description>App to play with your sms</description>
	<build>
		<directory>bin</directory>
		<outputDirectory>bin/classes</outputDirectory>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>test</testSourceDirectory>
		<testOutputDirectory>bin/test-classes</testOutputDirectory>
		<resources>
			<resource>
				<directory>src</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>test</directory>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>com.simpligility.maven.plugins</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<extensions>true</extensions>
				<version>4.4.3</version>
				<configuration>
					<sdk>
						<platform>25</platform>
					</sdk>
					<sign>
						<debug>false</debug>
					</sign>
					<emulator>
						<avd>25</avd>
						<wait>10000</wait>
					</emulator>
					<run>
						<debug>false</debug>
					</run>
					<resourceDirectory>${basedir}/res</resourceDirectory>
					<assetsDirectory>${basedir}/assets</assetsDirectory>
					<androidManifestFile>${basedir}/AndroidManifest.xml</androidManifestFile>
					<genDirectory>${basedir}/gen</genDirectory>
					<genDirectoryAidl>${basedir}/gen</genDirectoryAidl>
					<nativeLibrariesDirectory>${basedir}/libs</nativeLibrariesDirectory>
					<unpackedLibsFolder>${basedir}/bin/unpacked-libs</unpackedLibsFolder>
					<excludeJarResources>
						<excludeJarResource>.*\.jar$</excludeJarResource>
					</excludeJarResources>
					<artifactSet>
						<excludes>
							<exclude>com.google.android:android</exclude>
						</excludes>
					</artifactSet>
					<zipalign>
						<verbose>false</verbose>
						<inputApk>${project.build.directory}/${project.build.finalName}.apk</inputApk>
						<outputApk>${project.build.directory}/${project.build.finalName}-aligned.apk</outputApk>
						<skip>false</skip>
					</zipalign>
					<apkDebug>false</apkDebug>
					<release>true</release>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<configuration>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<id>signing</id>
						<goals>
							<goal>sign</goal>
							<goal>verify</goal>
						</goals>
						<phase>package</phase>
						<inherited>true</inherited>
						<configuration>
							<arguments>
						  		<argument>-sigalg</argument><argument>SHA1withRSA</argument>
						    		<argument>-digestalg</argument><argument>SHA1</argument>
						    	</arguments>
							<archiveDirectory></archiveDirectory>
							<includes>
								<include>bin/*.apk</include>
							</includes>
							<keystore>../libe.keystore</keystore>
							<keypass>${secret.keypass}</keypass>
							<storepass>${secret.storepass}</storepass>
							<alias>libekeystore</alias>
							<verbose>false</verbose>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>support-v4</artifactId>
			<version>23.4.0</version>
			<type>aar</type>
		</dependency>
		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>appcompat-v7</artifactId>
			<version>23.4.0</version>
			<type>aar</type>
		</dependency>
		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>design</artifactId>
			<version>23.4.0</version>
			<type>aar</type>
		</dependency>
		<dependency>
			<groupId>com.github.mifmif</groupId>
			<artifactId>generex</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>4.1.1.4</version>
			<scope>system</scope>
			<systemPath>${ANDROID_HOME}/platforms/android-23/android.jar</systemPath>
		</dependency>
	</dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<profiles>
		<profile>
			<id>publisher</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<android.publisher.google.email>366481881527-compute@developer.gserviceaccount.com</android.publisher.google.email>
				<android.publisher.google.p12>../libe.p12</android.publisher.google.p12>
			</properties>
		</profile>
	</profiles>
</project>
