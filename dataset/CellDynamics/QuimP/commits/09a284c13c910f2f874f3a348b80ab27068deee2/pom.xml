      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changes-plugin</artifactId>
        <version>2.12</version>
        <configuration>
          <tracUser>baniuk</tracUser>
          <query>status=closed&amp;component=QuimP-BOA&amp;or&amp;status=closed&amp;component=QuimP-ANA&amp;or&amp;status=closed&amp;component=QuimP-RandomW&amp;or&amp;status=closed&amp;component=QuimP-DIC&amp;or&amp;status=closed&amp;component=QuimP-ECMM&amp;or&amp;status=closed&amp;component=QuimP-Plugin&amp;or&amp;status=closed&amp;component=QuimP-Q&amp;order=changetime</query>
        </configuration>
        <reportSets>
          <reportSet>
            <reports>
              <!--<report>trac-report</report>-->
              <report>changes-report</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.10.4</version>
        <configuration>
          <show>private</show>
          <quiet>false</quiet>
          <additionalparam>-Xdoclint:none</additionalparam>
        </configuration>
      </plugin>
    </plugins>
