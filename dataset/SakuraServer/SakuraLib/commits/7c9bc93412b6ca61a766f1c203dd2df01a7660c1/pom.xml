<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.syamn</groupId>
  <artifactId>SakuraLib</artifactId>
  <version>1.4.6-0.1</version>
  <name>Sakura Utils Library</name>
  <description>SakuraServer Plugin Utilities Library</description>
  
  <!-- Properties -->
  <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <!-- CI -->
  <ciManagement>
      <system>jenkins</system>
      <url>http://ci.sakura-server.net/</url>
  </ciManagement>
  
  <!-- Repo multiple modules will be using it -->
  <repositories>
      <!-- Bukkit -->
      <repository>
          <id>Bukkit Official</id>
          <url>http://repo.bukkit.org/content/groups/public/</url>
      </repository>
  </repositories>
  
  <dependencies>
      <!-- Bukkit -->
      <dependency>
          <groupId>org.bukkit</groupId>
          <artifactId>bukkit</artifactId>
          <version>1.4.6-R0.3-SNAPSHOT</version>
          <scope>provided</scope>
      </dependency>
      <!-- CraftBukkit -->
      <dependency>
          <groupId>org.bukkit</groupId>
          <artifactId>craftbukkit</artifactId>
          <version>1.4.6-R0.3-SNAPSHOT</version>
          <scope>provided</scope>
      </dependency>
  </dependencies>
  
  <!-- Build -->
  <build>
      <!-- Plugins -->
      <!-- Maven Compiler -->
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-compiler-plugin</artifactId>
              <version>2.3.2</version>
          </plugin>
          <!-- Maven Source -->
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-source-plugin</artifactId>
              <version>2.2</version>
              <executions>
                  <execution>
                      <id>attach-sources</id>
                      <phase>package</phase>
                      <goals>
                          <goal>jar</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>
          <!-- Maven JavaDoc -->
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-javadoc-plugin</artifactId>
              <version>2.8.1</version>
              <executions>
                  <execution>
                      <id>attach-javadocs</id>
                      <goals>
                          <goal>jar</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>
      </plugins>
  </build>
</project>