<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<relativePath>../rascal-pom-parent/pom.xml</relativePath>
		<groupId>org.rascalmpl</groupId>
		<artifactId>rascal-pom-parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>rascal</artifactId>
	<version>0.6.2.qualifier</version>
	<packaging>eclipse-plugin</packaging>

	<scm>
		<developerConnection>scm:git:https://github.com/cwi-swat/rascal.git</developerConnection>
	</scm>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
		  <resource>
		    <directory>src</directory>
		    <excludes>
		      <exclude>**/*.java</exclude>
		      <exclude>**/*.class</exclude>
		    </excludes>
		  </resource>
		  <resource>
		    <directory>.</directory>
		    <filtering>false</filtering>
		    <includes>
		      <include>plugin.xml</include>
		      <include>META-INF/RASCAL.MF</include>
		    </includes>
		  </resource>
		</resources>
		<testSourceDirectory>test</testSourceDirectory>
		<testResources>
			<testResource>
				<directory>test</directory>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/*.class</exclude>
				</excludes>
			</testResource>
		</testResources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<executions>
					<execution>
						<id>test</id>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<argLine>
						-Xmx1g
						-Xss128m
					</argLine>
					<includes>
						<include>**/org/rascalmpl/test/AllSuite.java</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- Used to trigger upstream projects in Jenkins  -->
	<dependencies>
		<dependency>
			<groupId>org.eclipse.imp</groupId>
			<artifactId>org.eclipse.imp.pdb.values</artifactId>
			<version>0.4.1.qualifier</version>
		</dependency>
	</dependencies>

</project>
