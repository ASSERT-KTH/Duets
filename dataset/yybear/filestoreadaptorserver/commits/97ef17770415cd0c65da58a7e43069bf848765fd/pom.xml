	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>fileStoreAdaptorServer</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jackson.version>2.2.3</jackson.version>
		<slf4j.version>1.7.5</slf4j.version>
        <logback.version>1.0.12</logback.version>
		<project.repository.host>http://192.168.1.182:8081/nexus/content</project.repository.host>
		<io.netty>4.0.13.Final</io.netty>
	</properties>
	
	<repositories>
		<repository>
			<id>nexus-public</id>
			<name>Public Repository</name>
			<url>${project.repository.host}/repositories/public</url>
		</repository>
		<repository>
			<id>nexus-thirdparty</id>
			<name>3rd Party Repository</name>
			<url>${project.repository.host}/repositories/thirdparty</url>
		</repository>
		<repository>
			<id>nexus-releases</id>
			<name>Release Repository</name>
			<url>${project.repository.host}/repositories/releases</url>
		</repository>
		<repository>
			<id>nexus-snapshots</id>
			<name>Snapshot Repository</name>
			<url>${project.repository.host}/repositories/snapshots</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

