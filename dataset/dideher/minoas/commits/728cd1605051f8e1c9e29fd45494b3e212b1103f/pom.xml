<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <version>development-SNAPSHOT</version>
  <groupId>gr.sch.ira.minoas</groupId>
  <artifactId>minoas</artifactId>
  <packaging>war</packaging>
  <name>minoas</name>
  <inceptionYear>20010</inceptionYear>

  <developers>
    <developer>
      <name>Filippos Slavik</name>
      <id>slavikos</id>
      <email>filippos@slavik.gr</email>
      <organization>Sch.gr</organization>
      <roles>
        <role>Project Core Developer</role>
      </roles>
    </developer>
  </developers>


  <properties>
    <servlet-api.version>2.5</servlet-api.version>
    <seam-version>2.2.1.Final</seam-version>

  </properties>

  <profiles>
    <profile>
      <id>PRE</id>
      <properties>
        <development-build>false</development-build>

      </properties>
    </profile>

    <profile>
      <id>PRO</id>
      <properties>
        <development-build>false</development-build>

      </properties>
    </profile>
  </profiles>

  <dependencyManagement>
    <dependencies>

      <dependency>
        <groupId>javax.servlet</groupId>
        <artifactId>servlet-api</artifactId>
        <version>${servlet-api.version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-seam</artifactId>
        <version>${seam-version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-debug</artifactId>
        <version>${seam-version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-excel</artifactId>
        <version>${seam-version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-ioc</artifactId>
        <version>${seam-version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-main</artifactId>
        <version>${seam-version}</version>
      </dependency>
        
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-pdf</artifactId>
        <version>${seam-version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-remoting</artifactId>
        <version>${seam-version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-ui</artifactId>
        <version>${seam-version}</version>
      </dependency>

    </dependencies>
  </dependencyManagement>


  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.3.2</version>
          <configuration>
            <source>1.5</source>
            <target>1.5</target>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <configuration>
            <archive>
              <index>true</index>
              <manifest>
                <addClasspath>false</addClasspath>
              </manifest>

            </archive>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>


  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-seam</artifactId>
    </dependency>
    
    <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-debug</artifactId>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-excel</artifactId>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-ioc</artifactId>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-main</artifactId>
      </dependency>
        
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-pdf</artifactId>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-remoting</artifactId>
      </dependency>
      
      <dependency>
        <groupId>org.jboss.seam</groupId>
        <artifactId>jboss-ui</artifactId>
       </dependency>
      
  </dependencies>


  <repositories>
    <repository>
      <id>jboss-public-repository-group</id>
      <name>JBoss Public Maven Repository Group</name>
      <url>http://repository.jboss.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
        <updatePolicy>never</updatePolicy>
      </snapshots>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>jboss-public-repository-group</id>
      <name>JBoss Public Maven Repository Group</name>
      <url>http://repository.jboss.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
        <updatePolicy>never</updatePolicy>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
