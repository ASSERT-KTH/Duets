<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.sonarsource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>23</version>
        <relativePath/>
    </parent>
    <groupId>com.synaptix</groupId>
    <artifactId>sonar-gitlab-plugin</artifactId>
    <version>1.1.0-SNAPSHOT</version>
    <name>SonarQube :: GitLab Plugin</name>
    <packaging>sonar-plugin</packaging>
    <inceptionYear>2015</inceptionYear>
    <organization>
        <name>Synaptix-Labs</name>
        <url>http://www.synaptix-labs.com</url>
    </organization>
    <properties>
        <jdk.min.version>1.8</jdk.min.version>

        <java-gitlab-api.version>1.3.0</java-gitlab-api.version>
        <license.mailto>contact@synaptix-labs.com</license.mailto>

        <sonar.version>5.1</sonar.version>
        <sonar.pluginName>GitLab</sonar.pluginName>
        <sonar.pluginClass>com.synaptix.sonar.plugins.gitlab.GitLabPlugin</sonar.pluginClass>

        <animal-sniffer.signature.groupId>org.kaazing.mojo.signature</animal-sniffer.signature.groupId>
        <animal-sniffer.signature.artifactId>java18</animal-sniffer.signature.artifactId>
        <animal-sniffer.signature.version>1.0</animal-sniffer.signature.version>
    </properties>
    <developers>
        <developer>
            <id>gabriel.allaigre@synaptix-labs.com</id>
            <name>Gabriel Allaigre</name>
            <email>gabriel.allaigre@synaptix-labs.com</email>
        </developer>
    </developers>
    <scm>
        <url>https://gitlab.synaptix-labs.com/gabriel.allaigre/sonar-gitlab-plugin</url>
        <connection>scm:git:https://gitlab.synaptix-labs.com/gabriel.allaigre/sonar-gitlab-plugin.git</connection>
    </scm>
    <ciManagement>
        <system>gitlab-ci</system>
        <url>https://gitlab.synaptix-labs.com/ci/projects/12</url>
    </ciManagement>
    <issueManagement>
        <system>gitlab</system>
        <url>https://gitlab.synaptix-labs.com/gabriel.allaigre/sonar-gitlab-plugin/issues</url>
    </issueManagement>
    <repositories>
        <repository>
            <id>synaptix-releases-repository</id>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <url>http://nexus.synaptix-labs.com/content/groups/public_release</url>
        </repository>
        <repository>
            <id>synaptix-snapshots-repository</id>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <url>http://nexus.synaptix-labs.com/content/groups/public_snapshots</url>
        </repository>
    </repositories>
    <build>
        <pluginManagement>
            <plugins>
                <!-- Plugins ordered by shortname (archetype, assembly ...) -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>animal-sniffer-maven-plugin</artifactId>
                    <version>${version.animal-sniffer.plugin}</version>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.codehaus.sonar</groupId>
            <artifactId>sonar-plugin-api</artifactId>
            <version>${sonar.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <version>2.0.3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.4</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.3.2</version>
        </dependency>
        <dependency>
            <groupId>com.synaptix</groupId>
            <artifactId>java-gitlab-api</artifactId>
            <version>${java-gitlab-api.version}</version>
        </dependency>
    </dependencies>
    <distributionManagement>
        <repository>
            <id>synaptix-releases-repository</id>
            <url>http://nexus.synaptix-labs.com/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>synaptix-snapshots-repository</id>
            <url>http://nexus.synaptix-labs.com/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
</project>