      <pluginRepositories>
          <pluginRepository>
              <id>central</id>
                  <url>https://repo1.maven.org/maven2</url>
                      <releases>
                          <enabled>true</enabled>
                          </releases>
                      </pluginRepository>
                      <pluginRepository>
                          <id>spring-releases</id>
                              <url>https://repo.spring.io/libs-release</url>
                              </pluginRepository>
                          </pluginRepositories>
                      -->
</project>
