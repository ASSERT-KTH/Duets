<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.bergerkiller.bukkit</groupId>
  <artifactId>BKCommonLib</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>BKCommonLib</name>
  <url>http://dev.bukkit.org/server-mods/bkcommonlib/</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <repositories>
    <repository>
      <id>vault-repo</id>
      <url>http://ci.herocraftonline.com/plugin/repository/project/Vault/LastSuccessful/repository/</url>
    </repository>
    <repository>
      <id>craftbukkit-nonversioned</id>
      <name>craftbukkit-nonversioned</name>
      <url>http://repo.xemsdoom.com/content/repositories/craftbukkit-nonversioned</url>
    </repository>
  </repositories>

  <!-- Needed to include ASM -->
  <scm>
    <connection>scm:svn:http://svn.apache.org/repos/asf/maven/plugins/tags/maven-shade-plugin-1.4</connection>
    <developerConnection>scm:svn:https://svn.apache.org/repos/asf/maven/plugins/tags/maven-shade-plugin-1.4</developerConnection>
    <url>http://svn.apache.org/viewvc/maven/plugins/tags/maven-shade-plugin-1.4</url>
  </scm>
  
  <dependencies>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
      <version>3.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm-commons</artifactId>
      <version>3.2</version>
      <scope>compile</scope>
    </dependency>
  	<dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>craftbukkit</artifactId>
      <version>1.4.5-R0.3-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.milkbowl.vault</groupId>
      <artifactId>Vault</artifactId>
      <version>1.2.21-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.kellerkindt</groupId>
      <artifactId>ShowcaseStandalone</artifactId>
      <version>1.43</version>
      <scope>system</scope>
      <systemPath>c:/Eclipse dependencies/ShowcaseStandalone.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.narrowtux</groupId>
      <artifactId>Showcase</artifactId>
      <version>0.7.9</version>
      <scope>system</scope>
      <systemPath>c:/Eclipse dependencies/Showcase.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>me.snowleo</groupId>
      <artifactId>BleedingMobs</artifactId>
      <version>3.7</version>
      <scope>system</scope>
      <systemPath>c:/Eclipse dependencies/BleedingMobs.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <!-- Build -->
  <build>
    <!-- Resources -->
    <resources>
	  <resource>
	    <directory>src/main/java/</directory>
		<includes>
          <include>**</include>
		</includes>
        <!-- Don't add source files to target jar -->
	    <excludes>
		  <exclude>com/bergerkiller/bukkit/**/*.java</exclude>
		</excludes>
	  </resource>
	</resources>
	<defaultGoal>clean install</defaultGoal>
	<!-- Plugins -->
	<plugins>
      <!-- ASM Commons -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.objectweb.asm</pattern>
                  <shadedPattern>com.bergerkiller.bukkit.common.libs.org.objectweb.asm</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
	  <!-- Compiler plugin -->
	  <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-compiler-plugin</artifactId>
		<version>2.4</version>
		<configuration>
		  <source>1.6</source>
		  <target>1.6</target>
		  <showWarnings>true</showWarnings>
		  <showDeprecation>true</showDeprecation>
		</configuration>
      </plugin>
    </plugins>
  </build>
</project>
