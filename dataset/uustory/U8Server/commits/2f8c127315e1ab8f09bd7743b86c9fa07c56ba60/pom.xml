            <version>1.1.8</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/jars/sdk/fastjson-1.1.8.jar</systemPath>
        </dependency-->

        <!-- lib/jars/sdk -->
        <dependency>
            <groupId>com.163</groupId>
            <artifactId>javapns</artifactId>
            <version>1.6.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/jars/sdk/javapns-jdk16-163.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.lenovo</groupId>
            <artifactId>lenovo_pay_sign</artifactId>
            <version>1.0.0.5</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/jars/sdk/lenovo_pay_sign-1.0.0.5.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.nearme</groupId>
            <artifactId>oppo_oauth</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/jars/sdk/oppo_oauth_1.0.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.lewan</groupId>
            <artifactId>lewanPay</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/jars/sdk/lewanPay.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.xy</groupId>
            <artifactId>xysignature</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/jars/sdk/signature.jar</systemPath>
