				<configuration>
					<archive>
						<manifest>
							<packageName>org.scijava.nativelib</packageName>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>license-maven-plugin</artifactId>
