<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>

	<groupId>com.github.mwmahlberg.sparkjava</groupId>
	<artifactId>spark-template-thymeleaf</artifactId>
	<version>0.0.1</version>

	<name>spark-template-thymeleaf</name>
	<description>Thymeleaf Template View Route implementation for Spark</description>
	<url>https://github.com/mwmahlberg/spark-template-thymeleaf</url>
	<inceptionYear>2014</inceptionYear>
	<developers>
		<developer>
			<id>mwmahlberg</id>
			<name>Markus W. Mahlberg</name>
			<email>markus.mahlberg@icloud.com</email>
			<url>https://github.com/mwmahlberg</url>
			<timezone>+2</timezone>
			<roles>
				<role>developer</role>
			</roles>
		</developer>
	</developers>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
			<comments>A business-friendly OSS license</comments>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:https://github.com/mwmahlberg/spark-template-thymeleaf.git</connection>
		<developerConnection>scm:git:git@github.com:mwmahlberg/spark-template-thymeleaf.git</developerConnection>
		<url>https://github.com/mwmahlberg/spark-template-thymeleaf</url>
	</scm>
	<issueManagement>
		<url>https://github.com/mwmahlberg/spark-template-thymeleaf/issues</url>
	</issueManagement>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.sparkjava</groupId>
			<artifactId>spark-core</artifactId>
			<version>2.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.thymeleaf</groupId>
			<artifactId>thymeleaf</artifactId>
			<version>2.1.3.RELEASE</version>
		</dependency>
		<dependency>
			<groupId>nz.net.ultraq.thymeleaf</groupId>
			<artifactId>thymeleaf-layout-dialect</artifactId>
			<version>1.2.5</version>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.10.1</version>
					<configuration>
						<configuration>
							<links>
								<link>http://www.thymeleaf.org/apidocs/thymeleaf/2.1.3.RELEASE/</link>
							</links>
						</configuration>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-javadoc</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>external.atlassian.jgitflow</groupId>
				<artifactId>jgitflow-maven-plugin</artifactId>
				<version>1.0-m4.3</version>
				<configuration>
					<!-- see goals wiki page for configuration options -->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.sonatype.plugins</groupId>
				<artifactId>nexus-staging-maven-plugin</artifactId>
				<version>1.6.3</version>
				<extensions>true</extensions>
				<configuration>
					<serverId>ossrh</serverId>
					<nexusUrl>https://oss.sonatype.org/</nexusUrl>
					<autoReleaseAfterClose>false</autoReleaseAfterClose>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>sign-artifacts</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>gpg.passphrase</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<version>1.5</version>
						<executions>
							<execution>
								<id>sign</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<ciManagement>
		<system>Travis</system>
		<url>https://travis-ci.org/mwmahlberg/spark-template-thymeleaf</url>
	</ciManagement>
	<mailingLists>
		<mailingList>
			<name>sparkjava (parent project)</name>
			<post>sparkjava@googlegroups.com</post>
			<subscribe>sparkjava+subscribe@googlegroups.com</subscribe>
			<unsubscribe>sparkjava+unsubscribe@googlegroups.com</unsubscribe>
			<archive>https://groups.google.com/forum/#!forum/sparkjava</archive>
		</mailingList>
		<mailingList>
			<name>Thymeleaf user forum</name>
			<post />
			<subscribe />
			<unsubscribe />
			<archive>http://forum.thymeleaf.org</archive>
		</mailingList>
	</mailingLists>
	<reporting>
		<plugins>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<!-- Necessary, as the site plugin does not obey the configuration of 
						the pluginManagement section -->
					<links>
						<link>http://www.thymeleaf.org/apidocs/thymeleaf/2.1.3.RELEASE/</link>
					</links>
				</configuration>
				<reportSets>
					<reportSet>
						<reports>
							<report>javadoc</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
</project>
