<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.dkhenry</groupId>
	<artifactId>MineJMX</artifactId>
	<version>1.2.1-SNAPSHOT</version>
	<name>MineJMX</name>
	<description>Plugin to Allow reporting of Stats via JMX </description>
	<url>https://github.com/dkhenry/Minecraft-JMX-Plugin</url>
	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/dkhenry/Minecraft-JMX-Plugin/issues</url>
	</issueManagement>
	<scm>
	  <connection>scm:git:git@github.com:dkhenry/Minecraft-JMX-plugin.git</connection>
	  <developerConnection>scm:git:git@github.com:dkhenry/Minecraft-JMX-plugin.git</developerConnection>
	  <url>scm:git:git@github.com:dkhenry/Minecraft-JMX-plugin.git</url>
	</scm>
	<repositories>
            <repository>
               <snapshots>
                    <enabled>true</enabled>
               </snapshots>
               <id>Bukkit Central</id>
               <name>release</name>
                    <url>http://repo.bukkit.org/content/repositories/releases/</url>
           </repository>           
        </repositories>
	
	<dependencies>
		<dependency>
			<groupId>org.xerial</groupId>
			<artifactId>sqlite-jdbc</artifactId>
			<version>3.6.16</version>
		</dependency>		
		<dependency>
  			<groupId>org.bukkit</groupId>
  			<artifactId>craftbukkit</artifactId>
  			<version>1.2.3-R0.2</version>  			
		</dependency>
	</dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>         
		<plugins>
		    <plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-release-plugin</artifactId>
			    <version>2.0-beta-9</version>
		    </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>org.xerial:sqlite-jdbc</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<finalName>MineJMX-1.2</finalName>
	</build>
</project>
