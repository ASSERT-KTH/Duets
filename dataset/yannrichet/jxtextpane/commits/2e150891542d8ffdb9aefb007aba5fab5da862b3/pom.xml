<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- =========================================================== -->
	<!-- POM relationships -->
	<!-- =========================================================== -->

	<!-- Maven coordinates -->
	<groupId>org.irsn</groupId>
	<artifactId>org-irsn-jxtextpane</artifactId>
	<version>1.0.1-SNAPSHOT</version>


	<!-- POM inheritence -->
	<parent>
		<groupId>org.keridwen</groupId>
		<artifactId>keridwen-super-pom</artifactId>
		<version>2.0.11-SNAPSHOT</version>
	</parent>

	<!-- Dependencies -->
	<dependencies>
		<dependency>
			<groupId>org.swinglabs</groupId>
			<artifactId>swingx-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.github.yannrichet</groupId>
			<artifactId>JMathArray</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>com.github.yannrichet</groupId>
			<artifactId>JMathPlot</artifactId>
			<version>1.0.1</version>
		</dependency>
	</dependencies>

	<!-- =========================================================== -->
	<!-- General project information -->
	<!-- =========================================================== -->

	<!-- General project information -->
	<name>JX Text Pane</name>
	<description>JX Text Pane</description>

	<organization>
		<name>IRSN</name>
		<url>http://www.irsn.fr</url>
	</organization>
	<inceptionYear>2015</inceptionYear>

	<!-- Project licenses -->
	<licenses>
		<license>
			<name>TODO</name>
			<url>TODO</url>
		</license>
	</licenses>

	<!-- Development team -->
	<developers></developers>

	<!-- External contributors -->
	<contributors></contributors>

	<!-- =========================================================== -->
	<!-- Build settings -->
	<!-- =========================================================== -->

	<!-- Packaging -->
	<packaging>bundle</packaging>

	<!-- Build -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Import-Package>
							*,
							javax.swing,
						</Import-Package>
						<Private-Package>
							javax.swing,
						</Private-Package>
						<Export-Package>
							org.irsn.javax.swing*,
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- Maven version prerequisite -->
	<prerequisites>
		<maven>2.0.6</maven>
	</prerequisites>
</project>