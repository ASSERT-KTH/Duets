<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.emfjson</groupId>
    <artifactId>emfjson-samples</artifactId>
    <version>0.13.0</version>
    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <maven.compiler.fork>true</maven.compiler.fork>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <modules>
        <module>emfjson-jackson-samples</module>
        <module>emfjson-gwt-sample</module>
        <module>emfjson-cdo-sample</module>
        <module>emfjson-couchdb-sample</module>
        <module>emfjson-mongo-sample</module>
        <module>emfjson-jersey-sample</module>
        <module>emfjson-spring-sample</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.emfjson</groupId>
                <artifactId>emfjson-jackson</artifactId>
                <version>0.13.0</version>
            </dependency>
            <dependency>
                <groupId>org.emfjson</groupId>
                <artifactId>emfjson-gwt</artifactId>
                <version>0.13.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
