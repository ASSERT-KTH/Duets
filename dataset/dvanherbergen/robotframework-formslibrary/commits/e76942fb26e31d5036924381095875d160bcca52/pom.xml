<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.robotframework</groupId>
	<artifactId>formslibrary</artifactId>
	<version>0.9.3</version>

	<name>robotframework-formslibrary</name>
	<description>A Robot Framework library for Oracle Forms UI testing</description>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.4.3</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createDependencyReducedPom>false</createDependencyReducedPom>
							<transformers>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<manifestEntries>
										<Premain-Class>org.robotframework.remoteswinglibrary.agent.JavaAgent</Premain-Class>
									</manifestEntries>
								</transformer>
							</transformers>
							<artifactSet>
								<includes>
									<include>org.robotframework:remoteswinglibrary</include>
								</includes>
							</artifactSet>
							<filters>
								<filter>
									<artifact>org.robotframework:remoteswinglibrary</artifact>
									<excludes>
										<exclude>org/robotframework/remoteswinglibrary/agent/ServerThread.class</exclude>
										<exclude>org/robotframework/remoteswinglibrary/agent/JavaAgent.class</exclude>
										<exclude>org/robotframework/swing/keyword/tab/*.class</exclude>
										<exclude>org/robotframework/swing/keyword/checkbox/*.class</exclude>
										<exclude>org/robotframework/swing/keyword/radiobutton/*.class</exclude>
										<exclude>org/robotframework/swing/keyword/table/*.class</exclude>
										<exclude>RemoteSwingLibrary.py</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.robotframework</groupId>
				<artifactId>robotframework-maven-plugin</artifactId>
				<version>1.4.6</version>
				<executions>
					<execution>
						<id>xml-spec</id>
						<phase>package</phase>
						<goals>
							<goal>libdoc</goal>
						</goals>
						<configuration>
							<libdoc>
								<version>${project.version}</version>
								<outputFile>formslibrary-${project.version}.xml</outputFile>
								<extraPathDirectories>
									<extraPathDirectory>${project.build.directory}/formslibrary-${project.version}.jar</extraPathDirectory>
								</extraPathDirectories>
								<libraryOrResourceFile>FormsLibrary</libraryOrResourceFile>
							</libdoc>
						</configuration>
					</execution>
					<execution>
						<id>html-doc</id>
						<phase>package</phase>
						<goals>
							<goal>libdoc</goal>
						</goals>
						<configuration>
							<libdoc>
								<version>${project.version}</version>
								<outputFile>formslibrary-${project.version}.html</outputFile>
								<extraPathDirectories>
									<extraPathDirectory>${project.build.directory}/formslibrary-${project.version}.jar</extraPathDirectory>
								</extraPathDirectories>
								<libraryOrResourceFile>FormsLibrary</libraryOrResourceFile>
							</libdoc>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.12</version>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>target/robotframework/libdoc/formslibrary-${project.version}.html</file>
									<type>html</type>
									<classifier>libdoc</classifier>
								</artifact>
								<artifact>
									<file>target/robotframework/libdoc/formslibrary-${project.version}.xml</file>
									<type>xml</type>
									<classifier>libdoc</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<id>key-gen</id>
						<phase>compile</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>org.robotframework.formslibrary.KeywordGenerator</mainClass>
							<arguments>
								<argument>target/classes/FormsLibrary_keywords.py</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.robotframework</groupId>
			<artifactId>remoteswinglibrary</artifactId>
			<version>2.1.3</version>
		</dependency>
	</dependencies>
	<distributionManagement>
		<repository>
			<id>libs-release-local</id>
			<name>libs-release-local</name>
			<url>http://localhost:8081/artifactory/libs-release-local</url>
		</repository>
	</distributionManagement>

</project>