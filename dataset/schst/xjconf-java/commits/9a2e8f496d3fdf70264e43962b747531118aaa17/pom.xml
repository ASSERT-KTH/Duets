<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>net.schst</groupId>
  <artifactId>XJConf</artifactId>
  <version>0.12.5-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>XJConf</name>

  <properties>
    <project.description>Beschreibung</project.description>
  </properties>

  <developers>
    <developer>
      <id>schst</id>
      <name>Stephan Schmidt</name>
      <email>stephan.schmidt@1und1.de</email>
      <roles>
        <role>lead</role>
      </roles>
    </developer>
    <developer>
      <id>ffray</id>
      <name>Florian Fray</name>
      <email>florian.fray@1und1.de</email>
    </developer>
  </developers>

  <scm>
    <connection>scm:svn:https://svn.1and1.org/svn/PFX/order-modules/xjconf/trunk</connection>
    <developerConnection>scm:svn:https://svn.1and1.org/svn/PFX/order-modules/xjconf/trunk</developerConnection>
    <url>https://svn.1and1.org/svn/PFX/order-modules/xjconf/trunk</url>
  </scm>

  <build>
    <plugins>
      <plugin>
         <groupId>org.apache.felix</groupId>
         <artifactId>maven-bundle-plugin</artifactId>
         <extensions>true</extensions>
         <version>2.0.1</version>
         <configuration>
            <instructions>
            </instructions>
         </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <!-- this extra-entry is used to test resources located in foreign locations -->
          <additionalClasspathElements>
            <additionalClasspathElement>src/test/extresources</additionalClasspathElement>
          </additionalClasspathElements>
          <excludes>
            <exclude>**/Examples/*.java</exclude>
          </excludes>
        </configuration>        
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>
