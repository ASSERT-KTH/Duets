<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.owengriffin</groupId>
    <artifactId>reflection-prism</artifactId>
    <version>0.2</version>
    <name>reflection-prism</name>
    <packaging>jar</packaging>
    <description>Implementation of some missing reflection APIs in Android.</description>

    <prerequisites>
        <maven>2</maven>
    </prerequisites>

    <inceptionYear>2010</inceptionYear>

    <scm>
        <connection>scm:git:git://github.com/owengriffin/android-reflection.git</connection>
        <url>scm:git:git://github.com/owengriffin/android-reflection.git</url>
        <developerConnection>scm:git:git://github.com/owengriffin/android-reflection.git</developerConnection>
    </scm>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.5.8</version>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.8.3</version>
        </dependency>
    </dependencies>

    <distributionManagement>
        <repository>
            <id>owengriffin.com</id>
            <name>Repository Name</name>
            <url>scp://owengriffin.com/home/ogriffin/owengriffin.com/public/maven/releases</url>
        </repository>
        <snapshotRepository>
            <id>owengriffin.com</id>
            <name>Repository Name</name>
            <url>scp://owengriffin.com/home/ogriffin/owengriffin.com/public/maven/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

</project>

