<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.googlecode.javacv</groupId>
  <artifactId>procamtracker</artifactId>
  <version>SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>ProCamTracker</name>
  <description>Markerless Interactive Augmented Reality with a Projector and a Color Camera</description>
  <url>http://www.ok.ctrl.titech.ac.jp/~saudet/procamtracker/</url>

  <licenses>
    <license>
      <name>GNU General Public License version 2 (GPLv2)</name>
      <url>http://www.gnu.org/licenses/gpl-2.0.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <developers>
    <developer>
      <name>Samuel Audet</name>
      <email>saudet@ok.ctrl.titech.ac.jp</email>
    </developer>
  </developers>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.build.timestamp.format>yyyyMMddhhmm</maven.build.timestamp.format>
    <netbeans.platform>/usr/share/netbeans/platform12/</netbeans.platform>
    <javacpp.platform>${os.name}-${os.arch}</javacpp.platform>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.googlecode.javacv</groupId>
      <artifactId>javacv</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.googlecode.javacv</groupId>
      <artifactId>javacv</artifactId>
      <version>SNAPSHOT</version>
      <classifier>${javacpp.platform}</classifier>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>boot</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/lib/boot.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>core</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/core/core.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-netbeans-core</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-netbeans-core.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-netbeans-core-output2</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-netbeans-core-output2.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-netbeans-swing-plaf</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-netbeans-swing-plaf.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-actions</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-openide-actions.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-awt</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-openide-awt.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-dialogs</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-openide-dialogs.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-explorer</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-openide-explorer.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-filesystems</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/core/org-openide-filesystems.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-io</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-openide-io.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-modules</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/lib/org-openide-modules.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-nodes</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/modules/org-openide-nodes.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-util</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/lib/org-openide-util.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.netbeans</groupId>
      <artifactId>org-openide-util-lookup</artifactId>
      <version>RELEASE69</version>
      <scope>system</scope>
      <systemPath>${netbeans.platform}/lib/org-openide-util-lookup.jar</systemPath>
    </dependency>
  </dependencies>

  <repositories>
    <!-- Seems to be dead... :( -->
    <repository>
      <id>netbeans</id>
      <name>NetBeans</name>
      <url>http://bits.netbeans.org/maven2/</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.googlecode.javacv.procamtracker.MainFrame</mainClass>
              <addClasspath>true</addClasspath>
            </manifest>
            <manifestEntries>
              <Class-Path>boot-RELEASE69.jar core-RELEASE69.jar org-netbeans-core-RELEASE69.jar org-netbeans-core-output2-RELEASE69.jar org-netbeans-swing-plaf-RELEASE69.jar org-openide-actions-RELEASE69.jar org-openide-awt-RELEASE69.jar org-openide-dialogs-RELEASE69.jar org-openide-explorer-RELEASE69.jar org-openide-filesystems-RELEASE69.jar org-openide-io-RELEASE69.jar org-openide-modules-RELEASE69.jar org-openide-nodes-RELEASE69.jar org-openide-util-RELEASE69.jar org-openide-util-lookup-RELEASE69.jar</Class-Path>
              <Name>com/googlecode/javacv/procamtracker/</Name>
              <Implementation-Title>${project.name}</Implementation-Title>
              <Implementation-Vendor>Samuel Audet</Implementation-Vendor>
              <Implementation-Version>${maven.build.timestamp}</Implementation-Version>
              <Specification-Title>${project.name}</Specification-Title>
              <Specification-Vendor>Samuel Audet</Specification-Vendor>
              <Specification-Version>${maven.build.timestamp}</Specification-Version>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/bin.xml</descriptor>
            <descriptor>src/main/assembly/src.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <!-- If someone knows a better way to do this, please do let me know! -->
  <profiles>
    <profile>
      <id>linux</id>
      <activation>
        <os><name>linux</name></os>
      </activation>
      <properties>
        <os.name>linux</os.name>
      </properties>
    </profile>
    <profile>
      <id>macosx</id>
      <activation>
        <os><name>mac os x</name></os>
      </activation>
      <properties>
        <os.name>macosx</os.name>
      </properties>
    </profile>
    <profile>
      <id>windows</id>
      <activation>
        <os><family>windows</family></os>
      </activation>
      <properties>
        <os.name>windows</os.name>
      </properties>
    </profile>
    <profile>
      <id>i386</id>
      <activation>
        <os><arch>i386</arch></os>
      </activation>
      <properties>
        <os.arch>x86</os.arch>
      </properties>
    </profile>
    <profile>
      <id>i486</id>
      <activation>
        <os><arch>i486</arch></os>
      </activation>
      <properties>
        <os.arch>x86</os.arch>
      </properties>
    </profile>
    <profile>
      <id>i586</id>
      <activation>
        <os><arch>i586</arch></os>
      </activation>
      <properties>
        <os.arch>x86</os.arch>
      </properties>
    </profile>
    <profile>
      <id>i686</id>
      <activation>
        <os><arch>i686</arch></os>
      </activation>
      <properties>
        <os.arch>x86</os.arch>
      </properties>
    </profile>
    <profile>
      <id>amd64</id>
      <activation>
        <os><arch>amd64</arch></os>
      </activation>
      <properties>
        <os.arch>x86_64</os.arch>
      </properties>
    </profile>
    <profile>
      <id>x86-64</id>
      <activation>
        <os><arch>x86-64</arch></os>
      </activation>
      <properties>
        <os.arch>x86_64</os.arch>
      </properties>
    </profile>
  </profiles>

</project>
