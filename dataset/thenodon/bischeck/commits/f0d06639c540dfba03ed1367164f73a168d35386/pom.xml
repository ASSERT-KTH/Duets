	<groupId>org.bischeck.bischeck</groupId>
	<version>2.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>bischeck</name>
	<url>http://www.bischeck.org</url>

	<description>
        Bischeck - dynamic and adaptive monitoring
