<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
	<modelVersion>4.0.0</modelVersion>
	<prerequisites>
		<maven>3.0.0</maven>
	</prerequisites>

	<groupId>org.bischeck.bischeck</groupId>
	<version>1.2.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>bischeck</name>
	<url>http://www.bischeck.org</url>

	<description>
        Bischeck - dynamic and adaptive monitoring
    </description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.target>1.7</maven.compiler.target>
		<maven.compiler.source>1.7</maven.compiler.source>
	</properties>

	<developers>
		<developer>
			<id>andersh</id>
			<name>Anders Håål</name>
			<email>anders.haal@ingby.com</email>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>


	<licenses>
		<license>
			<name>GNU GPL License 2.0</name>
			<url>http://www.gnu.org/licenses/gpl-2.0.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<connection>scm:svn:http://gforge.ingby.com/svn/bischeck/bischeck/trunk</connection>
		<developerConnection>scm:svn:http://gforge.ingby.com/svn/bischeck/bischeck/trunk</developerConnection>
		<url>http://gforge.ingby.com/gf/project/bischeck/scmsvn</url>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>gforge.ingby.com</system>
		<url>http://gforge.ingby.com/gf/project/bischeck/tracker/</url>
	</issueManagement>


	<repositories>
		<repository>
			<id>maven2</id>
			<name>your custom repo</name>
			<url>http://repo.maven.apache.org/maven2</url>
		</repository>
		<repository>
			<id>pentaho</id>
			<name>your custom repo</name>
			<url>http://repository.pentaho.org/artifactory/repo</url>
		</repository>
	</repositories>



	<dependencies>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.2</version>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-math3</artifactId>
			<version>3.3</version>
		</dependency>

		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-core-asl</artifactId>
			<version>1.9.13</version>
		</dependency>

		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
			<version>1.9.13</version>
		</dependency>

		<dependency>
			<groupId>com.googlecode.jsendnsca</groupId>
			<artifactId>jsendnsca</artifactId>
			<version>2.0.1</version>
		</dependency>

		<dependency>
			<groupId>org.jolokia</groupId>
			<artifactId>jolokia-jvm</artifactId>
			<version>1.2.2</version>
		</dependency>

		<dependency>
			<groupId>org.jetlang</groupId>
			<artifactId>jetlang</artifactId>
			<version>0.2.12</version>
		</dependency>

		<dependency>
			<groupId>jline</groupId>
			<artifactId>jline</artifactId>
			<version>2.12</version>
		</dependency>

		<dependency>
			<groupId>org.quartz-scheduler</groupId>
			<artifactId>quartz</artifactId>
			<version>2.2.1</version>
		</dependency>

		<dependency>
			<groupId>com.codahale.metrics</groupId>
			<artifactId>metrics-core</artifactId>
			<version>3.0.2</version>
		</dependency>

		<dependency>
			<groupId>net.sf.json-lib</groupId>
			<artifactId>json-lib</artifactId>
			<version>2.4</version>
			<classifier>jdk15</classifier>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.7</version>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-pool2</artifactId>
			<version>2.2</version>
		</dependency>


		<dependency>
			<groupId>commons-dbcp</groupId>
			<artifactId>commons-dbcp</artifactId>
			<version>1.4</version>
		</dependency>

		<dependency>
			<groupId>net.ju-n.commons-dbcp-jmx</groupId>
			<artifactId>commons-dbcp-jmx-jdbc4</artifactId>
			<version>0.2.4</version>
		</dependency>

		<dependency>
			<groupId>com.librato.metrics</groupId>
			<artifactId>librato-java</artifactId>
			<version>1.0.4</version>
		</dependency>

		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>1.0.13</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>redis.clients</groupId>
			<artifactId>jedis</artifactId>
			<version>2.6.0</version>
		</dependency>

		<dependency>
			<groupId>gov.nist.math</groupId>
			<artifactId>jama</artifactId>
			<version>1.0.2</version>
		</dependency>

		<dependency>
			<groupId>org.scijava</groupId>
			<artifactId>jep</artifactId>
			<version>2.4.1</version>
			<exclusions>
				<exclusion>
					<artifactId>jama</artifactId>
					<groupId>jama</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- Testing libs -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>6.3.1</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.perf4j</groupId>
			<artifactId>perf4j</artifactId>
			<version>0.9.16</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<version>10.11.1.1</version>
			<scope>test</scope>
		</dependency>


	</dependencies>


	<build>
		<testSourceDirectory>src/main/test/java/</testSourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>


            <!-- Bischeck jar -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.ingby.socbox.bischeck.Execute</mainClass>
							<classpathPrefix>lib/</classpathPrefix>
							<addClasspath>true</addClasspath>
						</manifest>
						<manifestEntries>
							<Mode>prod</Mode>
							<Url>${project.url}</Url>
							<SCM-Revision>${buildNumber}</SCM-Revision>
							<!-- <Built-By>${project.developers.[0].id}</Built-By> -->
							<Built-By>andersh</Built-By>
							<Copyright>(C) 2010-2014 Anders Håål, Ingenjörsbyn</Copyright>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>


			<!-- Generate all classes based on schema xsd and xjb directives -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>1.6</version>
				<configuration>
					<quiet>true</quiet>
					<verbose>false</verbose>
					<clearOutputDir>false</clearOutputDir>
					<arguments>-mark-generated</arguments>
				</configuration>
				<executions>

					<execution>
						<id>bischeckSchema</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources</schemaDirectory>
							<schemaFiles>bischeck.xsd</schemaFiles>
							<bindingDirectory>src/main/resources</bindingDirectory>
							<bindingFiles>bischeck.xjb</bindingFiles>
							<outputDirectory>src/main/generated</outputDirectory>
						</configuration>
					</execution>

					<execution>
						<id>propertiesSchema</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources</schemaDirectory>
							<schemaFiles>properties.xsd</schemaFiles>
							<bindingDirectory>src/main/resources</bindingDirectory>
							<bindingFiles>properties.xjb</bindingFiles>
							<outputDirectory>src/main/generated</outputDirectory>
						</configuration>
					</execution>

					<execution>
						<id>urlservicesSchema</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources</schemaDirectory>
							<schemaFiles>urlservices.xsd</schemaFiles>
							<bindingDirectory>src/main/resources</bindingDirectory>
							<bindingFiles>urlservices.xjb</bindingFiles>
							<outputDirectory>src/main/generated</outputDirectory>
						</configuration>
					</execution>

					<execution>
						<id>twenty4thresholdSchema</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources</schemaDirectory>
							<schemaFiles>twenty4threshold.xsd</schemaFiles>
							<bindingDirectory>src/main/resources</bindingDirectory>
							<bindingFiles>twenty4threshold.xjb</bindingFiles>
							<outputDirectory>src/main/generated</outputDirectory>
						</configuration>
					</execution>

					<execution>
						<id>serversSchema</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources</schemaDirectory>
							<schemaFiles>servers.xsd</schemaFiles>
							<bindingDirectory>src/main/resources</bindingDirectory>
							<bindingFiles>servers.xjb</bindingFiles>
							<outputDirectory>src/main/generated</outputDirectory>
						</configuration>
					</execution>

				</executions>
			</plugin>


			<!-- Generate javadoc -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<outputDirectory>${project.build.directory}/javadoc</outputDirectory>
					<doctitle>Bischeck - ${project.version}</doctitle>
					<windowtitle>Bischeck - ${project.version}</windowtitle>
					<bottom>
						Copyright &#169; 2010-2014 Ingeng&ouml;rsbyn
						AB - Anders Haal. All Rights Reserved.
					</bottom>
					<show>public</show>

				</configuration>
			</plugin>


			<!-- Create manuals -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.3.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>doc/lyx2pdf</executable>
							<workingDirectory>doc</workingDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>



			<!-- Get the latest revision from svn -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<doCheck>false</doCheck>
					<doUpdate>false</doUpdate>
				</configuration>
			</plugin>


			<!-- Fix output directory -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.17</version>
				<!-- <configuration> <includes> <include>src/main/test/java/**/*.java</include> 
					</includes> </configuration> -->
			</plugin>

			<!-- Assembly the files -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-4</version>
				<configuration>
					<descriptor>src/assembly/bin.xml</descriptor>
					<finalName>bischeck-${project.version}</finalName>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

	</build>
	<artifactId>bischeck</artifactId>
</project>
