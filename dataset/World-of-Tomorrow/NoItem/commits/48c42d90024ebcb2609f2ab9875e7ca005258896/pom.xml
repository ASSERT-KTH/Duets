<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>net.worldoftomorrow</groupId>
	<artifactId>NoItem</artifactId>
	<version>3.1.2</version>
	<packaging>jar</packaging>

	<name>NoItem</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<repositories>
		<repository>
			<id>CraftBukkit</id>
			<url>http://repo.bukkit.org/content/groups/public</url>
		</repository>
		<repository>
			<id>Vault-Repo</id>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>craftbukkit</artifactId>
			<version>1.7.9-R0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<artifactId>Vault</artifactId>
			<groupId>net.milkbowl.vault</groupId>
			<version>1.3.01</version>
		</dependency>
	</dependencies>
	
	<build>
		<defaultGoal>clean compile package</defaultGoal>
		<sourceDirectory>${basedir}/src/main/java/</sourceDirectory>
		<resources>
			<resource>
				<includes>
					<include>plugin.yml</include>
				</includes>
				<directory>${basedir}/resources/</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<includes>
					<include>messages.yml</include>
					<include>misc.yml</include>
					<include>notify.yml</include>
					<include>armor.yml</include>
					<include>tools.yml</include>
				</includes>
				<directory>${basedir}/resources/</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
</project>
