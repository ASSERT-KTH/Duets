<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <!-- note - the parent being version 10 means this *won't* work with Confluence 2.10 and later,
       due to the Confluence JSON classes being moved around. Change the parent version to 23
       and references to "com.atlassian.confluence.json.*" to "com.atlassian.confluence.json.parser.*"
       in HudsonPluginInfoMacro.java to work with Confluence 2.10 and later.
   -->
  <parent>
    <groupId>com.atlassian.confluence.plugin.base</groupId>
    <artifactId>confluence-plugin-base</artifactId>
    <version>10</version>
  </parent>
  
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jvnet.hudson.confluence.plugins</groupId>
  <artifactId>hudson-plugin-info-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>
  
  <name>Hudson Plugin Info Macro Plugin</name>
  <packaging>atlassian-plugin</packaging>
  <url />
  
  <dependencies>
    <!-- needed to cheat because Confluence itself depends directly on 1.3.3,
	 which isn't available in any public repos. -->
    <dependency>
      <groupId>javax.mail</groupId>
      <artifactId>mail</artifactId>
      <version>1.4.1</version>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-compiler-plugin</artifactId>
	<configuration>
	  <source>1.5</source>
	  <target>1.5</target>
	</configuration>
      </plugin>
    </plugins>
  </build>
  
  <repositories>
    <repository>
      <id>jboss</id>
      <name>jboss</name>
      <url>http://repository.jboss.com/maven2</url>
      <layout>default</layout>
    </repository>
    <repository>
      <id>atlassian-public</id>
      <url>https://maven.atlassian.com/repository/public</url>
      <snapshots>
	<enabled>true</enabled>
      </snapshots>
      <releases>
	<enabled>true</enabled>
      </releases>
    </repository>   
    <repository>
      <id>atlassian-m1-repository</id>
      <url>https://maven.atlassian.com/maven1</url>
      <layout>legacy</layout>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>atlassian-public</id>
      <url>https://maven.atlassian.com/repository/public</url>
      <snapshots>
	<enabled>true</enabled>
      </snapshots>
      <releases>
	<enabled>true</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>
</project>
