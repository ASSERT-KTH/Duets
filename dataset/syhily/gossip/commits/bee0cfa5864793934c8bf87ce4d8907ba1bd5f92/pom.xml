<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>me.yufan.gossip</groupId>
    <artifactId>gossip</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Gossip</name>
    <url>https://gossip.github.io</url>
    <description>A lightweight comment system based on Java</description>

    <licenses>MIT</licenses>

    <scm>
        <developerConnection>scm:git:git://github.com/syhily/gossip</developerConnection>
        <tag>HEAD</tag>
    </scm>
    <issueManagement>https://github.com/syhily/gossip/issues</issueManagement>

    <organization>
        <name>Artistian Programmers</name>
        <url>https://artistian.org</url>
    </organization>

    <developers>
        <developer>
            <name>Syhily</name>
            <email>syhily@gmail.com</email>
            <url>https://yufan.me</url>
        </developer>
    </developers>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm:ss SSS</maven.build.timestamp.format>
        <java.version>1.8</java.version>
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <skipTests>false</skipTests>
    </properties>

    <repositories>
        <repository>
            <id>maven</id>
            <name>Central</name>
            <url>http://repo1.maven.org/maven2</url>
        </repository>

        <repository>
            <id>central</id>
            <name>Central Mirror In China</name>
            <url>http://maven.aliyun.com/nexus/content/repositories/central</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
