<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.dasniko</groupId>
    <artifactId>testcontainers-keycloak</artifactId>
    <version>1.2-SNAPSHOT</version>

    <name>Testcontainers Keycloak</name>
    <description>A Testcontainer implementation for Keycloak SSO.</description>
    <url>https://github.com/dasniko/testcontainers-keycloak</url>

    <developers>
        <developer>
            <id>dasniko</id>
            <name>Niko KÃ¶bler</name>
            <email>niko@n-k.de</email>
            <url>https://www.n-k.de</url>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>MIT</name>
            <url>https://opensource.org/licenses/MIT</url>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/dasniko/testcontainers-keycloak</url>
        <connection>scm:git:git@github.com:dasniko/testcontainers-keycloak.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:dasniko/testcontainers-keycloak.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <system>GitHub Issues</system>
        <url>https://github.com/dasniko/testcontainers-keycloak/issues</url>
    </issueManagement>

    <distributionManagement>
        <repository>
            <id>github-testcontainers-keycloak</id>
            <name>GitHub dasniko Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/dasniko/testcontainers-keycloak</url>
        </repository>
    </distributionManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <testcontainers.version>1.12.3</testcontainers.version>
        <keycloak.version>8.0.1</keycloak.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>testcontainers</artifactId>
            <version>${testcontainers.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-admin-client</artifactId>
            <version>${keycloak.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.2.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <version>4.1.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
