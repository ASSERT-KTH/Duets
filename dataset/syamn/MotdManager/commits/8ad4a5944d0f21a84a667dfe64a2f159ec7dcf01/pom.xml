<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>syam.motdmanager</groupId>
  <artifactId>MotdManager</artifactId>
  <version>1.5-SNAPSHOT</version>
  <name>MotdManager</name>
  <description>CraftBukkit MotdManager Plugin</description>

  <!-- Properties -->
  <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <project.build.number>UNKNOWN</project.build.number>
  </properties>

  <!-- Developer -->
  <developers>
      <developer>
          <id>syamn</id>
          <name>syam</name>
          <email>admin@sakura-server.net</email>
          <url>http://twitter.com/starlightp</url>
          <organization>SakuraServer</organization>
          <organizationUrl>http://sakura-server.net/</organizationUrl>
      </developer>
  </developers>

  <!-- License -->
  <licenses>
      <license>
          <name>GNU Lesser General Public License 3.0</name>
          <url>LICENSE.txt</url>
          <distribution>repo</distribution>
      </license>
  </licenses>

  <!-- SCM -->
  <scm>
      <connection>scm:git:git://github.com/syamn/MotdManager.git</connection>
      <url>https://github.com/syamn/MotdManager.git</url>
      <tag>master</tag>
      <developerConnection>scm:git:git@github.com:syamn/MotdManager.git</developerConnection>
  </scm>

  <!-- CI -->
  <ciManagement>
      <system>jenkins</system>
      <url>http://ci.sakura-server.net/</url>
  </ciManagement>

  <!-- Build -->
  <build>
      <finalName>${project.name}</finalName>
      <sourceDirectory>${basedir}/src/main/java/</sourceDirectory>

      <!-- Plugins -->
      <plugins>
          <!-- Replacer -->
          <plugin>
              <groupId>com.google.code.maven-replacer-plugin</groupId>
              <artifactId>replacer</artifactId>
              <version>1.5.0</version>
              <executions>
                  <execution>
                      <phase>prepare-package</phase>
                      <goals>
                          <goal>replace</goal>
                      </goals>
                  </execution>
              </executions>
              <configuration>
                  <file>target/classes/plugin.yml</file>
                  <replacements>
                      <replacement>
                          <token>version-number-unknown</token>
                          <value>${project.version}-b${project.build.number}</value>
                      </replacement>
                  </replacements>
              </configuration>
          </plugin>
          <!-- Jar Plugin
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-jar-plugin</artifactId>
              <version>2.4</version>
              <configuration>
                  <archive>
                      <manifestEntries>
                      </manifestEntries>
                  </archive>
              </configuration>
          </plugin>-->
          <!-- Maven Source -->
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-source-plugin</artifactId>
              <version>2.2</version>
              <executions>
                  <execution>
                      <id>attach-sources</id>
                      <phase>package</phase>
                      <goals>
                          <goal>jar-no-fork</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>
          <!-- Maven Site -->
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-site-plugin</artifactId>
              <version>3.1</version>
              <configuration>
                  <locales>ja</locales>
                  <inputEncoding>UTF-8</inputEncoding>
                  <outputEncoding>UTF-8</outputEncoding>
              </configuration>
          </plugin>
          <!-- JavaDoc -->
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-javadoc-plugin</artifactId>
              <version>2.8.1</version>
              <executions>
                  <execution>
                      <id>javadoc-jar</id>
                      <phase>verify</phase>
                      <goals>
                          <goal>jar</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>
      </plugins>

      <!-- Resources -->
      <resources>
          <resource>
              <targetPath>.</targetPath>
              <filtering>true</filtering>
              <directory>${basedir}/src/main/resources/</directory>
              <includes>
                  <include>plugin.yml</include>
                  <include>config.yml</include>
              </includes>
          </resource>
      </resources>
  </build>

  <!-- Reporting -->
  <reporting>
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-javadoc-plugin</artifactId>
              <version>2.8.1</version>
              <configuration>
                  <charset>UTF-8</charset>
              </configuration>
          </plugin>
      </plugins>
  </reporting>

  <!-- Repositories -->
  <repositories>
      <!-- Bukkit -->
      <repository>
          <id>Bukkit Official</id>
          <url>http://repo.bukkit.org/content/groups/public/</url>
      </repository>
  </repositories>

  <!-- Dependencies -->
  <dependencies>
      <!-- Bukkit Dependency -->
      <dependency>
          <groupId>org.bukkit</groupId>
          <artifactId>bukkit</artifactId>
          <version>1.6.1-R0.1-SNAPSHOT</version>
          <scope>compile</scope>
      </dependency>
  </dependencies>

  <!-- Profiles -->
  <profiles>
      <profile>
          <id>jenkins</id>
          <activation>
              <property>
                  <name>env.BUILD_NUMBER</name>
              </property>
          </activation>
          <properties>
              <project.build.number>${env.BUILD_NUMBER}</project.build.number>
          </properties>
      </profile>
  </profiles>

</project>