<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.sjl</groupId>
  <artifactId>sjl.io</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>sjl.io</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xsl</include>
          <include>**/*.dtd</include>
          <include>**/*.xml</include>
          <include>**/*.jpg</include>
          <include>**/*.gif</include>
          <include>**/*.vm</include>
          <include>**/*.png</include>
          <include>**/*.js</include>
          <include>**/*.script</include>
          <include>**/*.jwc</include>
          <include>**/*.txt</include>
          <include>**/*.html</include>
          <include>**/*.css</include>
          <include>**/*.rdf</include>
          <include>META-INF/**/*.*</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <targetPath>./</targetPath>
        <directory>src/test/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xsl</include>
          <include>**/*.dtd</include>
          <include>**/*.doc</include>
          <include>**/*.docx</include>
          <include>**/*.rtf</include>
          <include>**/*.xml</include>
          <include>**/*.txt</include>
          <include>**/*.vm</include>
          <include>**/*.bin</include>
          <include>**/*.html</include>
          <include>**/*.js</include>
          <include>**/*.jpg</include>
          <include>**/*.gif</include>
          <include>**/*.bmp</include>
          <include>**/*.pdf</include>
          <include>**/*.png</include>
          <include>**/*.psd</include>
          <include>**/*.tif</include>
          <include>**/*.incd</include>
          <include>**/*.incx</include>
          <include>**/*.rdf</include>
          <include>**/*.zip</include>
          <include>META-INF/**/*.*</include>
        </includes>
      </testResource>
    </testResources>
    <plugins>
      <plugin> 
        <artifactId>maven-eclipse-plugin</artifactId> 
        <configuration> 
          <buildOutputDirectory>./classes</buildOutputDirectory>
          <useProjectReferences>false</useProjectReferences> 
        </configuration> 
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
	
  <dependencies>
    <dependency>
      <groupId>com.sjl</groupId>
      <artifactId>util</artifactId>
      <version>1.0-SNAPSHOT</version>      
    </dependency>
  
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.4</version>
      <scope>test</scope>
    </dependency>
    
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock</artifactId>
      <version>2.5.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-junit4</artifactId>
      <version>2.5.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <version>1.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-library</artifactId>
      <version>1.1</version>
      <scope>test</scope>  
    </dependency>

  </dependencies>
</project>
