<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.sjl</groupId>
  <artifactId>sjl.vector</artifactId>
  <version>0.1</version>
  <packaging>jar</packaging>

  <name>sjl.vector</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
  
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.1</version>
    </dependency>
  
    <!-- Test scoped dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-junit4</artifactId>
      <version>2.5.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-legacy</artifactId>
      <version>2.5.1</version>
      <scope>test</scope>
    </dependency>
    
  </dependencies>   
  
  <build>    
    <sourceDirectory>src/main/java</sourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.java</include>
          <include>**/*.properties</include>
          <include>**/*.xsl</include>
          <include>**/*.dtd</include>
          <include>**/*.xml</include>
          <include>**/*.jpg</include>
          <include>**/*.gif</include>
          <include>**/*.vm</include>
          <include>**/*.png</include>
          <include>**/*.js</include>
          <include>**/*.script</include>
          <include>**/*.jwc</include>
          <include>**/*.txt</include>
          <include>**/*.html</include>
          <include>**/*.css</include>
          <include>**/*.rdf</include>
          <include>META-INF/**/*.*</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <targetPath>./</targetPath>
        <directory>src/test/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xsl</include>
          <include>**/*.dtd</include>
          <include>**/*.doc</include>
          <include>**/*.docx</include>
          <include>**/*.rtf</include>
          <include>**/*.xml</include>
          <include>**/*.txt</include>
          <include>**/*.vm</include>
          <include>**/*.bin</include>
          <include>**/*.html</include>
          <include>**/*.js</include>
          <include>**/*.jpg</include>
          <include>**/*.gif</include>
          <include>**/*.bmp</include>
          <include>**/*.pdf</include>
          <include>**/*.png</include>
          <include>**/*.psd</include>
          <include>**/*.tif</include>
          <include>**/*.incd</include>
          <include>**/*.incx</include>
          <include>**/*.rdf</include>
          <include>**/*.zip</include>
          <include>META-INF/**/*.*</include>
        </includes>
      </testResource>
    </testResources> 
  </build>
</project>
