<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.Ter13</groupId>
    <artifactId>VeryStickyPistons</artifactId>
    <version>0.3a</version>
    <packaging>jar</packaging>
    <name>VeryStickyPistons</name>
    <description>Makes Pistons extra sticky</description>
    <url>https://github.com/TerXIII/Very-Sticky-Pistons</url>
    <developers>
        <developer>
            <name>TerXIII</name>
        </developer>
        <developer>
            <name>Daniel Nelson</name>
            <email>packetcollision@gmail.com</email>
        </developer>
    </developers>
    <properties>
        <netbeans.hint.license>gpl30</netbeans.hint.license>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <repositories>
        <repository>
            <id>bukkit</id>
            <url>http://repo.bukkit.org/content/groups/public</url>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.2.3-R0.3-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
	<sourceDirectory>${basedir}/src</sourceDirectory>
        <resources>
            <resource>
		<targetPath>.</targetPath>
                <filtering>true</filtering>
		<directory>${basedir}/src</directory>
		<includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
        </resources>
	<defaultGoal>clean package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
            </plugin>
            <!-- Add additional classpath entries. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
		<version>2.1</version>
                <configuration>
                    <archive>
                        <addMavenDescriptor>true</addMavenDescriptor>
                        <manifest>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
                    <finalName>VeryStickyPistons</finalName>
                </configuration>
            </plugin>
            <!-- Shade dependencies into the final jar. -->
            <!--
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.5</version>
                <configuration>
                    <artifactSet>
                        <includes>
                            <include>commons-lang:commons-lang</include>
                        </includes>
                    </artifactSet>                
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            -->
        </plugins>
    </build>
</project>
