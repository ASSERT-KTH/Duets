<?xml version="1.0"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.akiban</groupId>
    <artifactId>akiban-persistit</artifactId>
    <packaging>pom</packaging>
    <name>akiban-persistit</name>
    <version>2.1-SNAPSHOT</version>
    <properties>
        <!-- this is the default version number, hudson job sets this to the official number -->
        <BZR_REVISION></BZR_REVISION>
    </properties>
    <distributionManagement>
        <snapshotRepository>
            <id>snapshots</id>
            <name>lib-snapshots-local</name>
            <url>${snapshots.url}</url>
        </snapshotRepository>
        <repository>
            <id>releases</id>
            <name>lib-releases-local</name>
            <url>${releases.url}</url>
        </repository>
    </distributionManagement>
    <modules>
        <module>core</module>
        <module>bench</module>
        <!--<module>examples</module>-->
    </modules>
</project>
