<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.tucottbus.kt.lcars</groupId>
  <artifactId>lcars-wt</artifactId>
  <version>2014.12.08</version>
  <properties>
  	<!-- TODO: only enable next property after all java classes are prepared to be UTF8 encoded -->
    <!--<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>-->
    <jogl.version>2.0-rc9</jogl.version>
  </properties>
  <!--
  <scm>
	<connection>scm:svn:https://svn.code.sf.net/p/lcars-wt/code/trunk</connection>
	<developerConnection>scm:svn:https://svn.code.sf.net/p/lcars-wt/code/trunk/</developerConnection>
	<url>http://svn.code.sf.net/p/lcars-wt/code/trunk</url>
  </scm>
  -->
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jar-plugin</artifactId>
        	<version>2.5</version>
            <configuration>
                <archive>
                    <manifest>
                        <addClasspath>true</addClasspath>
                        <mainClass>de.tucottbus.kt.lcars.LCARS</mainClass>
                    </manifest>
                </archive>
            </configuration>
        </plugin>
      
    </plugins>
  </build> 
  <dependencies>
  	<dependency>
  		<groupId>agile2d</groupId>
  		<artifactId>agile2d</artifactId>
  		<version>3.0.1</version>
  	</dependency>
	<dependency>
		<groupId>com.googlecode.soundlibs</groupId>
		<artifactId>jlayer</artifactId>
		<version>1.0.1-1</version>
	</dependency>
	<dependency>
		<groupId>com.googlecode.soundlibs</groupId>
		<artifactId>mp3spi</artifactId>
		<version>1.9.5-1</version>
	</dependency>
	<dependency>
		<groupId>com.googlecode.soundlibs</groupId>
		<artifactId>tritonus-share</artifactId>
		<version>0.3.7-2</version>
	</dependency>
	<dependency>
		<groupId>org.jogamp.jogl</groupId>
		<artifactId>jogl-all</artifactId>
		<version>2.0-rc9</version>
		<classifier>natives-windows-i586</classifier>
	</dependency>
	<!-- SWT -->
    <dependency>
        <groupId>org.eclipse.swt</groupId>
        <artifactId>org.eclipse.swt.win32.win32.x86</artifactId>
        <version>3.7.2</version>
    </dependency>
	
  </dependencies>
 <repositories>
   <repository>
        <id>swt-repo</id>
        <url>https://swt-repo.googlecode.com/svn/repo/</url>
    </repository>
	<repository>
        <id>jogamp.org</id>
        <url>http://jogamp.org/deployment/maven</url>
    </repository>
	<repository>
        <id>agile2d.sf.net</id>
        <url>http://agile2d.sourceforge.net/maven/</url>
    </repository>
 </repositories>
</project>