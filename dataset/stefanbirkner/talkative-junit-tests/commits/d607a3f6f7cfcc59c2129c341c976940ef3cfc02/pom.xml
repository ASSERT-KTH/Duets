<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.github.stefanbirkner</groupId>
        <artifactId>lib-parent</artifactId>
        <version>9</version>
    </parent>
    <artifactId>talkative-junit-tests</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>talkative-junit-tests</name>
    <url>http://stefanbirkner.github.io/talkative-junit-tests/</url>
    <inceptionYear>2014</inceptionYear>
    <licenses>
        <license>
            <name>Common Public License Version 1.0</name>
            <url>http://www.opensource.org/licenses/cpl1.0</url>
            <distribution>repo</distribution>
        </license>
        <license>
            <name>Eclipse Public License 1.0</name>
            <url>http://opensource.org/licenses/eclipse-1.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <connection>
            scm:git:git://github.com/stefanbirkner/talkative-junit-tests.git
        </connection>
        <developerConnection>
            scm:git:git@github.com:stefanbirkner/talkative-junit-tests.git
        </developerConnection>
        <url>https://github.com/stefanbirkner/talkative-junit-tests/</url>
    </scm>
    <prerequisites>
        <maven>3.0.4</maven>
    </prerequisites>
    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <maven.compiler.testSource>8</maven.compiler.testSource>
        <maven.compiler.testTarget>8</maven.compiler.testTarget>
        <testSourceDirectory>${project.basedir}/src/test/java
        </testSourceDirectory>
    </properties>
    <build>
        <testSourceDirectory>${testSourceDirectory}</testSourceDirectory>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>[4.11,)</version>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>[1.3,)</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
            <version>[1.3,)</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
