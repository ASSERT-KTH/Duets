<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>TA-Akamai_SIEM</groupId>
	<artifactId>TA-Akamai_SIEM</artifactId>
	<version>1.4.5</version>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>
	<build>
	<!--  
		<resources>
			<resource>
				<directory>src/test/resources/com/akamai/siem</directory>
			</resource>
		</resources>
		-->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>brit</id>
						<phase>prepare-package</phase>
						<configuration>
							<!-- 
							<descriptorRefs> 
								<descriptorRef>jar-with-dependencies</descriptorRef> 
							</descriptorRefs> 
							-->
							<descriptor>src/assembly/jar-with-dependencies.xml</descriptor>

							<archive>
								<manifest>
									<mainClass>com.akamai.siem.Main</mainClass>
								</manifest>
							</archive>
						</configuration>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
					<execution>
						<id>jemz</id>
						<phase>package</phase>
						<configuration>
							<descriptor>src/assembly/bin.xml</descriptor>
							<finalName>TA-Akamai_SIEM-${project.version}</finalName>
						</configuration>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.coderplus.maven.plugins</groupId>
				<artifactId>copy-rename-maven-plugin</artifactId>
				<version>1.0.1</version>
				<executions>
					<execution>
						<id>rename-file2</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<sourceFile>target/TA-Akamai_SIEM-${project.version}-jar-with-dependencies.jar</sourceFile>
							<destinationFile>jars/TA-Akamai_SIEM.jar</destinationFile>
						</configuration>
					</execution>
					<execution>
						<id>rename-file</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<sourceFile>target/TA-Akamai_SIEM-${project.version}-bundle.tar.gz</sourceFile>
							<destinationFile>dist/TA-Akamai_SIEM-${project.version}.spl</destinationFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<id>nexus</id>
			<name>Luna Common Release</name>
			<url>https://lunabuild.akamai.com/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>nexus</id>
			<name>Luna Common Snapshots</name>
			<url>https://lunabuild.akamai.com/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
