mvn install:install-file -Dfile="lib/cmykjpeg.jar" -DgroupId=cmykjpeg -DartifactId=cmykjpeg -Dversion=0 -Dpackaging=jar
mvn install:install-file -Dfile="lib/LZMA.jar" -DgroupId=LZMA -DartifactId=LZMA -Dversion=0 -Dpackaging=jar
 -->
		<dependency>
			<groupId>ffdec</groupId>
			<artifactId>ffdec</artifactId>
			<version>0</version>
		</dependency>
		<dependency>
			<groupId>cmykjpeg</groupId>
			<artifactId>cmykjpeg</artifactId>
			<version>0</version>
		</dependency>
		<dependency>
			<groupId>LZMA</groupId>
			<artifactId>LZMA</artifactId>
			<version>0</version>
		</dependency>
