<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Project information -->
    <groupId>org.spoutcraft</groupId>
    <artifactId>launcher</artifactId>
    <version>dev-SNAPSHOT</version>
    <name>Spoutcraft Launcher</name>
    <url>http://www.spoutcraft.org</url>
    <description></description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <!-- License -->
    <licenses>
        <license>
            <name>GNU LESSER GENERAL PUBLIC LICENSE Version 3</name>
            <url>http://www.gnu.org/licenses/lgpl.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <!-- Source code -->
    <scm>
        <developerConnection>scm:git:git@github.com:SpoutDev/${project.name}.git</developerConnection>
        <connection>scm:git:git://github.com/SpoutDev/${project.name}.git</connection>
        <url>https://github.com/SpoutDev/${project.name}</url>
    </scm>

    <!-- Continuous integration -->
    <ciManagement>
        <system>jenkins</system>
        <url>http://ci.spoutcraft.org</url>
    </ciManagement>

    <!-- Repository locations -->
    <repositories>
        <!-- <repository>
            <id>craftfire-repo</id>
            <url>http://repo.craftfire.com</url>
        </repository> -->
        <repository>
            <id>craftfire-dbrepo</id>
            <url>http://db.craftfire.com/repo</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Third-party -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
   
    <build>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>

        <!-- Plugins -->
        <plugins>

            <!-- Compile plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
            </plugin>

            <!-- JAR creation plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>org.spoutcraft.launcher.Main</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

        </plugins>

    </build>

</project>