	<groupId>de.rub.nds.oidc</groupId>
	<artifactId>opiv</artifactId>
	<version>1.0.0-usenix1</version>
	<packaging>war</packaging>

	<name>OpenID-Verifier</name>
	<url>http://maven.apache.org</url>

