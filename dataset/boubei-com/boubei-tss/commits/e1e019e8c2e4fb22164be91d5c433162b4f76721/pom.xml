<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>tss</groupId>
	<artifactId>tss</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>
	<name>TSS BI Project</name>
	<url>http://www.boubei.com</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<tss.version>4.3</tss.version>
		<jdk.version>1.6</jdk.version>
		<spring.version>3.2.0.RELEASE</spring.version>
		<hibernate.version>3.5.1-Final</hibernate.version>
		<maven.build.timestamp.format>yyyy-MM-dd HH:mm:ss</maven.build.timestamp.format>
	</properties>

	<dependencies>
		<!-- TSS dependency -->
		<dependency>
			<groupId>com.boubei</groupId>
			<artifactId>tss</artifactId>
			<version>${tss.version}</version>
			<classifier>all</classifier>  <!-- 1、all: 基于TSS 2、client: 围绕TSS -->
		</dependency>		
		
		<!-- Oracle DB driver 4 release -->
		<dependency>
			<groupId>ojdbc</groupId>
			<artifactId>ojdbc</artifactId>
			<version>14</version>
		</dependency>
		
		
		<!-- 条形码、二维码 -->
		<dependency>
			<groupId>net.sf.barcode4j</groupId>
			<artifactId>barcode4j-light</artifactId>
			<version>2.0</version>
		</dependency>
		<dependency>
			<groupId>com.google.zxing</groupId>
			<artifactId>core</artifactId>
			<version>3.2.0</version>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
		    <version>3.0.1</version>
			<scope>provided</scope>
		</dependency>
		
		<!-- Test DEPENDENCIES -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.6</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<version>${spring.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.easymock</groupId>
			<artifactId>easymock</artifactId>
			<version>2.3</version>
			<scope>test</scope>
		</dependency>
		<!-- H2 DEPENDENCIES -->
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.2.125</version>
			<scope>test</scope>
		</dependency>
		
	</dependencies>

	<build>
		<defaultGoal>install</defaultGoal>
		<finalName>${project.artifactId}</finalName>

		<pluginManagement>
			<plugins>
				<!-- test report -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-report-plugin</artifactId>
					<version>2.16</version>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.16</version>
				<configuration>
					<skip>false</skip> <!-- skip junit test -->
					<includes>
						<include>**/*Test.java </include>
					</includes>
					<testFailureIgnore>true</testFailureIgnore>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>8.1.12.v20130726</version>
				<configuration>
					<webAppConfig>
						<contextPath>/tss</contextPath>
					</webAppConfig>
					<connectors>
						<connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
							<port>9000</port>
						</connector>
					</connectors>
					<stopPort>9966</stopPort>
					<stopKey>tss</stopKey>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<locales>EN</locales> <!-- ZH_CN -->
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<version>2.16</version>
			</plugin>

			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-clover2-plugin</artifactId>
				<version>3.0.5</version>
				<configuration>
					<licenseLocation>/opt/clover.license</licenseLocation>
					<generateHtml>true</generateHtml>
					<generateXml>true</generateXml>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo>
									process log4j.properties: set
									log4j.logger.com.boubei to ${log.level};
								</echo>
								<replaceregexp file="${basedir}/target/classes/log4j.properties"
									match="=debug" replace="=${log.level}" byline="true" />
								
								<echo>
									process application.properties: set security.level to ${security.level};
								</echo>
								<replaceregexp
									file="${basedir}/target/classes/application.properties" 
									match="security.level = 2" replace="security.level = ${security.level}" byline="true" />
									
								<echo>
									process application.properties: set job.enable to ${job.enable};
								</echo>
								<replaceregexp
									file="${basedir}/target/classes/application.properties" 
									match="job.enable = true" replace="job.enable = ${job.enable}" byline="true" />

								<echo>
									process application.properties: set last.package.time to ${maven.build.timestamp};
								</echo>
								<replaceregexp
									file="${basedir}/target/classes/application.properties" 
									match="last\.package\.time = yyyy-MM-dd hh:mi:ss"
									replace="last\.package\.time = ${maven.build.timestamp}" byline="true" />

								<echo>
									process application.properties: set localhost:3306/tss to ${db.url};
								</echo>
								<replaceregexp
									file="${basedir}/target/classes/application.properties" 
									match="username root" replace="username ${db.username}" byline="true" />
								<replaceregexp
									file="${basedir}/target/classes/application.properties" 
									match="boubei@com" replace="${db.password}" byline="true" />
								<replaceregexp
									file="${basedir}/target/classes/application.properties" 
									match="localhost:3306\/tss" replace="${db.url}" byline="true" />

								<echo>
									process application.properties: set environment to ${environment};
								</echo>
								<replaceregexp
									file="${basedir}/target/classes/application.properties" 
									match="environment = dev" 
									replace="environment = ${environment}" byline="true" />
									
								<echo>
									process appServers.xml: set tomcat.url to ${tomcat.url};
								</echo>
								<replaceregexp
									file="${basedir}/target/classes/tss/appServers.xml" 
									match="localhost:9090" replace="${tomcat.url}" byline="true" />
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.6.5</version>
					</dependency>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-apache-regexp</artifactId>
						<version>1.6.5</version>
					</dependency>
				</dependencies>
			</plugin>

		</plugins>
	</build>

	<profiles>
		<!-- eg: mvn clean install  -Pxxx -Dmaven.test.skip=true -->
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<environment>dev</environment>
				<security.level>6</security.level>
				<job.enable>true</job.enable>
				<log.level>info</log.level>
				<db.username>root</db.username>
				<db.password>800best@com</db.password>
				<db.url>127.0.0.1:3306/tss_demo1</db.url>
				<tomcat.url>127.0.0.1:8080</tomcat.url>
			</properties>
		</profile>
		
		<profile>
			<id>xbi</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<environment>xbi</environment>
				<security.level>6</security.level>
				<job.enable>true</job.enable>
				<log.level>info</log.level>
				<db.username>tssbiu1</db.username>
				<db.password>www.boubei.com</db.password>
				<db.url>boubei.com:3306/xbi</db.url>
				<tomcat.url>127.0.0.1:9090</tomcat.url>
			</properties>
		</profile>
		
		<profile>
			<id>ebi</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<environment>ebi</environment>
				<security.level>6</security.level>
				<job.enable>true</job.enable>
				<log.level>info</log.level>
				<db.username>tssbiu1</db.username>
				<db.password>www.boubei.com</db.password>
				<db.url>boubei.com:3306/tss_init</db.url>
				<tomcat.url>127.0.0.1:9091</tomcat.url>
			</properties>
		</profile>
		
	</profiles>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>dashboard-maven-plugin</artifactId>
				<version>1.0.0-beta-1</version>
			</plugin>
		</plugins>
	</reporting>

	<distributionManagement>
		<site>
			<id>www.boubei.com</id>
			<url>file://</url>
		</site>
	</distributionManagement>

</project>