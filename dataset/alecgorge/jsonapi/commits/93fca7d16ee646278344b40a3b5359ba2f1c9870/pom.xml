<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ramblingwood.minecraft.jsonapi</groupId>
	<artifactId>JSONAPI</artifactId>
	<packaging>jar</packaging>
	<version>bleeding</version>
	<name>JSONAPI</name>
	<url>http://github.com/alecgorge/jsonapi</url>
	<scm>
		<developerConnection>scm:git:git@github.com:alecgorge/jsonapi.git</developerConnection>
		<connection>scm:git:git://github.com/alecgorge/jsonapi.git</connection>
		<url>https://github.com/alecgorge/jsonapi/tree/master/</url>
	</scm>
	<build>
		<finalName>JSONAPI</finalName>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
			 <directory>src</directory>
			 <includes>
					 <include>plugin.yml</include>
					 <include>adminium_group_defaults.yml</include>
			 </includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-5</version>
				<configuration>
					<descriptors>
						<descriptor>zip.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.bukkit.craftbukkit</groupId>
			<artifactId>craftbukkit</artifactId>
			<version>1956</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/deps/craftbukkit.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.drdanick.McRKit</groupId>
			<artifactId>McRKit</artifactId>
			<version>10</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/deps/Minecraft_RKit.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>Vault</artifactId>
			<version>1.2.5</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/deps/Vault.jar</systemPath>
		</dependency>
	</dependencies>	
</project>