<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.interzonedev</groupId>
	<artifactId>rabbitmq-demo-java</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Rabbit MQ Demos in Java</name>

	<dependencies>
		<dependency>
			<groupId>com.rabbitmq</groupId>
			<artifactId>amqp-client</artifactId>
			<version>2.8.4</version>
		</dependency>

		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.16</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.6.4</version>
		</dependency>

		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>assemble</goal>
						</goals>
						<configuration>
							<assembleDirectory>target</assembleDirectory>
							<programs>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.basic.Recv</mainClass>
									<name>basic_server</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.basic.Send</mainClass>
									<name>basic_client</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.workqueue.NewTask</mainClass>
									<name>workqueue_newtask</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.workqueue.Worker</mainClass>
									<name>workqueue_worker</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.pubsub.EmitLog</mainClass>
									<name>pubsub_emitlog</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.pubsub.ReceiveLogs</mainClass>
									<name>pubsub_receivelogs</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.routing.EmitLogDirect</mainClass>
									<name>routing_emitlogdirect</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.routing.ReceiveLogsDirect</mainClass>
									<name>routing_receivelogsdirect</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.topic.ReceiveLogsTopic</mainClass>
									<name>topic_receivelogstopic</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.topic.EmitLogTopic</mainClass>
									<name>topic_emitlogtopic</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.rpc.RPCClient</mainClass>
									<name>rpc_client</name>
								</program>
								<program>
									<mainClass>com.interzonedev.rabbitmqdemo.rpc.RPCServer</mainClass>
									<name>rpc_server</name>
								</program>
							</programs>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
