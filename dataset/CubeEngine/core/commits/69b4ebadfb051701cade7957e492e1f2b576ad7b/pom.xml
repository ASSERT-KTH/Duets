<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>de.cubeisland.engine</groupId>
  <artifactId>aggregator</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>CubeEngine Aggregator</name>
  <packaging>pom</packaging>

  <properties>
    <projectBase>${project.basedir}</projectBase>
  </properties>

  <distributionManagement>
    <repository>
      <id>cubeisland-repo</id>
      <name>Release</name>
      <url>http://nexus.cubeisland.de/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>cubeisland-repo</id>
      <name>Snapshot</name>
      <url>http://nexus.cubeisland.de/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <modules>
    <module>cubeengine</module>
    <module>fly</module>
    <module>conomy</module>
    <module>basics</module>
    <module>fun</module>
    <module>log</module>
    <module>writer</module>
    <module>shout</module>
    <module>roles</module>
    <module>rulebook</module>
    <module>chat</module>
    <module>border</module>
    <module>signmarket</module>
    <module>travel</module>
    <module>vote</module>
    <module>test</module>
    <module>spawn</module>
    <module>powersigns</module>
    <module>itemrepair</module>
    <module>hide</module>
    <module>locker</module>
    <module>mystcube</module>
    <module>stats</module>
    <module>reputation</module>
    <module>worlds</module>
    <module>portals</module>
    <module>backpack</module>
    <module>faq</module>
    <module>selector</module>
    <module>vaultlink</module>
    <module>powertools</module>
    <module>kits</module>
    <module>spawner</module>
    <module>bigdata</module>
  </modules>

  <build>
    <defaultGoal>clean install</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.1</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.1</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.3</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.7</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.5</version>
      </plugin>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>1.10.b1</version>
        <configuration>
          <header>header.txt</header>
          <strictCheck>true</strictCheck>
          <aggregate>true</aggregate>
          <includes>
            <include>**/*.java</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
