<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.kanasansoft.Jyazo</groupId>
  <artifactId>Jyazo</artifactId>
  <name>Jyazo</name>
  <version>0.0.2-SNAPSHOT</version>
  <properties>
    <launch4j.launchJarName>${name}-${version}.jar</launch4j.launchJarName>
  </properties>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-ant-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals><goal>ant</goal></goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <encoding>UTF-8</encoding>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
          <compilerArgument></compilerArgument>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.kanasansoft.Jyazo.Jyazo</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>osxappbundle-maven-plugin</artifactId>
        <configuration>
          <mainClass>com.kanasansoft.Jyazo.Jyazo</mainClass>
          <jvmVersion>1.6+</jvmVersion>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals><goal>bundle</goal></goals>
          </execution>
        </executions>
      </plugin>
<!--      <plugin>
