			<url>http://ece.ubc.ca/~qhanam/maven/</url>
		</repository>
		<repository>
			<id>labri</id>
			<name>LaBRI repository</name>
			<url>http://se.labri.fr/maven/</url>
		</repository>
	</repositories>

