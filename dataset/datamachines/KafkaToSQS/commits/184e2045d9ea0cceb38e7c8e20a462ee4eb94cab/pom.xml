  </dependencies>
    <repositories>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>central2</id>
      <name>MVN Repository</name>
      <url>https://mvnrepository.com/artifact</url>
    </repository>
  </repositories>
</project>