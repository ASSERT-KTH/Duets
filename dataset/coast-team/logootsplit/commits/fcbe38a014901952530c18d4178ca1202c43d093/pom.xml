        <developer>
            <id>oster</id>
            <name>Gérald Oster</name>
            <email>gerald.oster@loria.fr</email>
            <url>http://www.loria.fr/~oster/</url>
            <organization>Université de Lorraine</organization>
            <organizationUrl>http://www.loria.fr/</organizationUrl>
            <roles>
                <role>developer</role>
                <role>architect</role>
            </roles>
            <timezone>+1</timezone>
