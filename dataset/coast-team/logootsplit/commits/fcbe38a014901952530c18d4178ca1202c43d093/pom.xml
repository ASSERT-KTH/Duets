        <developer>
            <id>stemarti</id>
            <name>Stéphane Martin</name>
            <email>stephane.martin@loria.fr</email>
            <url>http://www.stephanemartin.fr/</url>
            <organization>Université de Lorraine</organization>
            <organizationUrl>http://www.univ-lorraine.fr/</organizationUrl>
