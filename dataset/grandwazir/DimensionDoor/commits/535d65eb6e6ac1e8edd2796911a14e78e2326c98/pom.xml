<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>name.richardson.james.bukkit</groupId>
  <artifactId>dimension-door</artifactId>
  <version>2.0.2</version>
  <name>DimensionDoor</name>
  <description>DimensionDoor is a lightweight but powerful solution to managing multiple worlds, with full permissions support and is simple to configure.</description>
  <repositories>
    <repository>
      <id>bukkit-repo</id>
      <url>http://repo.bukkit.org/content/groups/public</url>
    </repository>  
  </repositories>
  <dependencies>
	 <dependency>
	   <groupId>org.bukkit</groupId>
	   <artifactId>bukkit</artifactId>
	   <version>1.1-R3</version>
     </dependency>
     <dependency>
	   <groupId>name.richardson.james.bukkit</groupId>
	   <artifactId>bukkit-utilities</artifactId>
	   <version>1.0.0</version>
     </dependency>
  </dependencies>
  <distributionManagement>  
    <!-- Publish the versioned releases here -->  
    <repository>  
      <id>release</id>  
      <name>My public repository</name>  
      <url>scp://repository.james.richardson.name/srv/www/repository.james.richardson.name</url>  
    </repository>  
  </distributionManagement>    
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <scm>
    <connection>scm:git:git://github.com/grandwazir/BukkitUtilities.git</connection>
    <url>https://github.com/grandwazir/BukkitUtilities</url>
    <developerConnection>scm:git:git@github.com:grandwazir/BukkitUtilities.git</developerConnection>
  </scm>
  
  <build>
  	<sourceDirectory>${basedir}/src/main/java/</sourceDirectory>
    <plugins>
  
      <!-- Release -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.2.2</version>
        <configuration>
          <useUniqueVersions>false</useUniqueVersions>
          <tagNameFormat>v@{project.version}</tagNameFormat>        
        </configuration>
      </plugin>
  
      <!-- Compile plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
      </plugin>
      
      <!-- JAR creation plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.1</version>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <!-- We want to bundle in BukkitUtilities -->
                <includes>
                  <include>name.richardson.james.bukkit:bukkit-utilities</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
  
   </plugins>
  </build>
  
</project>