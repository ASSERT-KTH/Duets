		</dependency>

		<!-- <dependency> <groupId>org.simpleframework</groupId> <artifactId>simple-xml</artifactId> 
			<version>${simple-version}</version> </dependency> -->
		<!-- <dependency> <groupId>com.viewpagerindicator</groupId> <artifactId>library</artifactId> 
