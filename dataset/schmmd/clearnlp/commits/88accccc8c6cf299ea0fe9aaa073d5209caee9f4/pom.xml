    <developerConnection>scm:git:https://clearnlp.googlecode.com/git/</developerConnection>
  </scm>
  
  <developers>
    <developer>
      <id>jdchoi77</id>
      <name>Jinho D. Choi</name>
      <email>{id}@gmail.com</email>
