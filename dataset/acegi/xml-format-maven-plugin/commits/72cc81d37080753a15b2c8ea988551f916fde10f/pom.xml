<?xml version="1.0" encoding="UTF-8"?>
<!-- mvn org.technicalsoftwareconfigurationmanagement.maven-plugin::xml-formatter:1.0-SNAPSHOT:xmlFormatter -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.technicalsoftwareconfigurationmanagement.maven-plugin</groupId>
    <artifactId>xml-formatter</artifactId>
    <version>1.0</version>
    <packaging>maven-plugin</packaging>
    <name>Xml-Formatter-Maven-Plugin</name>
    <url>http://www.technicalsoftwareconfigurationmanagement.org</url>
    <description>The XML formatter has been designed to ingest any xml files to include the project pom.xml files and format them... This is very useful for parent poms to run recursively.</description>
    <developers>
        <developer>
            <id>Architect</id>
            <name>Brian Walsh</name>
            <roles>
                <role>Project Manager</role>
            </roles>
            <organization>Technical Software Configuration Management (TSCM)</organization>
        </developer>
        <developer>
            <id>Developer</id>
            <name>Sean Dobberstein</name>
            <roles>
                <role>Jr. Software Engineer</role>
            </roles>
            <organization>Technical Software Configuration Management (TSCM)</organization>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.2</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-project</artifactId>
            <version>2.0.10</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
