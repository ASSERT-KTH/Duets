<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.fda.nctr</groupId>
  <artifactId>dbmd</artifactId>
  <version>1.1.5</version>
  <name>Java Database Metadata Library</name>

  <distributionManagement>
    <repository>
      <id>nctr-maven-releases-repo</id>
      <url>scpexe://${nctr_releases_scp_target}</url>
    </repository>
    <snapshotRepository>
      <id>nctr-maven-snapshots-repo</id>
      <url>scpexe://${nctr_snapshots_scp_target}</url>
      <uniqueVersion>false</uniqueVersion>
    </snapshotRepository>
  </distributionManagement>

  <repositories>
    <repository>
        <id>nctr-maven-releases-repo</id>
        <name>NCTR Releases Repository</name>
        <url>${nctr_releases_repo_url}</url>
    </repository>
    <repository>
        <id>nctr-maven-snapshots-repo</id>
        <name>NCTR Snapshots Repository</name>
        <url>${nctr_snapshots_repo_url}</url>
    </repository>
  </repositories>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <extensions>
      <!-- Enable use of scp for deployment. -->
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh-external</artifactId>
        <version>1.0-beta-6</version>
      </extension>
    </extensions>
  </build>
</project>