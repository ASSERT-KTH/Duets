                    <type>jar</type>
                    <overWrite>false</overWrite>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                    <destFileName>ALICA_ACPack-${alica_acpack.version}.jar</destFileName>
                  </artifactItem>
		</artifactItems>
              </configuration>
	    </plugin>
	  </plugins>
	</build>
      </profile>
