<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.laughingpanda</groupId>
	<artifactId>beaninject</artifactId>
	<version>0.3-SNAPSHOT</version>
	<name>BeanInject</name>
	<description>Simple utility for dependency injection.</description>
	<url>
		http://www.laughingpanda.org/mediawiki/index.php/Bean_Inject
	</url>

	<developers>
		<developer>
			<name>Lasse Koskela</name>
		</developer>
	</developers>

	<distributionManagement>
		<repository>
			<id>laughingpanda</id>
			<name>LaughingPanda Maven 2 Repository</name>
			<url>
				scp://ssh.laughingpanda.org:/var/www/localhost/htdocs/maven2/
			</url>
		</repository>
	</distributionManagement>

	<scm>
		<connection>scm:svn:https://svn.laughingpanda.org/svn/beaninject/tags/beaninject-${project.version}</connection>
		<developerConnection>scm:svn:https://svn.laughingpanda.org/svn/beaninject/tags/beaninject-${project.version}</developerConnection>
	</scm>

	<repositories>
		<repository>
			<id>laughingpanda</id>
			<name>LaughingPanda Maven 2 Repository</name>
			<url>http://www.laughingpanda.org/maven2/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.3.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<tagBase>
						https://svn.laughingpanda.org/svn/beaninject/tags
					</tagBase>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
