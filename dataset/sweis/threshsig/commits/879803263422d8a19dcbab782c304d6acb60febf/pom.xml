<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>threshsig</groupId>
  <artifactId>threshsig</artifactId>
  <name>Threshold Signature Package</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>An Implementation of Shoup's "Practical Threshold Signatures"</description>
  <build>
    <extensions>
      <extension>
        <groupId>org.jvnet.wagon-svn</groupId>
        <artifactId>wagon-svn</artifactId>
        <version>1.8</version>
      </extension>
    </extensions>
  </build>
  <scm>
    <connection>scm:svn:svn://threshsig.googlecode.com/svn/trunk</connection>
    <developerConnection>scm:svn:svn://threshsig.googlecode.com/svn/trunk</developerConnection>
    <url>https://threshsig.googlecode.com/svn/trunk</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>Threshsig</id>
      <name>Threshsig Maven Repository</name>
      <url>svn:https://threshsig.googlecode.com/svn/maven</url>
      <uniqueVersion>true</uniqueVersion>
    </repository>
  </distributionManagement>
  <repositories>
    <repository>
      <id>maven2-repository.dev.java.net</id>
      <name>Java.net Repository for Maven</name>
      <url>http://download.java.net/maven/2</url>
    </repository>
    <repository>
      <id>maven.org</id>
      <name>Maven Repository</name>
      <url>http://repo2.maven.org/maven2/</url>
      <layout>default</layout>
    </repository>
  </repositories>
  <developers>
    <developer>
      <id>steveweis</id>
      <name>Steve Weis</name>
      <email>steveweis@gmail.com</email>
      <url>http://saweis.net</url>
    </developer>
  </developers>
</project>