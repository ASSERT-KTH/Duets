<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <repositories>
  	<repository>
  	  <id>github</id>
  	  <name>GitHub - Alex Roussos</name>
  	  <url>https://github.com/aroussos/Mosaic</url>
  	</repository>
  </repositories>
  <modelVersion>4.0.0</modelVersion>
  <groupId>Mosaic</groupId>
  <artifactId>Mosaic</artifactId>
  <version>0.0.1</version>
  <name>Mosaic</name>
  <description>Generates mosaics with various resolutions and color palettes</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <scm>
    <url>https://github.com/alexroussos/Mosaic</url>
    <connection>scm:git:git@github.com:alexroussos/Mosaic</connection>
    <developerConnection>scm:git:git@github.com:alexroussos/Mosaic</developerConnection>
  </scm>
  <dependencies>
  	<dependency>
  	  <groupId>javaml</groupId>
  	  <artifactId>javaml</artifactId>
  	  <version>0.1.7</version>
   	  <scope>system</scope>
   	  <systemPath>${project.basedir}/lib/javaml-0.1.7.jar</systemPath>
  	</dependency>   
  	<dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.0</version>
      <type>jar</type>
      <scope>test</scope>
      <optional>true</optional>
    </dependency>
  </dependencies>
</project>