            <email>a.sikkema80@gmail.com</email>
            <roles>
                <role>Architect</role>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <id>mischa</id>
            <name>Ron van Weverwijk</name>
            <email>ronnie.van.weverwijk@gmail.com</email>
            <roles>
                <role>Architect</role>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>
</project>
