<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.playblack.cuboids</groupId>
    <artifactId>cuboids</artifactId>
    <version>3.4-SNAPSHOT</version>
    <name>Cuboids</name>
    <description>Cuboid-based area protection and world editing</description>
    <url>http://playblack.net</url>
    <inceptionYear>2012</inceptionYear>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <organization>
        <name>PlayBlack</name>
        <url>http://playblack.net</url>
    </organization>
    <developers>
        <developer>
            <id>damagefilter</id>
            <name>Chris Ksoll</name>
            <email>chris@playblack.net</email>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:git://github.com/damagefilter/Cuboids.git</connection>
        <developerConnection>scm:git:git@github.com:damagefilter/Cuboids.git</developerConnection>
        <url>https://github.com/damagefilter/Cuboids</url>
    </scm>
    <issueManagement>
        <url>https://github.com/damagefilter/Cuboids/issues</url>
        <system>GitHub Issue Tracker</system>
    </issueManagement>
    <repositories>
        <repository>
            <id>vi-repo</id>
            <name>Visual Illusions Repository</name>
            <url>http://repo.visualillusionsent.net</url>
        </repository>
    </repositories>
    <dependencies>
        <!-- This is used only for legacy with old CanaryMod. CanaryLib included it as dep -->
        <dependency>
            <groupId>net.visualillusionsent</groupId>
            <artifactId>viutils</artifactId>
            <version>1.0.4</version>
        </dependency>

        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom2</artifactId>
            <version>2.0.4</version>
        </dependency>

        <!-- CanaryMod isn't a Maven project so System Scope the dependencies -->
<!--        <dependency>
            <groupId>net.canarymod</groupId>
            <artifactId>CanaryMod</artifactId>
            <version>11.2</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/CanaryMod.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>net.canarymod</groupId>
            <artifactId>servero</artifactId>
            <version>11.2</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/minecraft_servero.jar</systemPath>
        </dependency>-->
        <!-- Recode -->
        <dependency>
            <groupId>net.canarymod</groupId>
            <artifactId>CanaryLib</artifactId>
            <version>1.0-RC-1</version>
        </dependency>
        <!-- End: CanaryMod -->
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/src/main/java/</sourceDirectory>
        <finalName>Cuboids</finalName>

        <!-- Plugins -->
        <plugins>
            <!-- Compile plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <!-- Dependency shader -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${project.artifactId}-${project.version}</finalName>
                    <artifactSet>
                        <excludes>
                            <exclude>net.canarymod:*</exclude>
                            <exclude>net.canarymod:servero</exclude>
                            <exclude>org.xerial:*</exclude>
                            <exclude>mysql:*</exclude>
                            <exclude>net.visualillusionsent:*</exclude>
                            <exclude>org.jdom:*</exclude>
                        </excludes>
                    </artifactSet>
                    <filters>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>META-INF/*.SF</exclude>
                                <exclude>META-INF/*.DSA</exclude>
                                <exclude>META-INF/*.RSA</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
            </plugin>

            <!-- JAR creation plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <addMavenDescriptor>true</addMavenDescriptor>
                        <manifest>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- Release -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.2</version>
                <configuration>
                    <preparationGoals>jar:jar</preparationGoals>
                    <goals>jar:jar</goals>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>