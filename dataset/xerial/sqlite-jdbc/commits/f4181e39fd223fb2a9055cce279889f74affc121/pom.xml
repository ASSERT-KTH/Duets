<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!--  OS dependent settings for GWT compiler -->
  <profiles>
    <profile>
      <id>win</id>
      <properties>
        <sqlite.os>win</sqlite.os>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <properties>
        <sqlite.os>linux</sqlite.os>
      </properties>
    </profile>
    <profile>
      <id>mac</id>
      <properties>
        <sqlite.os>mac</sqlite.os>
      </properties>
    </profile>
  </profiles>

  <parent>
    <artifactId>xerial-base</artifactId>
    <groupId>org.xerial</groupId>
    <version>1.1</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.xerial</groupId>
  <artifactId>sqlite-jdbc</artifactId>
  <version>${sqlite.os}-v037</version>
  <name>SQLite JDBC</name>
  <description>SQLite JDBC library</description>

  <distributionManagement>
    <site>
      <id>xerial.local</id>
      <url>file://${basedir}/../maven/site/${project.artifactId}</url>
    </site>
    <repository>
      <id>xerial.local</id>
      <name>Xerial Maven Repository managed by Subversion</name>
      <url>file://${basedir}/../maven/artifact</url>
    </repository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>xerial</id>
      <name>Xerial Artifact Repository</name>
      <url>http://www.xerial.org/svn/project/XerialJ/trunk/maven/artifact</url>
    </repository>
  </repositories>


  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>native/${sqlite.os}/**</include>
          <include>org/**</include>
        </includes> 
      </resource>
    </resources>
  </build>  
  


</project>

