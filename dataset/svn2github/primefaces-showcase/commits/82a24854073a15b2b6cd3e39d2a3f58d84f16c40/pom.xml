				</plugins>
			</build>
		</profile>
		
		<!-- Doesn't include jsf libs -->
		<profile>
			<id>appserver-1.2</id>
			<dependencies>
				<dependency>
					<groupId>org.primefaces</groupId>
					<artifactId>primefaces</artifactId>
					<version>1.1-SNAPSHOT</version>
				</dependency>
				<dependency>
					<groupId>com.sun.facelets</groupId>
					<artifactId>jsf-facelets</artifactId>
					<version>1.1.15.B1</version>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
		
		<profile>
			<id>appserver-2.0</id>
			<dependencies>
				<dependency>
					<groupId>org.primefaces</groupId>
					<artifactId>primefaces</artifactId>
					<version>2.1-SNAPSHOT</version>
				</dependency>
			</dependencies>
		</profile>
		
	</profiles>
	
</project>