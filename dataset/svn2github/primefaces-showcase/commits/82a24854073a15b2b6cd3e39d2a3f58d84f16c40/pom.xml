									<outputDirectory>target/prime-showcase-${version}/WEB-INF</outputDirectory>
									<resources>
										<resource>
											<directory>src/main/jsf2-config</directory>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<profile>
			<id>myfaces-2.0</id>
			<properties>
				<jsfVersion>MyFaces-2.0.0</jsfVersion>
				<primefacesVersion>PrimeFaces-2.1-SNAPSHOT</primefacesVersion>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.primefaces</groupId>
					<artifactId>primefaces</artifactId>
					<version>2.1-SNAPSHOT</version>
				</dependency>
				<dependency>
					<groupId>org.apache.myfaces.core</groupId>
    				<artifactId>myfaces-api</artifactId>
					 <version>2.0.0</version>
				</dependency>
				<dependency>
					<groupId>org.apache.myfaces.core</groupId>
