        </dependency>

        <dependency>
            <groupId>com.mangofactory</groupId>
            <artifactId>swagger-springmvc</artifactId>
            <version>0.8.4</version>
        </dependency>


        <!-- DEPENDENCIES FOR GOOGLE CALENDAR -->

