	</parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>srcgen4javassist</artifactId>
    <packaging>jar</packaging>
    <version>0.5.8</version>
    <name>SrcGen4Javassist</name>
    <description>A small wrapper for Javassist that can be used to generate source files and bytecode.</description>
    <url>http://www.fuin.org/srcgen4javassist/</url>

	<scm>
		<url>https://github.com/fuinorg/srcgen4javassist/</url>
		<connection>scm:git:git://github.com/fuinorg/srcgen4javassist.git</connection>
		<developerConnection>scm:git:git@github.com:fuinorg/srcgen4javassist.git</developerConnection>
	</scm>

	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/fuinorg/srcgen4javassist/issues</url>
	</issueManagement>

    <dependencies>

        <!-- Runtime -->

        <dependency>
            <groupId>javassist</groupId>
            <artifactId>javassist</artifactId>
            <version>3.8.0.GA</version>
        </dependency>

        <!-- Test -->

        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>5.8</version>
            <scope>test</scope>
            <classifier>jdk15</classifier>
        </dependency>

        <dependency>
            <groupId>jalopy</groupId>
            <artifactId>jalopy</artifactId>
            <version>1.5b5</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.13</version>
            <scope>test</scope>
        </dependency>


    </dependencies>

</project>
