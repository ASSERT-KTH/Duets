<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>

	<groupId>org.holmes-validation</groupId>
	<artifactId>holmes-validation</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>holmes</name>
	<description>Holmes is a library that provides a simple and fluent API for writing business rules validations on Java projects.</description>
	<url>http://holmes-validation.org</url>

	<licenses>
		<license>
			<name>MIT</name>
			<url>https://raw.github.com/holmes-org/holmes-validation/master/LICENSE.txt</url>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git@github.com:holmes-org/holmes-validation.git</connection>
		<developerConnection>scm:git:git@github.com:holmes-org/holmes-validation.git</developerConnection>
		<url>git@github.com:holmes-org/holmes-validation.git</url>
	</scm>

	<developers>
		<developer>
			<id>diegossilveira</id>
			<name>Diego Santos da Silveira</name>
			<email>diegossilveira@gmail.com</email>
			<timezone>-3</timezone>
		</developer>
		<developer>
			<id>arthuralmeida</id>
			<name>Arthur Almeida</name>
			<email>arthurdardinho@gmail.com</email>
			<timezone>-3</timezone>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>

		<!-- Test scoped -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>

			<!-- Compiler -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

		</plugins>
	</build>

</project>