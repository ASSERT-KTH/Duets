<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>org.holmes</groupId>
	<artifactId>holmes</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>holmes</name>
	<description>A Java DSL to write validations</description>
	<url>https://github.com/diegossilveira/holmes</url>
	
	<licenses>
		<license>
			<name>MIT</name>
			<url>https://github.com/diegossilveira/holmes/blob/master/LICENSE.txt</url>
		</license>
	</licenses>
	
	<scm>
		<connection>scm:git:git://github.com/diegossilveira/holmes.git</connection>
		<developerConnection>scm:git:git@github.com:diegossilveira/holmes.git</developerConnection>
		<url>https://github.com/diegossilveira/holmes.git</url>
	</scm>
	
	<developers>
		<developer>
			<id>diegossilveira</id>
			<name>Diego Santos da Silveira</name>
			<email>diegossilveira@gmail.com</email>
			<timezone>-3</timezone>
		</developer>
		<developer>
			<id>arthuralmeida</id>
			<name>Arthur Almeida</name>
			<email>arthurdardinho@gmail.com</email>
			<timezone>-3</timezone>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	
	<build>
		<plugins>
		
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>			
		
		</plugins>
	</build>

	<dependencies>

		<!-- Test scoped -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>

	</dependencies>
	
</project>
