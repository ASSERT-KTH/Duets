<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>jp.a840.push</groupId>
  <artifactId>push</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>push</name>

  <repositories>
    <repository>
      <id>javanet</id>
      <name>Java Net Repository</name>
      <url>http://download.java.net/maven/glassfish</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>once</updatePolicy>
      </snapshots>
    </repository>
  </repositories>

  <modules>
    <module>subscriber-common</module>
    <module>subscriber-swing</module>
    <module>publisher-websocket</module>
    <module>subscriber-websocket</module>
    <module>subscriber-jms</module>
    <module>websocket-client</module>
    <module>subscriber-swing-annotations</module>
  </modules>

  <dependencyManagement>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.5.6</version>
    </dependency>
    <dependency>
	  <groupId>commons-lang</groupId>
	  <artifactId>commons-lang</artifactId>
      <version>2.1</version>
    </dependency>
    <dependency>
      <groupId>commons-discovery</groupId>
      <artifactId>commons-discovery</artifactId>
      <version>0.4</version>
    </dependency>

    <dependency>
	  <groupId>jp.a840.push</groupId>
	  <artifactId>subscriber-common</artifactId>
	  <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
	  <groupId>jp.a840.push</groupId>
  	  <artifactId>subscriber-websocket</artifactId>
	  <version>1.0-SNAPSHOT</version>
  	</dependency>
    <dependency>
	  <groupId>jp.a840.websocket</groupId>
  	  <artifactId>websocket-client</artifactId>
	  <version>1.0-SNAPSHOT</version>
  	</dependency>
    <dependency>
	  <groupId>jp.a840.push</groupId>
  	  <artifactId>subscriber-jms</artifactId>
	  <version>1.0-SNAPSHOT</version>
  	</dependency>
    <dependency>
	  <groupId>jp.a840.push</groupId>
  	  <artifactId>subscriber-swing-annotations</artifactId>
	  <version>1.0-SNAPSHOT</version>
  	</dependency>

