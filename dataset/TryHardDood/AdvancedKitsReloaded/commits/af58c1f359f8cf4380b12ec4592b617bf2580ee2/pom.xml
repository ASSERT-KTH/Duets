<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>hu.tryharddood</groupId>
    <artifactId>advancedkits</artifactId>
    <version>3.0.22</version>

    <build>
        <directory>${project.basedir}/target</directory>
        <outputDirectory>${project.build.directory}/classes</outputDirectory>

        <finalName>AdvancedKitsReloaded v${project.version}</finalName>
        <sourceDirectory>src/hu/tryharddood</sourceDirectory>
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/</directory>
                <includes>
                    <include>plugin.yml</include>
                    <include>messages_en.properties</include>
                    <include>messages_fi.properties</include>
                    <include>messages_fr.properties</include>
                    <include>messages_hu.properties</include>
                    <include>messages_it.properties</include>
                    <include>messages_pt.properties</include>
                    <include>messages_ru.properties</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.github.wvengen</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals><goal>proguard</goal></goals>
                    </execution>
                </executions>
                <configuration>
                    <proguardInclude>${basedir}/proguard.conf</proguardInclude>
                    <options>
                        <option>-dontshrink</option>
                        <option>-dontoptimize</option>
                        <option>-dontusemixedcaseclassnames</option>
                        <option>-keepattributes Exceptions,InnerClasses,Signature,Deprecated,SourceFile,LineNumberTable,LocalVariable*Table,*Annotation*,Synthetic,EnclosingMethod,EventHandler,Override</option>
                        <option>-dontnote</option>
                        <option>-keep class advancedkits.AdvancedKits</option>
                        <option>
                            -keepclassmembers class * implements org.bukkit.event.Cancellable {
                                public static org.bukkit.event.HandlerList getHandlerList();
                            }
                        </option>
                    </options>
                    <assembly>
                        <inclusions>
                            <inclusion>
                                <groupId>org.spigotmc</groupId><artifactId>spigot-api</artifactId><library>true</library>
                            </inclusion>
                            <inclusion>
                                <groupId>org.bukkit</groupId><artifactId>bukkit</artifactId><library>true</library>
                            </inclusion>
                            <inclusion>
                                <groupId>net.milkbowl.vault</groupId><artifactId>Vault</artifactId><library>true</library>
                            </inclusion>
                        </inclusions>
                    </assembly>
                    <libs>
                        <lib>${java.home}/lib/rt.jar</lib>
                        <lib>${java.home}/lib/jsse.jar</lib>
                    </libs>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
        <repository>
            <id>vault-repo</id>
            <url>http://nexus.theyeticave.net/content/repositories/pub_releases/</url>
        </repository>
    </repositories>
    <dependencies>

        <!--Spigot API-->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.9.4-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <!--Bukkit API-->
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.9.4-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <!--Vault API-->
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>VaultAPI</artifactId>
            <version>1.6</version>
            <scope>provided</scope>
        </dependency>

        <!--Vault-->
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>1.5.6</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
