  <developers>
    <developer>
      <id>kimballa.apache.org</id>
      <email>kimballa@apache.org</email>
      <name>Aaron Kimball</name>
    </developer>
    <developer>
      <id>cos.apache.org</id>
      <email>cos@apache.org</email>
      <name>Konstantin Boudnik</name>
    </developer>
    <developer>
      <id>gwu.apache.org</id>
      <email>gwu@apache.org</email>
