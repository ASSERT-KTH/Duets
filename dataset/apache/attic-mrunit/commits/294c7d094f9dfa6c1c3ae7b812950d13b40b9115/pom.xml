        </dependency>
        <dependency>
          <groupId>org.codehaus.jackson</groupId>
          <artifactId>jackson-mapper-asl</artifactId>
          <version>1.8.2</version>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>
