        </dependency>
        <dependency>
            <groupId>maven-plugins</groupId>
            <artifactId>maven-findbugs-plugin</artifactId>
            <version>0.9.2</version>
            <!--<url>http://maven-plugins.sourceforge.net/maven-findbugs-plugin/</url>-->
            <type>plugin</type>
