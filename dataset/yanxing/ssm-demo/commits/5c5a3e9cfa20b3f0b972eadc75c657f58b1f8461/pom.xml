    <properties>
        <servlet.version>3.1.0</servlet.version>
        <spring.version>${webmvc.version}</spring.version>
        <webmvc.version>4.1.2.RELEASE</webmvc.version>
        <mybatis.version>3.2.8</mybatis.version>
