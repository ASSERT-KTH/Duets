<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>gov.nysenate</groupId>
  <artifactId>geoapi</artifactId>
  <name>GeoApi</name>
  <version>2.4</version>
  <packaging>war</packaging>

  <repositories>
    <repository>
      <id>gov.nysenate</id>
      <name>NY Senate Maven Repository</name>
      <url>http://dev.nysenate.gov/maven/repo</url>
    </repository>
  </repositories>

  <developers>
    <developer>
      <name>Ash Islam</name>
      <organization>NY Senate</organization>
      <email>islam@nysenate.gov</email>
      <roles>
        <role>Programmer</role>
      </roles>
    </developer>
    <developer>
      <name>Anthony Calabrese</name>
      <organization>NY Senate</organization>
      <email>calabres@nysenate.gov</email>
      <roles>
        <role>Programmer</role>
      </roles>
    </developer>
    <developer>
      <name>Ken Zalewski</name>
      <organization>NY Senate</organization>
      <email>zalewski@nysenate.gov</email>
      <roles>
        <role>Project Manager</role>
      </roles>
    </developer>
  </developers>

  <build>
    <finalName>${project.artifactId}##${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <webResources>
            <resource>
              <directory>${basedir}/src/main/java</directory>
              <targetPath>WEB-INF/classes</targetPath>
            </resource>
            <resource>
              <directory>${basedir}</directory>
              <targetPath>WEB-INF/classes</targetPath>
              <includes>
                <include>pom.xml</include>
              </includes>
            </resource>
          </webResources>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <!-- avoid possible encoding issues -->
          <encoding>utf-8</encoding>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <properties>
    <log4j.version>2.10.0</log4j.version>
    <nysenate-java-client.version>2.0</nysenate-java-client.version>
    <tomcat.version>8.0.29</tomcat.version>

    <maven-core.version>3.5.0</maven-core.version>
    <commons-lang3.verison>3.3.2</commons-lang3.verison>
    <commons-fileupload.version>1.2.1</commons-fileupload.version>
    <commons-io.version>2.4</commons-io.version>
    <commons-configuration.version>1.9</commons-configuration.version>
    <httpcore.version>4.2.3</httpcore.version>
    <fluent-hc.version>4.2.2</fluent-hc.version>
    <javax.mail.version>1.4.5</javax.mail.version>
    <jasypt.version>1.9.0</jasypt.version>
    <jdom.version>1.1</jdom.version>
    <commons-dbutils.version>1.7</commons-dbutils.version>
    <postgresql.version>9.3-1101-jdbc4</postgresql.version>
    <xstream.version>1.4.3</xstream.version>
    <jackson-datatype-json-org.version>2.1.0</jackson-datatype-json-org.version>
    <jackson-databind.version>2.1.3</jackson-databind.version>
    <jackson-dataformat-xml.version>2.1.3</jackson-dataformat-xml.version>
    <xmlrpc-client.version>3.1.3</xmlrpc-client.version>
    <woodstox-core-asl.version>4.0.6</woodstox-core-asl.version>
    <super-csv.version>2.0.1</super-csv.version>
    <jstl.version>1.2</jstl.version>
    <commons-el.version>1.0</commons-el.version>
    <jbcrypt.version>0.3m</jbcrypt.version>
    <signpost-core.version>1.2.1.2</signpost-core.version>
    <junit.version>4.11</junit.version>
    <mockito-core.version>1.9.5</mockito-core.version>
    <hamcrest-core.version>1.3</hamcrest-core.version>

    <spring.version>5.0.0.RELEASE</spring.version>
    <shiro.version>1.2.3</shiro.version>
  </properties>

  <dependencies>

    <!-- Spring -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-core</artifactId>
      <version>${spring.version}</version>
      <exclusions>
        <exclusion>
          <artifactId>commons-logging</artifactId>
          <groupId>commons-logging</groupId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- Spring MVC | REST Apis and JSP rendering. -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-web</artifactId>
      <version>${spring.version}</version>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-webmvc</artifactId>
      <version>${spring.version}</version>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-websocket</artifactId>
      <version>${spring.version}</version>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-messaging</artifactId>
      <version>${spring.version}</version>
    </dependency>

    <!-- Spring context support -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context-support</artifactId>
      <version>${spring.version}</version>
    </dependency>

    <!-- Spring Test | Spring based test runners. -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
      <version>${spring.version}</version>
      <scope>test</scope>
    </dependency>

    <!-- Context Server Dependencies -->
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-juli</artifactId>
      <version>${tomcat.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-dbcp</artifactId>
      <version>${tomcat.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-jdbc</artifactId>
      <version>${tomcat.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-servlet-api</artifactId>
      <version>${tomcat.version}</version>
      <scope>provided</scope>
    </dependency>

    <!-- Maven API Dependencies -->
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-core</artifactId>
      <version>${maven-core.version}</version>
    </dependency>

    <!-- Core Dependencies -->
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
      <version>${log4j.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
