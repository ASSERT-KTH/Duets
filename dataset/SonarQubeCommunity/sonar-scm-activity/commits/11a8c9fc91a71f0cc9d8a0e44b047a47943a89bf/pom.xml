  </repositories>

  <developers>
    <developer>
      <id>godin</id>
      <name>Evgeny Mandrikov</name>
      <timezone>+3</timezone>
    </developer>
  </developers>

  <scm>
    <connection>
      scm:svn:http://svn.codehaus.org/sonar-plugins/trunk/scm-activity
    </connection>
    <developerConnection>
      scm:svn:https://svn.codehaus.org/sonar-plugins/trunk/scm-activity
    </developerConnection>
    <url>http://svn.sonar-plugins.codehaus.org</url>
