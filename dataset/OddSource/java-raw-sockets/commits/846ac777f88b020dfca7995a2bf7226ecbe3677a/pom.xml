                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${version.plugin.compiler}</version>
                    <executions>
                        <execution>
                            <id>compile-productionsources</id>
                            <goals>
                                <goal>compile</goal>
                            </goals>
                            <phase>compile</phase>
                        </execution>
                        <execution>
                            <id>compile-test-sources</id>
                            <goals>
                                <goal>testCompile</goal>
                            </goals>
                            <phase>test-compile</phase>
                        </execution>
                    </executions>
                    <configuration>
                        <fork>true</fork>
                        <maxmem>${project.tasks.maximum.memory}</maxmem>
                        <source>${javac.source.version}</source>
                        <target>${javac.target.version}</target>
                        <debug>true</debug>
                        <debuglevel>lines,source</debuglevel>
                        <compilerArguments>
                            <Xmaxerrs>10000</Xmaxerrs>
                            <Xmaxwarns>10000</Xmaxwarns>
                            <Xlint />
                            <Werror />
                        </compilerArguments>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>native-maven-plugin</artifactId>
                    <version>${version.plugin.native}</version>
                    <executions>
                        <execution>
                            <id>regenerate-header-files</id>
                            <configuration>
                                <javahIncludes>
                                    <javahInclude>
                                        <className>io.oddsource.java.net.socket.Constants</className>
                                        <headerName>Constants.h</headerName>
                                    </javahInclude>
                                    <javahInclude>
                                        <className>io.oddsource.java.net.socket.RawSocketImpl</className>
                                        <headerName>RawSocketImpl.h</headerName>
                                    </javahInclude>
                                    <javahInclude>
                                        <className>io.oddsource.java.net.socket.SocketUtilities</className>
                                        <headerName>SocketUtilities.h</headerName>
                                    </javahInclude>
                                </javahIncludes>
                                <javahOutputDirectory>source/production/cpp</javahOutputDirectory>
                                <javahVerbose>true</javahVerbose>
                            </configuration>
                            <goals>
                                <goal>javah</goal>
                            </goals>
                            <phase>compile</phase>
                        </execution>
                        <execution>
                            <id>compile-native-code</id>
                            <configuration>
                                <compilerStartOptions>
                                    <option>-Wall</option>
                                    <option>-O2</option>
                                    <option>-pipe</option>
                                    <option>-D_REENTRANT</option>
                                    <option>-D__APPLE_USE_RFC_2292</option>
                                    <option>-lstdc++</option>
                                    <option>-I${java.home}/include</option>
                                    <option>-I${java.home}/../include</option>
                                    <option>-I${java.home}/include/darwin</option>
                                    <option>-I${java.home}/../include/darwin</option>
                                </compilerStartOptions>
                                <jdkIncludePath>${java.home}/../include</jdkIncludePath>
                                <sources>
                                    <source>
                                        <directory>source/production/cpp</directory>
                                        <fileNames>
                                            <fileName>Constants.cpp</fileName>
                                            <fileName>RawSocketImpl.cpp</fileName>
                                            <fileName>SocketUtilities.cpp</fileName>
                                        </fileNames>
                                    </source>
                                </sources>
                            </configuration>
                            <goals>
                                <goal>compile</goal>
                            </goals>
                            <phase>compile</phase>
                        </execution>
                        <execution>
                            <id>link-native-code</id>
                            <configuration>
                                <attach>false</attach>
                                <linkerFinalName>lib-oddsource-raw-sockets</linkerFinalName>
                                <linkerFinalNameExt>so</linkerFinalNameExt>
                                <linkerOutputDirectory>
                                    source/production/resources/io/oddsource/java/net/socket
                                </linkerOutputDirectory>
                                <linkerStartOptions>
                                    <option>-lstdc++</option>
                                    <option>-I${java.home}/include</option>
                                    <option>-I${java.home}/../include</option>
                                    <option>-I${java.home}/include/darwin</option>
                                    <option>-I${java.home}/../include/darwin</option>
                                    <option>-dynamiclib</option>
                                    <option>-prebind</option>
                                    <option>-single_module</option>
                                </linkerStartOptions>
                            </configuration>
                            <goals>
                                <goal>link</goal>
                            </goals>
                            <phase>compile</phase>
                        </execution>
                    </executions>
