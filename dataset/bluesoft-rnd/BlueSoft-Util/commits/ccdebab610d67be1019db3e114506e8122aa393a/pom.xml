<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<url>http://www.bluesoft.net.pl</url>

    <name>Utility package</name>
    <description>
        A bunch of useful classes.
    </description>

    <groupId>pl.net.bluesoft</groupId>
    <artifactId>util</artifactId>
    <packaging>jar</packaging>

    <version>1.1-SNAPSHOT</version>

    <distributionManagement>
        <repository>
            <id>dreihund-releases</id>
            <name>Dreihund-Releases</name>
            <url>http://192.168.0.76:8666/nexus/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>dreihund-snapshots</id>
            <name>Dreihund-Snapshots</name>
            <url>http://192.168.0.76:8666/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <developerConnection>scm:svn:https://svn.bluesoft.net.pl/webrunner/trunk/util</developerConnection>
    </scm>

	<dependencies>                        
		<dependency>
			<groupId>commons-beanutils</groupId>
			<artifactId>commons-beanutils</artifactId>
			<version>1.8.2</version>
		</dependency>
	</dependencies>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
						<debug>true</debug>
					</configuration>
				</plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.1</version>
                    <configuration>
                        <tagBase>https://svn.bluesoft.net.pl/webrunner/tags</tagBase>
                    </configuration>
                </plugin>
			</plugins>
		</pluginManagement>
	</build>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>
