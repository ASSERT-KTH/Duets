        <developer>
            <name>Liao Qiqi</name>
            <id>knightliao</id>
            <email>knightliao (AT) gmail.com</email>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>+8</timezone>
        </developer>
    </developers>

</project>