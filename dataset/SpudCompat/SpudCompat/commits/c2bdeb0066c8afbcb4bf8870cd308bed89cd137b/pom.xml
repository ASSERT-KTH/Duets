<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.github.spudcompat</groupId>
    <artifactId>spudcompat</artifactId>
    <version>1.0.0-alpha1-SNAPSHOT</version>
    <name>SpudCompat</name>
    <description>Uses protocol injection to make different versions of minecraft clients connect to the server.</description>
    <properties>
        <java.version>1.8</java.version>
    </properties>

    <dependencies>
        <!-- Require Waterfall (not bungee) -->
        <dependency>
            <groupId>io.github.waterfallmc</groupId>
            <artifactId>waterfall-api</artifactId>
            <version>1.8-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <!-- Use lombok to reduce boilerplate -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.16.4</version>
            <scope>provided</scope>
        </dependency>
        <!-- NBT Reading -->
        <dependency>
            <groupId>org.spacehq</groupId>
            <artifactId>opennbt</artifactId>
            <version>1.0</version>
            <scope>compile</scope>
        </dependency>
        <!-- Utilities -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.4</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.name}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <minimizeJar>true</minimizeJar>
                    <relocations>
                        <relocation>
                            <relocation>
                                <pattern>org.apache.commons.lang3</pattern>
                                <shadedPattern>io.github.spudcompat.libs.commons-lang3</shadedPattern>
                            </relocation>
                        </relocation>
                    </relocations>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>techcable-repo</id>
            <url>https://repo.techcable.net/content/groups/public/</url>
        </repository>
        <!-- Waterfall Repo -->
        <repository>
            <id>ellune-repo</id>
            <url>https://repo.ellune.net/content/groups/public/</url>
        </repository>
        <!-- OpenNBT Repo -->
        <repository>
            <id>spacehq-repo</id>
            <url>https://repo.spacehq.org/content/repositories/releases/</url>
        </repository>
    </repositories>
</project>
