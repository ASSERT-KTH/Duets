		</repository>
		<repository>
			<id>archive-releases</id>
			<name>Archive Releases</name>
			<url>http://builds.archive.org:8080/maven2</url>
		</repository>
		<repository>
			<id>archive-snapshots</id>
			<name>Archive Snapshots</name>
			<url>http://builds.archive.org:8080/maven2</url>
			<snapshots>
				<enabled>true</enabled>
				<checksumPolicy>warn</checksumPolicy>
