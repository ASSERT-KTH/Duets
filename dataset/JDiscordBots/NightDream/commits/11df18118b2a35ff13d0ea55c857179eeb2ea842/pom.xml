<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>io.github.jdiscordbots</groupId>
		<artifactId>jdiscordbots-parent</artifactId>
		<version>1.0.3</version>
	</parent>
	<artifactId>NightDream</artifactId>
	<version>0.0.4</version>
	<name>NightDream</name>
	<description>a Clone of the Discord Bot Daydream (https://gitlab.com/botstudio/daydream) in Java</description>
	<licenses>
		<license>
			<name>GNU GPL Version 3.0</name>
			<url>http://www.gnu.org/licenses/gpl.html</url>
		</license>
	</licenses>
	<properties>
		<sonar.projectKey>NightDream</sonar.projectKey>
		<sonar.host.url>https://sonarcloud.io</sonar.host.url>
		<sonar.organization>nightdream</sonar.organization>
		<main>io.github.jdiscordbots.nightdream.core.NightDream</main>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.github.zastrixarundell</groupId>
			<artifactId>dbio</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>io.github.jdiscordbots</groupId>
			<artifactId>jda-testing-system</artifactId>
			<version>0.0.13-SNAPSHOT</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>io.github.jdiscordbots</groupId>
			<artifactId>nightdream-logging</artifactId>
			<version>1.1.9</version>
		</dependency>
		<dependency>
			<groupId>net.dv8tion</groupId>
			<artifactId>JDA</artifactId>
			<version>4.2.0_182</version>
		</dependency>
		<dependency>
			<groupId>net.explodingbush.KSoft4J</groupId>
			<artifactId>KSoft4J</artifactId>
			<version>1.0.9</version>
			<exclusions>
				<exclusion>
					<artifactId>slf4j-simple</artifactId>
					<groupId>org.slf4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-text</artifactId>
			<version>1.9</version>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter</artifactId>
			<version>5.7.0-M1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.platform</groupId>
			<artifactId>junit-platform-commons</artifactId>
			<version>1.7.0-M1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.platform</groupId>
			<artifactId>junit-platform-launcher</artifactId>
			<version>1.7.0-M1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.kohsuke</groupId>
			<artifactId>github-api</artifactId>
			<version>1.115</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>2.0.0-alpha1</version>
		</dependency>
		<dependency>
			<groupId>redis.clients</groupId>
			<artifactId>jedis</artifactId>
			<version>3.3.0</version>
		</dependency>
		<dependency>
			<groupId>org.javassist</groupId>
			<artifactId>javassist</artifactId>
			<version>3.27.0-GA</version>
		</dependency>
	</dependencies>
	<pluginRepositories>
		<pluginRepository>
			<id>jboss</id>
			<url>https://repository.jboss.org/nexus/content/repositories/thirdparty-releases/</url>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<resources>
			<resource>
				<filtering>false</filtering>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>info.properties</exclude>
				</excludes>
			</resource>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/resources</directory>
				<includes>
					<include>info.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>.</directory>
				<includes>
					<include>privacy-policy.md</include>
				</includes>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<proc>none</proc>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.bsc.maven</groupId>
				<artifactId>maven-processor-plugin</artifactId>
				<version>4.2-jdk8</version>
				<configuration>
					<processors>
						<processor>io.github.jdiscordbots.nightdream.compiler.CommandLookup</processor>
					</processors>
				</configuration>
				<executions>
					<execution>
						<id>process</id>
						<goals>
							<goal>process</goal>
						</goals>
						<phase>compile</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.22.0</version>
				<configuration>
					<systemPropertyVariables>
						<propertyName>profile</propertyName>
						<buildDirectory>test</buildDirectory>
					</systemPropertyVariables>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jasig.maven</groupId>
				<artifactId>maven-notice-plugin</artifactId>
				<configuration>
					<noticeTemplate>https://jdiscordbots.github.io/util/data/notice/NightDream.template</noticeTemplate>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.dellroad</groupId>
				<artifactId>dellroad-stuff-maven-plugin</artifactId>
				<version>2.4.2</version>
				<executions>
					<execution>
						<id>set-version</id>
						<goals>
							<goal>git-describe</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<always>true</always>
					<tags>true</tags>
					<dirty>-modified</dirty>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-external-version-plugin</artifactId>
				<version>0.1.0-jboss-5</version>
				<extensions>true</extensions>
				<configuration>
					<strategy hint="sysprop" />
					<deleteTemporaryFile>true</deleteTemporaryFile>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
