<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>com.atlassian.jira.plugins</groupId>
		<artifactId>jira-plugin-base</artifactId>
		<version>13</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.agilos</groupId>
	<artifactId>zendesk-jira-plugin</artifactId>
	<version>0.6-SNAPSHOT</version>
	<name>Zendesk JIRA plugin</name>
	<description>Plugin for JIRA providing Zendesk integration</description>
	<url>http://agilos.org/display/zen/ZenDesk+JIRA+plugin</url>

	<licenses>
		<license>
			<name>Apache License V2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<connection>http://svn.agilos.org/svn/public/zendesk-jira-plugin/</connection>
		<developerConnection>http://svn.agilos.org/svn/public/zendesk-jira-plugin/</developerConnection>
		<url>http://fisheye.agilos.org/browse/Agilos/zendesk-jira-plugin</url>
	</scm>

	<issueManagement>
		<system>JIRA</system>
		<url>http://svn.agilos.org/svn/public/zendesk-jira-plugin</url>
	</issueManagement>

	<organization>
		<name>Agilos</name>
		<url>http://agilos.org</url>
	</organization>


	<developers>
		<developer>
			<name>Mikis Seth SÃ¸rensen</name>
			<organization>Agilis Software ApS</organization>
			<organizationUrl>http://agilis-software.dk</organizationUrl>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>5.8</version>
			<scope>test</scope>
			<classifier>jdk15</classifier>
		</dependency>
		<dependency>
			<groupId>atlassian</groupId>
			<artifactId>atlassian-jira-rpc-plugin</artifactId>
			<version>3.13.1-1</version>
		</dependency>
		<dependency>
			<groupId>org.restlet</groupId>
			<artifactId>org.restlet</artifactId>
			<version>1.2-M2</version>
		</dependency>
	</dependencies>
	<reporting>
		<plugins>
		</plugins>
	</reporting>

	<distributionManagement>
		<site>
			<id>agilos.org</id>
			<url>scp://agilos.org/var/www/maven/zendesk/${project.version}</url>
		</site>
	</distributionManagement>

	<profiles>
		<profile>
			<id>regression-test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/testng.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>deploy2test</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy-to-testserver</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<scp file="target/zendesk-jira-plugin-${project.version}.jar"
											todir="bamboo@192.168.0.100:~/deploy" password="bamboo2997" />
										<sshexec host="192.168.0.100" username="bamboo"
											password="bamboo2997" command="~/deployjira.sh" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>RELEASE</version>
				<configuration>
					<compilerVersion>1.6</compilerVersion>
					<source>1.5</source>
					<target>1.5</target>
					<debug>true</debug>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
					<optimize>false</optimize>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-clover2-plugin</artifactId>
				<configuration>
					<targetPercentage>50%</targetPercentage>
            		<generateHistorical>true</generateHistorical>
            		<licenseLocation>clover.license</licenseLocation>
            	<historyDir>${user.home}/history/${project.artifact}</historyDir>
            	</configuration>
      		</plugin>
			<plugin>
			<groupId>org.codehaus.mojo</groupId>
				<artifactId>axistools-maven-plugin</artifactId>
				<executions>
					<execution>
						<!--phase>generate-test-resources</phase-->
						<goals>
							<goal>wsdl2java</goal>
						</goals>
						<configuration>
							<urls>
								<url>http://192.168.0.100:8080/rpc/soap/jirasoapservice-v2?wsdl</url>
								<url>http://192.168.0.100:8080/rpc/soap/agilossoapservice-v1?wsdl</url>
							</urls>
							<packageSpace>org.agilos.jira.soapclient</packageSpace>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-to-local.jira</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy file="${project.artifact.file}" todir="${tmp.webapp.dir}/WEB-INF/lib/" />
								<echo
									file="${project.build.directory}/test-classes/localtest.properties">
									jira.protocol=http
									jira.host=localhost
									jira.context=/jira
									jira.tmp=target/test-tmp/
									jira.xml.data.location=src/test/xml/
									jira.port=${http.port}
									jira.edition=enterprise
								</echo>
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-jsch</artifactId>
						<version>1.6.5</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<includes>
					<include>*.properties</include>
				</includes>
			</testResource>
		</testResources>    
	</build>
	<repositories>
		<repository>
			<id>maven-restlet</id>
			<name>Public online Restlet repository</name>
			<url>http://maven.restlet.org</url>
		</repository>
	</repositories>
	<properties>
		<jira.start>false</jira.start>
		<jira.test-lib.exports.path>d:/projects/Agilos/zendesk-jira-plugin/src/test/xml/</jira.test-lib.exports.path>
	</properties>
</project>
