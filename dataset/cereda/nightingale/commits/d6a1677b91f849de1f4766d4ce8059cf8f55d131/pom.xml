            <version>1.7.7</version>
        </dependency>
        
        <dependency>
            <groupId>ch.qos.cal10n</groupId>
            <artifactId>cal10n-api</artifactId>
            <version>0.8.1</version>
        </dependency>
        
    </dependencies>
    
</project>