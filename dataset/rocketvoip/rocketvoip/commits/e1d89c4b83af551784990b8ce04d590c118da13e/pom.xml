    <!-- When running `mvn site`, this information will be added to the report -->
    <scm>
        <connection>scm:git:https://github.com/rocketvoip/rocketvoip.git</connection>
        <developerConnection>scm:git:git@github.com:rocketvoip/rocketvoip.git</developerConnection>
        <tag>master</tag>
        <url>https://github.com/rocketvoip/rocketvoip</url>
    </scm>

    <properties>
        <!-- We use UTF-8 encoding -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <!--
    Please refer to the Spring Boot Reference for more information
    http://docs.spring.io/spring-boot/docs/1.5.1.RELEASE/reference/htmlsingle/
    -->

    <!-- The parent pom -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.1.RELEASE</version>
    </parent>

    <dependencies>
        <!-- Starter for Web application -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- Validation framework (@NotNull et. al.) -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <!-- Test framework -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!-- Make our live easier -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <!-- We use Java 8 code and want Java 8 byte-code. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <!--
            Integration Testing
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!--
            Code Coverage. We use jacoco (http://www.eclemma.org/jacoco/).

            This snippet has been copied from http://www.jacoco.org/jacoco/trunk/doc/examples/build/pom-it.xml and
            adjusted to our needs.
             -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.9</version>
                <executions>
                    <execution>
                        <id>default-prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                        <configuration>
                            <excludes>
                                <exclude>ch/zhaw/psit4/RocketVoip.class</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>default-prepare-agent-integration</id>
                        <goals>
                            <goal>prepare-agent-integration</goal>
                        </goals>
                        <configuration>
                            <excludes>
                                <exclude>ch/zhaw/psit4/RocketVoip.class</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>default-report</id>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-report-integration</id>
                        <goals>
                            <goal>report-integration</goal>
                        </goals>
                    </execution>
                    <!--                    <execution>
                                            <id>default-check</id>
                                            <goals>
                                                <goal>check</goal>
                                            </goals>
                                            <configuration>
                                                <rules>&lt;!&ndash; implementation is needed only for Maven 2 &ndash;&gt;
                                                    <rule implementation="org.jacoco.maven.RuleConfiguration">
                                                        <element>BUNDLE</element>
                                                        <limits>&lt;!&ndash; implementation is needed only for Maven 2 &ndash;&gt;
                                                            <limit implementation="org.jacoco.report.check.Limit">
                                                                <counter>COMPLEXITY</counter>
                                                                <value>COVEREDRATIO</value>
                                                                <minimum>0.60</minimum>
                                                            </limit>
                                                        </limits>
                                                    </rule>
                                                </rules>
                                            </configuration>
                                        </execution>-->
                </executions>
            </plugin>

            <!-- Publish coverage information on coveralls -->
            <plugin>
                <groupId>org.eluder.coveralls</groupId>
                <artifactId>coveralls-maven-plugin</artifactId>
                <version>4.3.0</version>
                <!-- We're using travis, so this ain't necessary.
                <configuration>
                    <repoToken>yourcoverallsprojectrepositorytoken</repoToken>
                </configuration>
                -->
            </plugin>

        </plugins>
    </build>

    <reporting>
        <plugins>
            <!--
              JavaDoc
             -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.10.4</version>
            </plugin>

            <!-- Create jacoco report when doing `mvn site` -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <reportSets>
                    <reportSet>
                        <reports>
                            <!-- select non-aggregate reports -->
                            <report>report</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
</project>
