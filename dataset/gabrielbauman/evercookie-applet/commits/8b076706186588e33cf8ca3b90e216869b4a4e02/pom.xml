<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>evercookie</groupId>
  <artifactId>evercookie-applet</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Evercookie Applet</name>
  <description>A storage mechanism for Evercookie that uses the JNDI PersistenceService.</description>
  <developers>
    <developer>
      <name>Gabriel Bauman</name>
      <email>gabe@codehaus.org</email>
      <url>http://gabrielbauman.com</url>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:git://bitbucket.org/gabrielbauman/evercookie-applet.git</connection>
    <developerConnection>scm:git:git@bitbucket.org:gabrielbauman/evercookie-applet.git</developerConnection>
    <url>http://bitbucket.org/gabrielbauman/evercookie-applet</url>
  </scm>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.home>/usr/java/jdk1.7.0_17</java.home>
  </properties>
  <dependencies>
    <dependency>
      <groupId>sun.plugin</groupId>
      <artifactId>plugin</artifactId>
      <version>1.7</version>
      <scope>system</scope>
      <systemPath>${java.home}/jre/lib/plugin.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>javax.jnlp</groupId>
      <artifactId>jnlp</artifactId>
      <version>1.7</version>
      <scope>system</scope>
      <systemPath>${java.home}/sample/jnlp/servlet/jnlp.jar</systemPath>
    </dependency>
  </dependencies>
  <build>
    <finalName>evercookie</finalName>
    <resources>
      <!-- Move the JNLP and HTML into the target dir and don't include them in the .jar -->
      <resource>
        <includes>
          <include>*.html</include>
          <include>*.jnlp</include>
        </includes>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <targetPath>../</targetPath>
      </resource>
    </resources>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.3.2</version>
        </plugin>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.3.2</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <filters>
            <filter>src/assembly/filter.properties</filter>
          </filters>
          <descriptors>
            <descriptor>src/assembly/distribution.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <localCheckout>true</localCheckout>
          <pushChanges>false</pushChanges>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>