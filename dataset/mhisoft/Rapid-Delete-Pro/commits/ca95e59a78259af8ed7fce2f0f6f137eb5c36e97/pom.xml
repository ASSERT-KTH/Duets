    <!-- ==========================================
     ========== rdpro UI version ==========
     ============================================ -->

    <profiles>
        <profile>
            <id>rdproui</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <manifest-file>src/main/resources/META-INF/MANIFEST.MF</manifest-file>
            </properties>

            <dependencies>
                <dependency>
                    <groupId>com.intellij</groupId>
                    <artifactId>forms_rt</artifactId>
                    <version>14.0</version>
                </dependency>

                <!-- <dependency>
                     <groupId>jgoodies</groupId>
                     <artifactId>forms</artifactId>
                     <version>1.0.5</version>
                 </dependency>-->


            </dependencies>



            <build>
                <finalName>rdpro-ui</finalName>

                <!--resource plug in will out put the below to the target/classes-->
                <resources>
                    <!--
                    <resource>
                        <filtering>false</filtering>
                        <directory>${project.basedir}</directory>
                        <includes>
                            <include>lib/forms_rt.jar</include>
                        </includes>
                    </resource>
                    -->
                    <resource>
                        <filtering>false</filtering>
                        <directory>${project.basedir}/src/main/resources</directory>
                        <includes>
                            <include>images/*.png</include>
                        </includes>
                    </resource>
                </resources>


                <plugins>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>ideauidesigner-maven-plugin</artifactId>
                        <version>1.0-beta-2</version>
                        <executions>
                            <execution>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>javac2</goal>
                                </goals>
                            </execution>
                        </executions>

                        <configuration>
                            <sourceDirectory>${project.basedir}/src/main/java</sourceDirectory>
                            <fork>true</fork>
                            <debug>true</debug>
                            <failOnError>true</failOnError>
                            <verbose>true</verbose>
                        </configuration>

                        <dependencies>
                            <dependency>
                                <groupId>org.jdom</groupId>
                                <artifactId>jdom</artifactId>
                                <version>1.1</version>
                            </dependency>

                            <dependency>
                                <groupId>com.intellij</groupId>
                                <artifactId>asm-all</artifactId>
                                <version>14.0</version>
                            </dependency>
                        </dependencies>

                    </plugin>

                    <plugin>
                        <!-- Build an executable JAR -->
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <outputDirectory>dist\</outputDirectory>
                            <archive>
                                <manifestFile>${manifest-file}</manifestFile>
                            </archive>
                            <!--intelliJ build careate these three under classes-->
                            <excludes>
                                <exclude>META-INF\MANIFEST.MF*</exclude>
                                <exclude>images.jar</exclude>
                                <exclude>forms_rt-*.jar</exclude>
                            </excludes>
                        </configuration>
                    </plugin>

                </plugins>

            </build>
        </profile>


        <!-- ==========================================
         ========== rdpro console  version ==========
         ============================================ -->

        <profile>
            <id>rdpro-console</id>
            <properties>
                <manifest-file>src/main/resources/META-INF/MANIFEST.MF-console</manifest-file>
            </properties>
            <build>
                <finalName>rdpro-console</finalName>
                <plugins>

                    <plugin>
                        <!-- Build an executable JAR -->
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <outputDirectory>dist\</outputDirectory>
                            <archive>
                                <manifest>
                                    <mainClass>org.mhisoft.rdpro.RdPro</mainClass>
                                </manifest>
                            </archive>
                            <!--intelliJ build careate these three under classes-->
                            <excludes>
                                <exclude>MANIFEST.MF</exclude>
                                <exclude>META-INF\MANIFEST.MF*</exclude>
                                <exclude>lib\*</exclude>
                                <exclude>images.jar</exclude>
                                <exclude>forms_rt-*.jar</exclude>
                            </excludes>
                        </configuration>
                    </plugin>

                </plugins>


            </build>
        </profile>
    </profiles>



</project>