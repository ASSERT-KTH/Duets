								<classpath />
								<argument>com.google.web.bindery.requestfactory.apt.ValidationTool</argument>
								<argument>${project.build.outputDirectory}</argument>
								<argument>${project.groupId}.shared.requestfactory.AnalyticsRequestFactory</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
