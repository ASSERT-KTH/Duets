				<version>1.2</version>
				<executions>
					<execution>
						<id>NF4Droid</id>
						<phase>process-classes</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<id>VerifyRequestFactoryInterfacesNF4Droid</id>
