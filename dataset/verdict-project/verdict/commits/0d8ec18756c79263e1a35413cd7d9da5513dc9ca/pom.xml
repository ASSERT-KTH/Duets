        <maven.compiler-plugin.version>3.7.0</maven.compiler-plugin.version>
        <maven.assembly-plugin.version>3.1.0</maven.assembly-plugin.version>
        <maven.failsafe.version>2.13</maven.failsafe.version>
        <maven.surefire.version>2.12.4</maven.surefire.version>
        <maven.javadoc.version>2.10.4</maven.javadoc.version>
        <skipTests>true</skipTests>
        <main.basedir>${project.basedir}</main.basedir>

        <!-- default spark setting; -->
        <!-- Important!! The scala version for spark1 and spark2 must be different. -->
        <spark.scala.version>2.10</spark.scala.version>
        <spark.version>1.6.3</spark.version>
        <spark2.scala.version>2.11</spark2.scala.version>
        <spark2.version>2.2.0</spark2.version>

        <spark.core.version>${spark.version}</spark.core.version>
        <spark.sql.version>${spark.version}</spark.sql.version>
        <spark.hive.version>${spark.version}</spark.hive.version>
        <spark2.core.version>${spark2.version}</spark2.core.version>
        <spark2.sql.version>${spark2.version}</spark2.sql.version>
        <spark2.hive.version>${spark2.version}</spark2.hive.version>
    </properties>

