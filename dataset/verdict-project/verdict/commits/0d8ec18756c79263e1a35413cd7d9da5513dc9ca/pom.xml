                                        <echo>- apache</echo>
                                        <echo>- apache-spark-scala2.10</echo>
                                        <echo>- apache-spark2-scala2.10</echo>
                                        <echo>- apache-spark-scala2.11</echo>
                                        <echo>- apache-spark2-scala2.11</echo>
                                        <echo>- cdh5.11.1</echo>
                                        <echo>- cdh5.12.1</echo>
                                        <echo>- mapr-spark2.0.1</echo>
                                        <echo>- mapr-spark2.1.0</echo>
