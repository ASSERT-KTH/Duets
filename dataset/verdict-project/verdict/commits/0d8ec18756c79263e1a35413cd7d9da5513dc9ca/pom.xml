            </activation>
            <properties>
                <spark.scala.version>2.10</spark.scala.version>
                <spark.version>1.6.0-cdh5.12.1</spark.version>
                <spark2.scala.version>2.11</spark2.scala.version>
                <spark2.version>2.2.0.cloudera1</spark2.version>
