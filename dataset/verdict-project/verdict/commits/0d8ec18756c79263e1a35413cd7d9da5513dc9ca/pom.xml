                <spark2.scala.version>2.11</spark2.scala.version>
                <platform.name>spark_2.10</platform.name>
            </properties>
            <modules>
                <module>core</module>
            </modules>
        </profile>
        <profile>
            <id>apache-spark2-scala2.10</id>
            <activation>
