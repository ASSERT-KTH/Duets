<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.redhat.gps</groupId>
    <artifactId>aq-to-amq</artifactId>
    <version>1.5-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>Oracle AQ to ActiveMQ Bridge Bundle</name>

    <properties>
        <oracle.version>11.2.0.4</oracle.version>
        
        <camel.version>2.12.0.redhat-610328</camel.version>
        <activemq.version>5.9.0.redhat-610328</activemq.version>
        <slf4j.version>1.7.5</slf4j.version>

        <apache.aries.version>1.0.1</apache.aries.version>
        <spring.version>3.1.3.RELEASE</spring.version>

        <junit.version>4.11</junit.version>

        <maven.felix.bundle.version>2.1.0</maven.felix.bundle.version>
        <maven.surefire.plugin.version>2.16</maven.surefire.plugin.version>
        <maven.jar.plugin.version>2.4</maven.jar.plugin.version>
        <maven.resources.plugin.version>2.6</maven.resources.plugin.version>
        <maven.install.plugin.version>2.3.1</maven.install.plugin.version>
        <maven.compiler.plugin.version>2.5</maven.compiler.plugin.version>
        <maven.source.plugin.version>2.2.1</maven.source.plugin.version>
        <maven.build.helper.plugin.version>1.8</maven.build.helper.plugin.version>

        <!-- use utf-8 encoding -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-spring</artifactId>
            <version>${camel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-core</artifactId>
            <version>${camel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-jms</artifactId>
            <version>${camel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-camel</artifactId>
            <version>${activemq.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.aries.transaction</groupId>
            <artifactId>org.apache.aries.transaction.manager</artifactId>
            <version>${apache.aries.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-test-spring</artifactId>
            <version>${camel.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jul-to-slf4j</artifactId>
            <version>${slf4j.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc6-wrapped</artifactId>
            <version>${oracle.version}</version>
        </dependency>
        <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>aqapi-wrapped</artifactId>
            <version>${oracle.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-kahadb-store</artifactId>
            <version>${activemq.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>install</defaultGoal>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven.compiler.plugin.version}</version>
                    <configuration>
                        <source>1.7</source>
                        <target>1.7</target>
                        <maxmem>1024M</maxmem>
                        <showDeprecation>true</showDeprecation>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>${maven.install.plugin.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <testResources>
            <testResource>
                <directory>src/test/resources/</directory>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${maven.felix.bundle.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>aq-to-amq-message-bridge</Bundle-SymbolicName>
                        <Private-Package>com.redhat.gps.*</Private-Package>
                        <Import-Package>
                            org.slf4j,
                            org.apache.camel.component.jms,
                            org.apache.activemq,
                            org.springframework.jms.connection,
                            org.apache.camel.converter.jaxb,
                            oracle.jdbc,
                            oracle.jdbc.oracore,
                            oracle.jdbc.aq,
                            oracle.jdbc.dcn,
                            oracle.jdbc.pool,
                            oracle.jdbc.xa.client,
                            oracle.jdbc.internal,
                            oracle.jms,
                            oracle.sql,
                            org.apache.camel.spring.spi,
                            org.springframework.beans.factory,
                            org.springframework.beans.factory.annotation,
                            org.springframework.jdbc.core,
                            org.springframework.jmx.export,
                            org.springframework.jmx.export.notification,
                            javax.sql;resolution:=optional,
                            javax.jms;resolution:=optional,
                            *;resolution:=optional
                        </Import-Package>
                        <Include-Resource>src/main/resources</Include-Resource>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven.surefire.plugin.version}</version>
                <configuration>
                    <childDelegation>false</childDelegation>
                    <failIfNoTests>false</failIfNoTests>
                    <useFile>true</useFile>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>normal</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <karaf.profile.home>${project.build.directory}/test-classes</karaf.profile.home>
            </properties>
        </profile>
    </profiles>

</project>
