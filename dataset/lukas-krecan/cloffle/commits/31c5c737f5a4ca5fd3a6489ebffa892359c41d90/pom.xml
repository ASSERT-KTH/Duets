<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.javacrumbs.cloffle</groupId>
    <artifactId>cloffle</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <properties>
        <truffle.dist>/home/lukas/src/blog_workspace/graal/truffle/mxbuild/dists</truffle.dist>
        <graal.path>/home/lukas/src/blog_workspace/graal/jvmci/jdk1.8.0_65/product</graal.path>
    </properties>
    <name>cloffle</name>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <artifactId>clojure-utils</artifactId>
            <groupId>net.mikera</groupId>
            <version>0.6.2</version>
        </dependency>
        <dependency>
            <groupId>org.clojure</groupId>
            <artifactId>clojure</artifactId>
            <version>1.8.0-RC3</version>
        </dependency>
        <dependency>
            <groupId>org.clojure</groupId>
            <artifactId>tools.analyzer.jvm</artifactId>
            <version>0.6.9</version>
        </dependency>
        <dependency>
            <groupId>com.oracle.truffle</groupId>
            <artifactId>dsl-processor</artifactId>
            <version>1.8.0.25</version>
            <scope>system</scope>
            <systemPath>${truffle.dist}/truffle-dsl-processor.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.oracle.truffle</groupId>
            <artifactId>truffle-api</artifactId>
            <version>1.8.0.25</version>
            <scope>system</scope>
            <systemPath>${truffle.dist}/truffle-api.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>1.7.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <verbose>true</verbose>
                    <fork>true</fork>
                    <executable>${graal.path}/bin/javac</executable>
                    <compilerVersion>1.8</compilerVersion>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>clojars.org</id>
            <url>http://clojars.org/repo</url>
        </repository>
    </repositories>
</project>
