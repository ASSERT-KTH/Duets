<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Project information -->
    <groupId>com.authdb</groupId>
    <artifactId>authdb</artifactId>
    <version>dev-SNAPSHOT</version>
    <name>AuthDB</name>
    <url>http://www.authdb.com</url>
    <description>Script and custom MySQL database user authentication and security plugin for Bukkit-based Minecraft servers.</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <bukkit.version>1.0.1-R2-SNAPSHOT</bukkit.version>
    </properties>

    <!-- License -->
    <licenses>
        <license>
            <name>Creative Commons CC BY-NC-ND 3.0</name>
            <url>http://creativecommons.org/licenses/by-nc-nd/3.0/</url>
            <distribution>repo</distribution>
            <comments>This license only allows others to download your works and share them with others as long as they credit you, but they can't change them in any way or use them commercially.</comments>
        </license>
    </licenses>

    <!-- Source code -->
    <scm>
        <developerConnection>scm:git:git@github.com:CraftFire/${project.name}.git</developerConnection>
        <connection>scm:git:git://github.com/CraftFire/${project.name}.git</connection>
        <url>https://github.com/CraftFire/${project.name}</url>
    </scm>

    <!-- Continuous integration -->
    <ciManagement>
        <system>jenkins</system>
        <url>http://ci.craftfire.com</url>
    </ciManagement>

    <!-- Repository locations -->
    <repositories>
        <repository>
            <id>craftfire-repo</id>
            <url>http://repo.craftfire.com</url>
        </repository>
    </repositories>

    <!-- Dependencies -->
    <dependencies>
        <!-- <dependency>
            <groupId>com.craftfire</groupId>
            <artifactId>commons</artifactId>
            <version>1.0.0</version>
        </dependency> -->
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>craftbukkit</artifactId>
            <version>${bukkit.version}</version>
        </dependency>
        <dependency>
            <groupId>org.getspout</groupId>
            <artifactId>spoutpluginapi</artifactId>
            <version>dev-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.platymuus.bukkit</groupId>
            <artifactId>permissions</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>com.nijikokun.bukkit</groupId>
            <artifactId>permissions</artifactId>
            <version>3.1.6</version>
        </dependency>
        <dependency>
            <groupId>com.ensifera.animosity</groupId>
            <artifactId>craftirc</artifactId>
            <version>2.13</version>
        </dependency>
    </dependencies>

    <!-- Build -->
    <build>
        <defaultGoal>clean</defaultGoal>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        <!-- Resources -->
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>false</filtering>
                <directory>${basedir}</directory>
                <includes>
                    <include>LICENSE.txt</include>
                </includes>
            </resource>
            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/resources</directory>
                <includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
            <resource>
                <targetPath>files/config</targetPath>
                <filtering>false</filtering>
                <directory>${basedir}/src/main/resources/config</directory>
                <includes>
                    <include>*</include>
                </includes>
            </resource>
            <resource>
                <targetPath>files/translations</targetPath>
                <filtering>false</filtering>
                <directory>${basedir}/src/main/resources/translations</directory>
                <includes>
                    <include>*</include>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <!-- Build plugins -->
        <plugins>
            <!-- Compile plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
            </plugin>
            <!-- JAR creation plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Class-Path>../lib/mysql.jar ../mysql.jar ../lib/mysql-connector-java-bin.jar ../mysql-connector-java-bin.jar ../lib/mysql-connector-java-5.1.14-bin.jar ../mysql-connector-java-5.1.14-bin.jar ../lib/mysql-connector-java-5.1.15-bin.jar ../mysql-connector-java-5.1.15-bin.jar ../lib/mysql-connector-java-5.1.16-bin.jar ../mysql-connector-java-5.1.16-bin.jar ../lib/mysql-connector-java-5.1.17-bin.jar ../mysql-connector-java-5.1.17-bin.jar ../lib/mysql-connector-java-5.1.18-bin.jar ../mysql-connector-java-5.1.18-bin.jar</Class-Path>/
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>