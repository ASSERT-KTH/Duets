        <dependency>
            <groupId>com.hugin</groupId>
            <artifactId>hugin</artifactId>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/hgapi83_amidst-64.jar</systemPath>
            <version>1.0.0</version>
