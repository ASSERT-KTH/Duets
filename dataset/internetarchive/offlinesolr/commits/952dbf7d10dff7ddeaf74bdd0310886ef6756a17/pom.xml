    </dependency>

    <dependency>
       <artifactId>slf4j-simple</artifactId>
       <groupId>org.slf4j</groupId>
       <version>1.6.6</version>
       <type>jar</type>
       <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
