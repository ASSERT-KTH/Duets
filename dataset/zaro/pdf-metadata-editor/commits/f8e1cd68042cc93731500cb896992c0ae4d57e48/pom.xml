	<properties>
		<staging.dir>${project.build.directory}</staging.dir>
		<appbudle.jre>${java.home}/../../../</appbudle.jre>
		<vm.location></vm.location>
		<version.izpack>${project.version}</version.izpack>
		<arch.64></arch.64>
		<app.filename>PdfMetadataEditor</app.filename>
		<native.bundle>image</native.bundle>
	</properties>


	<profiles>
		<profile>
			<id>os_win</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<native.bundle>msi</native.bundle>
				<appbudle.jre></appbudle.jre>
			</properties>
		</profile>
		<profile>
			<id>os_mac</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<properties>
				<native.bundle>dmg</native.bundle>
				<appbudle.jre></appbudle.jre>
			</properties>
		</profile>
		<profile>
			<id>arch64</id>
			<activation>
				<os>
					<arch>x64</arch>
				</os>
			</activation>
			<properties>
				<arch.64>64</arch.64>
			</properties>
		</profile>
	</profiles>


	<build>
		<resources>
			<resource>
				<directory>src/main/resources/</directory>
				<excludes>
					<exclude>*.properties</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources/</directory>
				<includes>
					<include>*.properties</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<!-- appbundler should run before shade, plugin so that it includes the 
				original and not shaded jar -->
