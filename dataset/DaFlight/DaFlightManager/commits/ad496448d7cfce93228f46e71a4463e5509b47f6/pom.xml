<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    <groupId>me.dags</groupId>
    <artifactId>DaFlightManager</artifactId>
    <version>1.3-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>DaFlightManager</name>
    <url>https://github.com/dags-/DaFlightManager</url>
    
    <scm>
        <connection>scm:git:https://github.com/dags-/DaFlightManager.git</connection>
        <url>https://github.com/dags-/DaFlightManager</url>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build> 
        <finalName>${project.artifactId}-${project.version}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>      
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
        </plugins>   
    </build>

    <repositories>
        <repository>
            <id>dags-nxs</id>
            <url>http://nxs.dags.me/nexus/content/repositories/DaRepo/</url>
        </repository>
        <repository>
            <id>spigotmc</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>
    
    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.8.3-R0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>fr.neatmonster</groupId>
            <artifactId>NoCheatPlus</artifactId>
            <version>3.10.12</version>
        </dependency>
        <dependency>
            <groupId>me.dags</groupId>
            <artifactId>DaFlightManagerCommon</artifactId>
            <version>1.0.1</version>
        </dependency>
    </dependencies>
    
</project>
