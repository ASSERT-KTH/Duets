<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>gr.csri.poeticon.praxicon</groupId>
    <artifactId>praxicondb</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    <build>
        <sourceDirectory>src/main</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/test/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <includes>
                                <include>gr/csri/poeticon/praxicon/db/entities/*.java</include>
                            </includes>
                            <outputDirectory>${project.build.directory}/schemas</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
                <configuration>

                    <transformSchemas>
                    <!--
                            Each schema element defines:

                            a) A <<namespace uri>> for one of your namespaces.
                               This namespace uri must be unique within the schemas element.

                            b) A <<toPrefix>> that you want to use for the namespace.
                               Should not contain whitespace or exotic characters.
                               This yields a namespace definition on the form
                               <xs:schema ... xmlns:[toPrefix]="[uri]" ... />

                               (I.e: <xs:schema ... xmlns:some="http://some/namespace"
                                                    xmlns:xs="http://www.w3.org/2001/XMLSchema"> )

                               ... and transforms relevant xml schema elements to use the provided namespace prefix:

                               <some:elementName ... />

                            c) The desired <<toFile>> name of the generated XML schema definition file,
                               excluding the ".xsd" suffix (which will be added automatically).

                        -->
                        <transformSchema>
                            <uri>http://www.csri.gr/concept</uri>
                            <toPrefix>concept</toPrefix>
                            <toFile>gr/praxicondb/xsd/concept.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/relation</uri>
                            <toPrefix>relation</toPrefix>
                            <toFile>gr/praxicondb/xsd/relation.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/relation_argument</uri>
                            <toPrefix>relation_argument</toPrefix>
                            <toFile>gr/praxicondb/xsd/relation_argument.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/language_representation</uri>
                            <toPrefix>language_representation</toPrefix>
                            <toFile>gr/praxicondb/xsd/language_representation.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/motoric_representation</uri>
                            <toPrefix>motoric_representation</toPrefix>
                            <toFile>gr/praxicondb/xsd/motoric_representation.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/visual_representation</uri>
                            <toPrefix>visual_representation</toPrefix>
                            <toFile>gr/praxicondb/xsd/visual_representation.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/relation_set</uri>
                            <toPrefix>relation_set</toPrefix>
                            <toFile>gr/praxicondb/xsd/relation_set.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/relationset_relation</uri>
                            <toPrefix>relationset_relation</toPrefix>
                            <toFile>gr/praxicondb/xsd/relationset_relation.xsd</toFile>
                        </transformSchema>
                        <transformSchema>
                            <uri>http://www.csri.gr/relation_type</uri>
                            <toPrefix>relation_type</toPrefix>
                            <toFile>gr/praxicondb/xsd/relation_type.xsd</toFile>
                        </transformSchema>
                    </transformSchemas>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                    <verbose>True</verbose>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <version>3.13</version>
                <extensions>true</extensions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>2.12.1</version>
                <configuration>
                    <configLocation>checkstyle.xml</configLocation>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>unknown-jars-temp-repo</id>
            <name>A temporary repository created by NetBeans for libraries and jars it could not identify. Please replace the dependencies in this repository with correct ones and delete this repository.</name>
            <url>file:${project.basedir}/lib</url>
        </repository>
    </repositories>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <xsd.destination.dir>${project.build.sourceDirectory}/../resources/schema/</xsd.destination.dir>
        <jaxb.api.version></jaxb.api.version>
    </properties>
