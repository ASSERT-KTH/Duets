<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
 <modelVersion>4.0.0</modelVersion>
 <groupId>com.github.richard-melvin</groupId>
 <artifactId>junit-theory-suite</artifactId>
 <version>0.7.2</version>
 <name>Junit Theory Suite runner</name>
 <properties>
  <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  <maven.compiler.source>1.8</maven.compiler.source>
  <maven.compiler.target>1.8</maven.compiler.target>
 </properties>
 <dependencies>
  <dependency>
   <!--Junit - note used directly as this is a test tool -->
   <groupId>junit</groupId>
   <artifactId>junit</artifactId>
   <version>4.12</version>
   <scope>compile</scope>
  </dependency>
  <dependency>
   <!--Junit extensions; need this to resolve https://github.com/junit-team/junit/issues/64 -->
   <groupId>org.junit.contrib</groupId>
   <artifactId>junit-theories</artifactId>
   <version>5.0-alpha-3</version>
  </dependency>
  <dependency>
   <!-- Logging API -->
   <groupId>org.slf4j</groupId>
   <artifactId>slf4j-api</artifactId>
   <version>1.7.12</version>
   <scope>compile</scope>
  </dependency>
  <dependency>
   <!-- Logging implementation (can be freely swapped out) -->
   <groupId>ch.qos.logback</groupId>
   <artifactId>logback-classic</artifactId>
   <version>1.1.3</version>
   <scope>test</scope>
  </dependency>
  <dependency>
   <!-- Mocking framework -->
   <groupId>org.mockito</groupId>
   <artifactId>mockito-core</artifactId>
   <version>1.10.19</version>
   <scope>test</scope>
  </dependency>
  <dependency>
   <!-- Quickcheck for testing -->
   <groupId>com.pholser</groupId>
   <artifactId>junit-quickcheck-core</artifactId>
   <version>0.5-beta-1</version>
   <scope>test</scope>
  </dependency>
  <dependency>
   <groupId>com.pholser</groupId>
   <artifactId>junit-quickcheck-generators</artifactId>
   <version>0.5-alpha-3</version>
   <scope>test</scope>
  </dependency>
 </dependencies>
 <build>
  <plugins>
   <plugin>
    <!-- Testing -->
    <artifactId>maven-surefire-plugin</artifactId>
    <version>2.18.1</version>
    <configuration>
     <redirectTestOutputToFile>true</redirectTestOutputToFile>
    </configuration>
   </plugin>
   <plugin>
    <!-- Integration Testing -->
    <artifactId>maven-failsafe-plugin</artifactId>
    <version>2.18.1</version>
    <configuration>
     <redirectTestOutputToFile>true</redirectTestOutputToFile>
    </configuration>
   </plugin>
   <plugin>
    <!-- Compiler -->
    <artifactId>maven-compiler-plugin</artifactId>
    <version>3.3</version>
    <configuration>
     <showWarnings>true</showWarnings>
     <showDeprecation>true</showDeprecation>
     <compilerArgs>
      <arg>-Xlint:all</arg>
     </compilerArgs>
    </configuration>
   </plugin>
   <plugin>
    <!-- Mutation coverage -->
    <groupId>org.pitest</groupId>
    <artifactId>pitest-maven</artifactId>
    <version>1.1.6</version>
    <configuration>
     <targetClasses>
      <param>com.github.radm.theories.*</param>
      <param>com.github.radm.theories.internals.*</param>
     </targetClasses>
     <targetTests>
      <param>com.github.radm.theories.pairwise.test.*</param>
      <param>com.github.radm.theories.runner.test.*</param>
     </targetTests>
     <timestampedReports>false</timestampedReports>
     <coverageThreshold>75</coverageThreshold>
     <useSlf4j>true</useSlf4j>
    </configuration>
    <executions>
     <execution>
      <phase>integration-test</phase>
      <goals>
       <goal>mutationCoverage</goal>
      </goals>
     </execution>
    </executions>
   </plugin>
  </plugins>
 </build>
 <scm>
  <url>https://github.com/radm/junit-theory-suite</url>
 </scm>
 <issueManagement>
  <system>Github Issues</system>
  <url>https://github.com/radm/junit-theory-suite/issues</url>
 </issueManagement>
 <developers>
  <developer>
   <email>richard.melvin@scisys.co.uk</email>
  </developer>
 </developers>
 <licenses>
  <license>
   <name>The MIT License (MIT)</name>
   <distribution>repo</distribution>
  </license>
 </licenses>
 <inceptionYear>2013</inceptionYear>
</project>
