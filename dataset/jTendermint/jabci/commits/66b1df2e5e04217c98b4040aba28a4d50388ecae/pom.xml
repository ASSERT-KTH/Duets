	<modelVersion>4.0.0</modelVersion>


	<groupId>com.github.jtendermint</groupId>
	<artifactId>jabci</artifactId>
	<version>0.9.0-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
