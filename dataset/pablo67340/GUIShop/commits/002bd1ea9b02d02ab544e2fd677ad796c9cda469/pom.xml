<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.pablo67340.shop</groupId>
  <artifactId>BKCommonLib</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>GUIShop</name>
  <url>http://dev.bukkit.org/bukkit-plugins/gui-shop/</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.mcversion>v1_7_R1</project.mcversion>
    <project.cbversion>1.7.2-R0.1</project.cbversion>
    <project.stableversion>1.57</project.stableversion>
    <project.stableserver>1.7.2-R0.1</project.stableserver>
    <project.stabledate>1 January 2014</project.stabledate>
  </properties>

  <repositories>
    <!-- Repo for access to Objenesis -->
    <repository>
      <id>Maven-repo</id>
      <name>Maven repository</name>
      <url>http://repo1.maven.org/maven2</url>
    </repository>
  </repositories>

  <!-- Build -->
  <build>
  	<defaultGoal>clean install</defaultGoal>

	<!-- Resources (the filtering allows us to use project properties in plugin.yml) -->
	<resources>
      <resource>
        <directory>src</directory>
        <filtering>true</filtering>
        <includes>
          <include>plugin.yml</include>
          <include>config.yml</include>
        </includes>
      </resource>
	</resources>

	<!-- Plugins -->
	<plugins>
	  <!-- Needed for shading in CGLib -->

      <!-- Version image generation -->
      <plugin>
        <groupId>com.pablo67340</groupId>
        <artifactId>imagegenerator-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <id>Version Image Generation</id>
            <goals>
              <goal>generate_image</goal>
            </goals>
            <configuration>
              <name>GUIShopVersion</name>
              <labels>
                <label>
                  <text>${project.stableversion}</text>
                  <posX>182</posX>
                  <posY>174</posY>
                  <color>CYAN</color>
                  <align>CENTER</align>
                  <font>
                    <name>calibri</name>
                    <size>18</size>
                    <bold>true</bold>
                  </font>
                </label>
                <label>
                  <text>${project.stableserver}</text>
                  <posX>182</posX>
                  <posY>196</posY>
                  <color>CYAN</color>
                  <align>CENTER</align>
                  <font>
                    <name>calibri</name>
                    <size>18</size>
                    <bold>true</bold>
                  </font>
                </label>
                <label>
                  <text>${project.stabledate}</text>
                  <posX>182</posX>
                  <posY>218</posY>
                  <color>CYAN</color>
                  <align>CENTER</align>
                  <font>
                    <name>calibri</name>
                    <size>18</size>
                    <bold>true</bold>
                  </font>
                </label>
                <label>
                  <text>${project.version}</text>
                  <posX>424</posX>
                  <posY>174</posY>
                  <color>CYAN</color>
                  <align>CENTER</align>
                  <font>
                    <name>calibri</name>
                    <size>18</size>
                    <bold>true</bold>
                  </font>
                </label>
                <label>
                  <text>${project.cbversion}</text>
                  <posX>424</posX>
                  <posY>196</posY>
                  <color>CYAN</color>
                  <align>CENTER</align>
                  <font>
                    <name>calibri</name>
                    <size>18</size>
                    <bold>true</bold>
                  </font>
                </label>
                <label>
                  <text>$date{dd MMMM yyyy}</text>
                  <posX>424</posX>
                  <posY>218</posY>
                  <color>CYAN</color>
                  <align>CENTER</align>
                  <font>
                    <name>calibri</name>
                    <size>18</size>
                    <bold>true</bold>
                  </font>
                </label>
              </labels>
            </configuration>
          </execution>
        </executions>
      </plugin>
 
	  <!-- Clean up (this is to make testing easier) -->
	  <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>auto-clean</id>
            <phase>install</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <excludeDefaultDirectories>true</excludeDefaultDirectories>
              <filesets>
                <fileset>
                  <directory>${project.build.directory}</directory>
                  <includes>
                    <include>original-*.jar</include>
                    <include>*-shaded.jar</include>
                  </includes>
                  <followSymlinks>false</followSymlinks>
                 </fileset>
               </filesets>
             </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Copy artifacts to non-versioned jar name -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>com.pablo67340.shop</groupId>
                  <artifactId>GUIShop</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}</outputDirectory>
                  <destFileName>${project.name}.jar</destFileName>
                </artifactItem>
              </artifactItems>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>

	  <!-- Compiler plugin -->
	  <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-compiler-plugin</artifactId>
		<version>2.4</version>
		<configuration>
		  <source>1.6</source>
		  <target>1.6</target>
		  <showWarnings>true</showWarnings>
		  <showDeprecation>false</showDeprecation>
		</configuration>
      </plugin>
    </plugins>
  </build>
</project>
