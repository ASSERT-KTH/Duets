<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.shortninja.staffplus</groupId>
  <artifactId>StaffPlus</artifactId>
  <version>3.0.2-BETA</version>
  <name>Staff+</name>
  <description>The ultimate moderation plugin.</description>
  <repositories>
	<repository>
		<id>inventive-repo</id>
		<url>https://repo.inventivetalent.org/content/groups/public/</url>
	</repository>
  </repositories>
  <dependencies>
	<dependency>
	  <groupId>org.inventivetalent.packetlistener</groupId>
	  <artifactId>api</artifactId>
	  <version>3.4.4</version>
	</dependency>
  </dependencies>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
      	<groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-shade-plugin</artifactId>
      	<version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <includes>
                <include>net:shortninja:staffplus:*</include>
                <include>org:inventivetalent:packetlistener:*</include>
              </includes>
              <finalName>Staff+</finalName>
              <outputDirectory>/Users/Gavin/Desktop</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>resources</directory>
        <includes>
		  <include>changelog.txt</include>
          <include>config.yml</include>
		  <include>data.yml</include>
          <include>license.txt</include>
          <include>plugin.yml</include>
          <include>lang/**/*.*</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>