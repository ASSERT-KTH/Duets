    </dependency>
    <dependency>
     <groupId>colt</groupId>
     <artifactId>colt</artifactId>
     <version>1.2.0</version>
   </dependency>
   <dependency>
     <groupId>redis.clients</groupId>
     <artifactId>jedis</artifactId>
