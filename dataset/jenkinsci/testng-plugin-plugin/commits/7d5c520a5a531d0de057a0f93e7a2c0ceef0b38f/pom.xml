<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <url>http://wiki.jenkins-ci.org/display/JENKINS/testng-plugin</url>
    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>1.399</version>
    </parent>

    <artifactId>testng-plugin</artifactId>
    <version>0.24</version>
    <packaging>hpi</packaging>
    <name>TestNG Results Plugin</name>

    <!-- get every artifact through maven.glassfish.org, which proxies all the artifacts that we need -->
    <repositories>
        <repository>
            <id>m.g.o-public</id>
            <url>http://maven.glassfish.org/content/groups/public/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>m.g.o-public</id>
            <url>http://maven.glassfish.org/content/groups/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>org.jenkins-ci.main</groupId>
            <artifactId>maven-plugin</artifactId>
        </dependency>
    </dependencies>

    <issueManagement>
      <system>JIRA</system>
      <url>https://issues.jenkins-ci.org</url>
    </issueManagement>

    <developers>
        <developer>
            <id>farshidce</id>
            <name>Farshid Ghods</name>
            <email>farshid.ghods@gmail.com</email>
        </developer>
        <developer>
            <id>nalin_makar</id>
            <name>Nalin Makar</name>
            <email>nalin.makar@gmail.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/jenkinsci/testng-plugin-plugin.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/jenkinsci/testng-plugin-plugin.git</developerConnection>
        <url>https://github.com/jenkinsci/testng-plugin-plugin</url>
    </scm>

</project>
