<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jvnet.hudson.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>1.339</version><!-- which version of Hudson is this plugin built against? -->
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>global-build-stats</artifactId>
  <version>1.1-SNAPSHOT</version>
  <name>Hudson global-build-stats plugin</name>
  <packaging>hpi</packaging>
  <url>http://wiki.hudson-ci.org/display/HUDSON/Global+Build+Stats+Plugin</url>
  <description>Global build stats plugin will allow to gather and display global build result statistics. It is a useful tool allowing to display global hudson build trend over time.</description>
  
  <developers>
    <developer>
      <id>fcamblor</id>
      <name>Frederic Camblor</name>
      <email>fcamblor+wikihudson@gmail.com</email>
    </developer>
  </developers>
    
  <!-- get every artifact through maven.glassfish.org, which proxies all the artifacts that we need -->
  <repositories>
    <repository>
      <id>m.g.o-public</id>
      <url>http://maven.glassfish.org/content/groups/public/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>m.g.o-public</id>
      <url>http://maven.glassfish.org/content/groups/public/</url>
    </pluginRepository>
  </pluginRepositories>
  
  <build>
	<pluginManagement>
		<plugins>
			<!-- TODO: to remove when migrating to parent pom >= 1.387 -->
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<!-- To have pushChanges parameter available -->
				<version>2.1</version>
				<configuration>
					<goals>deploy</goals>
					<localCheckout>true</localCheckout>
					<pushChanges>false</pushChanges>
				</configuration>
			</plugin>
		</plugins>
	</pluginManagement>
  </build>

  <!-- TODO: to remove when migrating to parent pom >= 1.395 -->
  <distributionManagement>
    <repository>
      <id>maven.jenkins-ci.org</id>
      <url>http://maven.jenkins-ci.org:8081/content/repositories/releases/</url>
    </repository>
  </distributionManagement>

  <scm>
    <connection>scm:git:git://github.com/jenkinsci/global-build-stats-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:jenkinsci/global-build-stats-plugin.git</developerConnection>
    <url>https://github.com/jenkinsci/global-build-stats-plugin</url>
  </scm>
</project>
