<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <modelVersion>4.0.0</modelVersion>
  
  <groupId>org.jvnet.hudson.plugins</groupId>
  <artifactId>synergy</artifactId>
  <packaging>hpi</packaging>
  <version>1.6</version>
  <url>http://wiki.hudson-ci.org/display/HUDSON/Synergy+Plugin</url>
  <description>This plug-in provides integration with CM/Synergy Version Manager SCM</description>
  <name>Hudson Synergy Plugin</name>
  <inceptionYear>2008</inceptionYear>
  
  <parent>
    <groupId>org.jvnet.hudson.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>1.319</version>
  </parent>
  
  <developers>
  	<developer>
 		<id>jribette</id>
 		<name>Jean-NoÃ«l RIBETTE</name>
  	</developer>
	<developer>
		<id>pantherse</id>
		<name>Keith Mendoza</name>
	</developer>
  </developers>

  <build>
      <plugins>
        <plugin>
	        <artifactId>maven-release-plugin</artifactId>
	        <configuration>
	          <goals>deploy</goals>
	        </configuration>
	    </plugin>
	  </plugins>
  </build>

  <distributionManagement>
      <repository>
        <id>maven.jenkins-ci.org</id>
        <url>http://maven.jenkins-ci.org:8081/content/repositories/releases/</url>
      </repository>
  </distributionManagement>

  <scm>
      <connection>scm:git:ssh://github.com/jenkinsci/synergy_scm-plugin.git</connection>
	  <developerConnection>scm:git:ssh://git@github.com/jenkinsci/synergy_scm-plugin.git</developerConnection>
	  <url>https://github.com/jenkinsci/synergy_scm-plugin</url>
  </scm>
</project>
