      <dependency>
          <groupId>com.saucelabs.selenium</groupId>
          <artifactId>sauce-ondemand-driver</artifactId>
          <version>2.0</version>
          <scope>test</scope>
      </dependency>
      <dependency>
          <groupId>com.saucelabs.selenium</groupId>
          <artifactId>selenium-client-factory</artifactId>
          <version>2.0</version>
          <scope>test</scope>
      </dependency>
  </dependencies>
</project>
