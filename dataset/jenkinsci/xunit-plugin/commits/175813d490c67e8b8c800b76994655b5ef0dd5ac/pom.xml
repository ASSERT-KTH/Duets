    <developerConnection>scm:svn:https://svn.dev.java.net/svn/hudson/tags/xunit-0.1.3</developerConnection>
    <url>https://hudson.dev.java.net/source/browse/hudson/hudson/plugins/xunit/tags/xunit-0.1.3</url>
  </scm>
</project>