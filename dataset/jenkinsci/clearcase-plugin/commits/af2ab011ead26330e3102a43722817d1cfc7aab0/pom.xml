<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jvnet.hudson.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>1.358</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>clearcase</artifactId>
  <packaging>hpi</packaging>
  <name>Hudson ClearCase Plug-in</name>
  <version>1.3</version>
  <url>http://wiki.hudson-ci.org/display/HUDSON/ClearCase+Plugin</url>
  <licenses>
    <license>
      <name>MIT license</name>
      <comments>All source code is under the MIT license.</comments>
    </license>
  </licenses>
  <issueManagement>
  	<system>JIRA</system>
  	<url>http://issues.hudson-ci.org</url>
  </issueManagement>
  <developers>
    <developer>
      <id>vlatombe</id>
      <name>Vincent Latombe</name>
      <email>vincent.latombe@gmail.com</email>
      <timezone>+1</timezone>
    </developer>
  </developers>
  <repositories>
    <!-- Required for jdave -->
    <repository>
      <id>laughing-panda</id>
      <name>Laughing Panda</name>
      <url>http://www.laughingpanda.org/maven2/</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-junit4</artifactId>
      <version>2.2.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-legacy</artifactId>
      <version>2.2.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jdave</groupId>
      <artifactId>jdave-unfinalizer</artifactId>
      <version>1.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <scm>
    <connection>scm:svn:https://guest@svn.dev.java.net/svn/hudson/tags/clearcase-1.3</connection>
    <developerConnection>scm:svn:https://svn.dev.java.net/svn/hudson/tags/clearcase-1.3</developerConnection>
    <url>https://hudson.dev.java.net/source/browse/hudson/hudson/plugins/clearcase/tags/clearcase-1.3</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <groupId>org.jvnet.hudson.tools</groupId>
        <artifactId>maven-hpi-plugin</artifactId>
        <version>1.53</version>
        <extensions>true</extensions>
        <configuration>
          <compatibleSinceVersion>1.0</compatibleSinceVersion>
          <showDeprecation>true</showDeprecation>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <showDeprecation>true</showDeprecation>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution> 
            <id>copy-unfinalizer</id>
            <goals>
              <goal>copy</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.jdave</groupId>
                  <artifactId>jdave-unfinalizer</artifactId>
                  <version>1.1</version>
                </artifactItem> 
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <argLine>-javaagent:${project.build.directory}/dependency/jdave-unfinalizer-1.1.jar</argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
