    </dependency>
    <dependency>
      <groupId>com.parasoft.xtest.common</groupId>
      <artifactId>com.parasoft.xtest.common</artifactId>
      <version>${xtest.version}</version>
    </dependency>
    <dependency>
      <groupId>com.parasoft.xtest.common</groupId>
