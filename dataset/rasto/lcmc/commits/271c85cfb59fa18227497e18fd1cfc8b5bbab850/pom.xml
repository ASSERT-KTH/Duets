<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>lcmc</groupId>
    <artifactId>lcmc</artifactId>
    <packaging>jar</packaging>
    <version>${release}</version>
    <name>lcmc</name>
    <url>lcmc.sf.net</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <lib.src>${project.basedir}/src/lib</lib.src>
        <doc.dir>${project.basedir}/doc</doc.dir>
        <scripts.dir>${project.basedir}/scripts</scripts.dir>
        <man.file>lcmc.1</man.file>
        <iss.file>lcmc.iss</iss.file>
        <launch4j.conf>launch4j.xml</launch4j.conf>
        <junit.category.exclude>lcmc.testutils.annotation.type.IntegrationTest</junit.category.exclude>
        <spring.version>4.0.5.RELEASE</spring.version>
        <maven.build.timestamp.format>MMM d yyyy</maven.build.timestamp.format>
    </properties>
    <profiles>
        <profile>
            <id>FastTests</id>
            <properties>
                <junit.category.exclude>
                    lcmc.testutils.annotation.type.GuiTest,lcmc.testutils.annotation.type.IntegrationTest
                </junit.category.exclude>
            </properties>
        </profile>
        <profile>
            <id>GuiTests</id>
        </profile>
    </profiles>
    <dependencies>
        <dependency>
            <groupId>net.sourceforge.collections</groupId>
            <artifactId>collections-generic</artifactId>
            <version>4.01</version>
        </dependency>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.2</version>
        </dependency>
        <!--
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-api</artifactId>
            <version>2.0.1</version>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-visualization</artifactId>
            <version>2.0.1</version>
        </dependency>
        <dependency>
            <groupId>net.sf.jung</groupId>
            <artifactId>jung-graph-impl</artifactId>
            <version>2.0.1</version>
            </dependency>
        -->
        <dependency>
            <groupId>colt</groupId> <!-- for young -->
            <artifactId>colt</artifactId>
            <version>1.2.0</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>java3d</groupId>
            <artifactId>j3d-core-utils</artifactId>
            <version>1.5.2</version>
        </dependency>
        <dependency>
            <groupId>java3d</groupId>
            <artifactId>j3d-core</artifactId>
            <version>1.5.2</version>
        </dependency>
        <dependency>
            <groupId>javax.xml</groupId>
            <artifactId>jaxp-api</artifactId>
            <version>1.4.2</version>
        </dependency>
        <dependency>
            <groupId>javax.media</groupId>
            <artifactId>jai-core</artifactId>
            <version>1.1.3</version>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.8.1</version>
        </dependency>
        <dependency>
            <groupId>java3d</groupId>
            <artifactId>vecmath</artifactId>
            <version>1.5.2</version>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.9.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>pl.pragmatists</groupId>
            <artifactId>JUnitParams</artifactId>
            <version>1.0.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${spring.version}</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.google.code.maven-replacer-plugin</groupId>
            <artifactId>maven-replacer-plugin</artifactId>
            <version>1.4.1</version>
        </dependency>

    </dependencies>
    <repositories>
        <repository>
            <id>imagej</id>
            <url>http://maven.imagej.net/content/repositories/public/</url>
        </repository>
        <repository>
            <id>thirdparty-releases</id>
            <name>JBoss Thirdparty Releases</name>
            <url>https://repository.jboss.org/nexus/content/repositories/thirdparty-releases</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <!-- property file -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>src/main/resources/release.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- compiler -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                    <compilerArgument>-Xlint:all</compilerArgument>
                    <optimize>true</optimize>
                </configuration>
            </plugin>
            <!-- checkstyle -->
            <plugin>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <configuration>
                    <outputDirectory>target/checks/checkstyle</outputDirectory>
                    <suppressionsLocation>
                        ${basedir}/conf/checkstyle-suppressions.xml
                    </suppressionsLocation>
                    <suppressionsFileExpression>
                         checkstyle.suppressions.file
                    </suppressionsFileExpression>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>checkstyle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- pmd -->
            <plugin>
                <artifactId>maven-pmd-plugin</artifactId>
                <configuration>
                    <linkXref>true</linkXref>
                    <outputDirectory>target/checks/pmd</outputDirectory>
                    <targetJdk>1.6</targetJdk>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>pmd</goal>
                            <goal>cpd</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- cobertura -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <formats>
                        <format>html</format>
                        <format>xml</format>
                    </formats>
                    <outputDirectory>target/checks/cobertura</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>cobertura</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- surefire -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.17</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <includes>
                        <include>**/*.class</include>
                        </includes>
                        <excludedGroups>${junit.category.exclude}</excludedGroups>
                </configuration>
            </plugin>
            <!-- failsafe -->
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.17</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.17</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <groups>lcmc.testutils.annotation.type.IntegrationTest</groups>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>**/*.class</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- jdepend -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jdepend-maven-plugin</artifactId>
                <configuration>
                    <outputDirectory>${basedir}/target/checks/jdepend</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- assembly -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <useProjectArtifact>false</useProjectArtifact>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <appendAssemblyId>false</appendAssemblyId>
                    <attach>false</attach>
                </configuration>
                <executions>
                    <execution>
                        <id>local</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>app</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>LCMC</finalName>
                            <archive>
                                <manifest>
                                    <mainClass>lcmc.LCMC</mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>applet</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>LCMC-applet</finalName>
                            <archive>
                                <manifest>
                                    <mainClass>lcmc.LCMCApplet</mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
                                <mkdir dir="${project.build.directory}/classes"/>
                                <copy todir="${project.build.directory}/classes">
                                    <fileset dir="src/main/resources/"/>
                                </copy>
                                <tar tarfile="${project.build.directory}/classes/lcmc-test.tar"
                                     basedir="${project.build.directory}/classes/"
                                     includes="lcmc-test/**"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.3.1</version>
                <configuration>
                    <mainClass>lcmc.LCMC</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${lib.src}</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <filesToInclude>${doc.dir}/${man.file}.in,
                                    ${scripts.dir}/${iss.file}.in,
                                    ${scripts.dir}/${launch4j.conf}.in</filesToInclude>
                    <inputFilePattern>(.*).in</inputFilePattern>
                    <outputFilePattern>$1</outputFilePattern>
                    <regex>false</regex>
                    <replacements>
                        <replacement>
                            <token>@LCMC-DATE@</token>
                            <value>${maven.build.timestamp}</value>
                        </replacement>
                        <replacement>
                            <token>@LCMC-VERSION@</token>
                            <value>${release}</value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals><goal>rpm</goal></goals>
                    </execution>
                </executions>
                <configuration>
                    <description>Linux Cluster Management Console.</description>
                    <summary>Pacemaker/KVM/DRBD HA Cluster GUI</summary>
                    <url>http://lcmc.sourceforge.net</url>
                    <group>Applications/System</group>
                    <filemode>644</filemode>
                    <copyright>GPLv2+</copyright>
                    <source0>http://sourceforge.net/projects/lcmc/files/%{_name}-source-%{version}.tar.gz</source0>
                    <mappings>
                        <mapping>
                            <filemode>755</filemode>
                            <directory>%{_bindir}/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>scripts/lcmc</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/applications</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>scripts/lcmc.desktop</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/applications</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>scripts/lcmc.desktop</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/application-registry</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>scripts/lcmc.applications</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/java/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>target/LCMC.jar</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/pixmaps/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>src/main/resources/images/Icons/128x128/lcmc.png</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/pixmaps/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>src/main/resources/images/Icons/128x128/lcmc.png</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/icons/hicolor/32x32/apps/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>src/main/resources/images/Icons/32x32/lcmc.png</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/icons/hicolor/64x64/apps/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>src/main/resources/images/Icons/64x64/lcmc.png</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/icons/hicolor/128x128/apps/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>src/main/resources/images/Icons/128x128/lcmc.png</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_datadir}/icons/hicolor/256x256/apps/</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <sources>
                                <source><location>src/main/resources/images/Icons/256x256/lcmc.png</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>%{_mandir}/man1</directory>
                            <sources>
                                <source><location>doc/${man.file}</location></source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/doc/lcmc</directory>
                            <sources>
                                <source><location>README.txt</location></source>
                            </sources>
                            <documentation>true</documentation>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/doc/lcmc</directory>
                            <sources>
                                <source><location>LICENSE.txt</location></source>
                            </sources>
                            <documentation>true</documentation>
                        </mapping>
                    </mappings>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
