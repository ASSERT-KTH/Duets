    <dependency>
      <groupId>org.martyr</groupId>
      <artifactId>martyr</artifactId>
      <version>0.4</version>
    </dependency>

    <dependency>
      <groupId>org.jivesoftware</groupId>
      <artifactId>asmack-level7</artifactId>
      <version>3.1.1</version>
    </dependency>

    <!--
    <dependency>
      <groupId>org.jivesoftware</groupId>
      <artifactId>smack</artifactId>
