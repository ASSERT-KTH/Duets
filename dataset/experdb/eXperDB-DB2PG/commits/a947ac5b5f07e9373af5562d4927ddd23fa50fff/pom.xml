		<dependency>
			<groupId>ojdbc</groupId>
			<artifactId>xdb</artifactId>
			<version>6</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/src/main/resources/xdb-6.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>xmlparserv2</groupId>
			<artifactId>xmlparserv2</artifactId>
			<version>11.1.0.6</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/src/main/resources/xmlparserv2-11.1.0.6.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>orai18n</groupId>
			<artifactId>orai18n</artifactId>
			<version>1</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/src/main/resources/orai18n-1.jar</systemPath>
