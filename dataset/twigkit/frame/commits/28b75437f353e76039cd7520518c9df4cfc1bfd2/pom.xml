<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>twigkit</groupId>
    <artifactId>frame</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    <name>frame</name>
    <description>Simple API and Web Service for manipulating images.</description>

    <url>http://github.com/twigkit/frame</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <organization>
        <name>TwigKit</name>
        <url>http://twigkit.com</url>
    </organization>

    <developers>
        <developer>
            <id>mr.olafsson</id>
            <name>Hjortur Stefan Olafsson</name>
            <email>mr.olafsson@gmail.com</email>
            <url>http://www.linkedin.com/in/mrolafsson/</url>
            <organization>TwigKit</organization>
            <organizationUrl>http://twigkit.com</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>

    <issueManagement>
        <system>Github</system>
        <url>https://github.com/twigkit/frame/issues</url>
    </issueManagement>

    <ciManagement>
        <system>Hudson</system>
        <url>http://twigkit.com/hudson/frame/</url>
    </ciManagement>

    <scm>
        <connection>scm:git:git://github.com/TwigKit/frame.git</connection>
        <developerConnection>scm:git:git@github.com:twigkit/frame.git</developerConnection>
        <url>https://github.com/twigkit/frame</url>
    </scm>

    <repositories>
        <repository>
            <id>repo.twigkit.com</id>
            <name>TwigKit</name>
            <url>http://twigkit.artifactoryonline.com/twigkit/repo/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
                <checksumPolicy>warn</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>repo.twigkit.com-releases</id>
            <name>TwigKit Releases</name>
            <url>http://twigkit.artifactoryonline.com/twigkit/release</url>
        </repository>
        <snapshotRepository>
            <id>repo.twigkit.com-snapshots</id>
            <name>TwigKit Snapshots</name>
            <url>http://twigkit.artifactoryonline.com/twigkit/snapshot</url>
            <uniqueVersion>true</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>


    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.1</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.7.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.4</version>
        </dependency>

        <dependency>
            <groupId>it.geosolutions.imageio-ext</groupId>
            <artifactId>imageio-ext-tiff</artifactId>
            <version>1.1.0</version>
        </dependency>
    </dependencies>
</project>
