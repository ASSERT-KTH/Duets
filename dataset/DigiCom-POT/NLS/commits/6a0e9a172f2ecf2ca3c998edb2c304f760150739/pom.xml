			<!-- <directory>models</directory> -->
			<!-- <includes> -->
			<!-- <include>*.bin</include> -->
			<!-- </includes> -->
			<!-- <targetPath>models</targetPath> -->
			<!-- </resource> -->
		</resources>
	</build>

	<artifactId>digicom-nls</artifactId>
	<groupId>digicom.pot</groupId>
</project>
