                <!--<version>3.1.0</version>-->
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<phase>package</phase>-->
                        <!--<goals>-->
                            <!--<goal>single</goal>-->
                        <!--</goals>-->
                    <!--</execution>-->
                <!--</executions>-->
                <!--<configuration>-->
                    <!--<descriptors>-->
                        <!--<descriptor>src/main/resources/distribution.xml</descriptor>-->
                    <!--</descriptors>-->
                    <!--<finalName>nlp-api-demo</finalName>-->
                <!--</configuration>-->
            <!--</plugin>-->
		</plugins>
	</build>


</project>
