            <!--</includes>-->
            <!--</resource>-->
        </resources>
    </build>


	<distributionManagement>

		<repository>
			<id>bintray-haesleinhuepf-snapshots</id>
			<name>bintray-snapshots</name>
			<url>https://api.bintray.com/maven/haesleinhuepf/snapshots/clearclij/;publish=1</url>
		</repository>

	</distributionManagement>

</project>
