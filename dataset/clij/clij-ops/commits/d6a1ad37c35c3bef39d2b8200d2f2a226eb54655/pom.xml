	<artifactId>yourplugin_</artifactId>
	<version>0.1.0</version>

	<name>YourPlugin</name>
	<description>YourPlugin</description>
	<url>http://yourdomain.com</url>
	<inceptionYear>2018</inceptionYear>
	<organization>
		<name>Your organisation</name>
		<url>http://yourdomain.com</url>
	</organization>
	<licenses>
		<license>
			<name>Public domain</name>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>yourid</id>
			<name>You</name>
			<url>https://yourdomain.com</url>
			<organization>Your organisation</organization>
			<roles>
				<role>developer</role>
			</roles>
		</developer>
