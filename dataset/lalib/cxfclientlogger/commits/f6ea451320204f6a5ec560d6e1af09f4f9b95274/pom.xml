        <postgresql-connector.version>9.4-1203-jdbc42</postgresql-connector.version>

        <!-- Test Dependencies-->
        <junit.version>4.12</junit.version>
        <mockito.version>1.10.19</mockito.version>
        <hamcrest.version>1.3</hamcrest.version>

        <!-- Apache Commons Dependencies -->
        <apache.commons.collections.version>3.2.1</apache.commons.collections.version>
        <apache.commons.io.version>2.4</apache.commons.io.version>
        <apache.commons.lang.version>2.6</apache.commons.lang.version>

        <!-- Maven Plugins -->
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <maven.compiler.version>3.3</maven.compiler.version>
        <maven.build.helper.version>1.9.1</maven.build.helper.version>
        <maven.processor.version>2.2.4</maven.processor.version>
    </properties>

    <modules>
        <module>cxfloggerprovider</module>
        <module>cxfloggerconsumer</module>
    </modules>

</project>