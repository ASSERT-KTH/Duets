<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.concord.energy3d</groupId>
  <artifactId>energy3d</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
      	<groupId>com.zenjava</groupId>
      	<artifactId>javafx-maven-plugin</artifactId>
      	<version>1.5</version>
	      <configuration>
	          <mainClass>org.concord.energy3d.MainApplication</mainClass>
	      </configuration>
      </plugin>
      <plugin>
      	<groupId>org.apache.maven.plugins</groupId>
      	<artifactId>maven-jar-plugin</artifactId>
      	<version>2.4</version>
      	<configuration>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
            <forced>true</forced>
            <manifestFile>manifest.mf</manifestFile>
          </archive>
      	</configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
  	<dependency>
  		<groupId>com.ardor3d</groupId>
  		<artifactId>ardor3d-core</artifactId>
  		<version>0.9-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>com.ardor3d</groupId>
  		<artifactId>ardor3d-lwjgl</artifactId>
  		<version>0.9-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>com.ardor3d</groupId>
  		<artifactId>ardor3d-collada</artifactId>
  		<version>0.9-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>com.ardor3d</groupId>
  		<artifactId>ardor3d-awt</artifactId>
  		<version>0.9-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>com.ardor3d</groupId>
  		<artifactId>ardor3d-effects</artifactId>
  		<version>0.9-SNAPSHOT</version>
  	</dependency>
  </dependencies>
  <name>Energy3D</name>
  <organization>
  	<name>Concord Consoritum</name>
  </organization>
</project>