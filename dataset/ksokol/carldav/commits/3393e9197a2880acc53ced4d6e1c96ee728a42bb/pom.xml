	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<failOnViolation>true</failOnViolation>
					<configLocation>checkstyle-suppressions.xml</configLocation>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
				<executions>
					<execution>
						<id>default-check</id>
						<goals>
							<goal>check</goal>
						</goals>
						<inherited>true</inherited>
						<configuration>
							<failOnViolation>true</failOnViolation>
							<rulesets>
								<ruleset>com/unitedinternet/portal/maven2/pom/customPMDRuleset.xml</ruleset>
							</rulesets>
							<targetJdk>1.7</targetJdk>
							<skipEmptyReport>false</skipEmptyReport>
						</configuration>
					</execution>
					<execution>
						<id>default-cpd-check</id>
						<goals>
							<goal>cpd-check</goal>
						</goals>
						<inherited>true</inherited>
						<configuration>
							<failOnViolation>${maven-pmd-plugin.failOnViolation}</failOnViolation>
							<rulesets>
								<ruleset>com/unitedinternet/portal/maven2/pom/customPMDRuleset.xml</ruleset>
							</rulesets>
							<targetJdk>1.7</targetJdk>
							<skipEmptyReport>false</skipEmptyReport>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>net.sourceforge.pmd</groupId>
						<artifactId>pmd-java</artifactId>
						<version>5.2.3</version>
						<scope>compile</scope>
					</dependency>
					<dependency>
						<groupId>net.sourceforge.pmd</groupId>
						<artifactId>pmd-core</artifactId>
						<version>5.2.3</version>
						<scope>compile</scope>
					</dependency>
				</dependencies>
				<configuration>
					<rulesets>
						<ruleset>com/unitedinternet/portal/maven2/pom/customPMDRuleset.xml</ruleset>
					</rulesets>
					<targetJdk>1.7</targetJdk>
					<skipEmptyReport>false</skipEmptyReport>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<configuration>
					<failOnError>false</failOnError>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<configuration>
					<warDirectory>${basedir}/target/cosmo</warDirectory>
					<path>/cosmo</path>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.10</version>
				<configuration>
