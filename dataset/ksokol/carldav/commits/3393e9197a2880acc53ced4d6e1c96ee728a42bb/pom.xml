					<configLocation>checkstyle-suppressions.xml</configLocation>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>3.0.1</version>
				<configuration>
					<failOnViolation>true</failOnViolation>
				</configuration>
