<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.jakubholy.experiments</groupId>
  <artifactId>stateless-hello-webapp</artifactId>
  <packaging>war</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>stateless-hello-webapp Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>
      <dependency>
          <groupId>org.eclipse.jetty.orbit</groupId>
          <artifactId>javax.servlet</artifactId>
          <version>3.0.0.v201112011016</version>
          <scope>provided</scope>
      </dependency>
  </dependencies>
  <build>
      <plugins>
          <plugin>
              <groupId>org.apache.tomcat.maven</groupId>
              <artifactId>tomcat7-maven-plugin</artifactId>
              <version>2.1</version>
              <configuration>
                  <path>/</path>
                  <backgroundProcessorDelay>1</backgroundProcessorDelay>
                  <contextReloadable>true</contextReloadable>
              </configuration>
              <executions>
                  <execution>
                      <id>tomcat-run</id>
                      <goals>
                          <goal>exec-war-only</goal>
                      </goals>
                      <phase>package</phase>
                      <configuration>
                          <path>/</path>
                      </configuration>
                  </execution>
              </executions>
          </plugin>
      </plugins>
    <finalName>stateless-hello-webapp</finalName>
  </build>
</project>
