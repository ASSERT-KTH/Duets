	<!-- copy files -->
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<phase> package</phase>
						<configuration>
							<target>
								<copy todir="${project.build.directory}/lib">
									<fileset dir="lib" />
								</copy>
								<copy todir="${project.build.directory}/demo">
									<fileset dir="demo" />
								</copy>
								<copy todir="${project.build.directory}/data">
									<fileset dir="data" />
								</copy>
								<copy todir="${project.build.directory}">
									<fileset dir="scripts" />
								</copy>
								<copy file="log4j.properties" tofile="${project.build.directory}/log4j.properties" />
								<copy file="fox.properties-dist" tofile="${project.build.directory}/fox.properties-dist" />

								<chmod dir="${project.build.directory}" perm="700"
									includes="**/*.sh" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.aksw.fox.MainServer</mainClass>
							<addClasspath>true</addClasspath>
							<!-- <classpathPrefix>lib/</classpathPrefix> -->
						</manifest>
						<manifestEntries>
							<Class-Path>lib/balie/Balie.jar lib/illinois/LBJ2.jar
								lib/illinois/LBJ2Library.jar lib/illinois/LbjNerTagger.jar</Class-Path>
						</manifestEntries>
					</archive>
				</configuration>
				<!-- nothing here -->
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>org.aksw.fox.MainServer</mainClass>
							<addClasspath>true</addClasspath>
						</manifest>
						<manifestEntries>
							<Class-Path>lib/balie/Balie.jar lib/illinois/LBJ2.jar
								lib/illinois/LBJ2Library.jar lib/illinois/LbjNerTagger.jar</Class-Path>
						</manifestEntries>
					</archive>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<argLine>-Xmx5G</argLine>
				</configuration>
			</plugin>

			<!-- TODO: UmlGraphDoc isn't in doc -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<reportOutputDirectory>${project.build.directory}/</reportOutputDirectory>
					<destDir>demo/doc</destDir>
					<show>protected</show>
					<nohelp>true</nohelp>

					<doclet>org.umlgraph.doclet.UmlGraphDoc</doclet>

					<docletArtifact>
						<groupId>org.umlgraph</groupId>
						<artifactId>doclet</artifactId>
						<version>5.1</version>
					</docletArtifact>

					<additionalparam>-views</additionalparam>
					<useStandardDocletOptions>true</useStandardDocletOptions>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>