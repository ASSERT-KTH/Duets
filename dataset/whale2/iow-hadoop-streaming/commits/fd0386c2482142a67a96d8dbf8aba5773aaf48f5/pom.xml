<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.ipowneb.hadoop.mr2</groupId>
    <artifactId>hadoop2-iow-lib</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    
    <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <org.apache.hadoop.version>2.3.0-cdh5.1.0</org.apache.hadoop.version>
    </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin> 
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.14.1</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
      <plugin> 
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions> 
      </plugin>
      <plugin> 
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.8</version>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <excludeGroupIds>org.apache.hadoop.thirdparty.guava</excludeGroupIds>
              <excludeArtifactIds>
                activation,
                apacheds-i18n,
                apacheds-i18n-2.0.0-M15,
                apacheds-kerberos-codec,
                apacheds-kerberos-codec-2.0.0-M15,
                api-asn1-api,
                api-asn1-api-1.0.0-M20,
                api-util,
                api-util-1.0.0-M20,
                avro,
                avro-ipc,
                avro-mapred,
                ant-contrib,
                asm,
                aspectjrt,
                aspectjtools,
                commons-beanutils,
                commons-beanutils-core,
                commons-collections,
                commons-compress,
                commons-configuration,
                commons-digester,
                commons-cli, 
                commons-codec,
                commons-daemon,
                commons-el,
                commons-httpclient,
                commons-io,
                commons-lang,
                commons-logging,
                commons-logging-api,
                commons-net,
                commons-math3,
                core,
                cloudera-jets3t,
                fest-assert,
                fest-util,
                gson,
                guava-r09-jarjar,
                guava,
                hadoop-auth,
                hadoop-core,
                hadoop-client,
                hadoop-mapreduce-client,
                hadoop-mapreduce-client-app,
                hadoop-mapreduce-client-core,
                hadoop-mapreduce-client-jobclient,
                hadoop-mapreduce-client-shuffle,
                hadoop-mapreduce-client-common,
                hadoop-streaming,
                hadoop-common,
                hadoop-hdfs,
                hadoop-annotations,
                hadoop-ant,   
                hadoop-yarn-client,
                hadoop-yarn-common,
                hadoop-yarn-api,
                hadoop-yarn-server-common,                
                hsqldb,
                jackson-jaxrs,
                jackson-xc,
                jackson-core-asl,
                jackson-mapper-asl,
                jasper-compiler,   
                jasper-runtime,    
                jaxb-api,
                jaxb-impl,
                java-xmlbuilder,
                jersey-core,       
                jersey-json,       
                jersey-server,     
                jets3t,
                jetty, 
                jetty-servlet-tester,
                jetty-util,
                jettison,
                jsch,
                junit,
                jdk.tools,
                jsp-api,
                jsr305,
                log4j,
                mockito-all,
                netty,
                oro,
                parquet,
                parquet-format,
                parquet-common,
                parquet-column,
                parquet-encoding,
                parquet-generator,
                parquet-hadoop,
                parquet-jackson,
                paranamer,
                protobuf-java,
                stax-api,
                servlet-api,
                servlet-api-2.5,
                slf4j-log4j12,
                slf4j-api,
                snappy-java,
                xmlenc,
                xz,
                zookeeper,
              </excludeArtifactIds>
            </configuration>
          </execution>
        </executions> 
      </plugin>
    </plugins> 
  </build>

  <dependencies>
