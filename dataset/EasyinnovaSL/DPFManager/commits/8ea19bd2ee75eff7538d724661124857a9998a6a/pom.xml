	<groupId>com.easyinnova</groupId>
	<artifactId>dpf_manager</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>


	<!-- More Project Information -->
	<name>dpf_manager</name>
