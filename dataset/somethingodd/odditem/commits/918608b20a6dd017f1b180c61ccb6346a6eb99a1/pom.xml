<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <inceptionYear>2011</inceptionYear>
    <groupId>info.somethingodd</groupId>
    <artifactId>odditem</artifactId>
    <version>0.9.5-SNAPSHOT</version>
    <name>odditem</name>
    <url>${url.root}/${project.name}</url>
    <parent>
        <groupId>info.somethingodd</groupId>
        <artifactId>somethingodd-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>somethingodd-parent</relativePath>
    </parent>
    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>config.yml</include>
                    <include>groups.yml</include>
                    <include>items.yml</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <filtering>false</filtering>
                <includes>
                    <include>COPYING</include>
                    <include>LICENSE</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>commons-codec:*</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>info.somethingodd</groupId>
                <artifactId>somethingodd-parent</artifactId>
                <version>0.0.1-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.6</version>
        </dependency>
    </dependencies>
    <distributionManagement>
        <downloadUrl>${url.repo.download}</downloadUrl>
        <repository>
            <id>somethingodd</id>
            <url>${url.repo.release}</url>
        </repository>
        <snapshotRepository>
            <id>somethingodd-snapshots</id>
            <url>${url.repo.snapshot}</url>
        </snapshotRepository>
        <site>
            <id>somethingodd.info</id>
            <url>file:///var/www/somethingodd.info/${project.name}/</url>
        </site>
    </distributionManagement>
    <ciManagement>
        <system>jenkins</system>
        <url>http://somethingodd.info/jenkins/</url>
    </ciManagement>
    <scm>
        <developerConnection>scm:git:git@github.com:somethingodd/${project.name}.git</developerConnection>
        <connection>scm:git:git://github.com/somethingodd/${project.name}.git</connection>
        <url>https://github.com/somethingodd/${project.name}/tree/master/</url>
    </scm>
    <licenses>
        <license>
            <name>GNU GPL v3</name>
            <url>https://www.gnu.org/licenses/gpl-3.0-standalone.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <organization>
        <name>SomethingOdd</name>
        <url>${url.root}</url>
    </organization>
    <developers>
        <developer>
            <id>petteyg</id>
            <name>Gordon Pettey</name>
            <roles>
                <role>developer</role>
            </roles>
            <organization>SomethingOdd</organization>
            <organizationUrl>${url.root}</organizationUrl>
            <timezone>-6</timezone>
        </developer>
    </developers>
    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/somethingodd/${project.name}/issues</url>
    </issueManagement>
</project>
