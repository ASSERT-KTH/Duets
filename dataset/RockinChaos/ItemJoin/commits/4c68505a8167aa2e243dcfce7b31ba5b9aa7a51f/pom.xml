<!-- ItemJoin build file -->
<!-- Maven clean install package -->

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>me.RockinChaos.itemjoin</groupId>
	<artifactId>ItemJoin</artifactId>
	<version>3.9.4-SNAPSHOT</version>
	<build>
		<sourceDirectory>${project.basedir}</sourceDirectory>
		<resources>
			<resource>
				<targetPath>.</targetPath>
				<filtering>true</filtering>
				<directory>.</directory>
				<includes>
					<include>plugin.yml</include>
					<include>items.yml</include>
					<include>config.yml</include>
					<include>en-lang.yml</include>
					<include>de-lang.yml</include>
					<include>FirstJoin.yml</include>
					<include>default.png</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<encoding>Cp1252</encoding>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>tv.mineinthebox.simpleserver:SimpleHttpServer:jar:</include>
									<include>com.googlecode.json-simple:json-simple*:jar:*</include>
								</includes>
							</artifactSet>
							<relocations>
								<relocation>
									<pattern>tv.mineinthebox.simpleserver</pattern>
									<shadedPattern>tv.mineinthebox.simpleserver</shadedPattern>
									<pattern>com.googlecode.json-simple</pattern>
									<shadedPattern>com.googlecode.json-simple</shadedPattern>
								</relocation>
							</relocations>
							<filters>
								<filter>
									<artifact>*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.RSA</exclude>
										<exclude>META-INF/*.INF</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
       		<id>spigot-repo</id>
        	<url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
		</repository>
		<repository>
			<id>sk89q-repo</id>
			<url>https://maven.sk89q.com/repo/</url>
		</repository>
		<repository>
			<id>vault-repo</id>
			<url>http://nexus.hc.to/content/repositories/pub_releases</url>
		</repository>
        <repository>
            <id>placeholderapi</id>
            <url>http://repo.extendedclip.com/content/repositories/placeholderapi/</url>
        </repository>
        <repository>
        	<id>xephi-repo</id>
	        <url>http://ci.xephi.fr/plugin/repository/everything/</url>
        </repository>
	</repositories>
	<dependencies>
    <!--Spigot API-->
		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>1.11.2-R0.1-SNAPSHOT</version>
         <scope>provided</scope>
		</dependency>
    <!--Bukkit API-->
		<dependency>
			<groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.11.2-R0.1-SNAPSHOT</version>
         <scope>provided</scope>
		</dependency>
    <!--Vault API-->
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>Vault</artifactId>
			<version>LATEST</version>
         <scope>provided</scope>
		</dependency>
    <!--PlaceholderAPI API-->
        <dependency>
	        <groupId>me.clip</groupId>
	        <artifactId>placeholderapi</artifactId>
	        <version>LATEST</version>
         <scope>provided</scope>
        </dependency>
    <!--AuthMe API-->
        <dependency>
	        <groupId>fr.xephi</groupId>
	        <artifactId>authme</artifactId>
	        <version>5.2</version>
         <scope>provided</scope>
        </dependency>
	</dependencies>
	<scm>
		<url>https://github.com/RockinChaos/ItemJoin</url>
		<connection>scm:git:ssh://git@github.com/RockinChaos/ItemJoin</connection>
		<developerConnection>scm:git:ssh://git@github.com/RockinChaos/ItemJoin.git</developerConnection>
	</scm>
	<organization>
		<name>ItemJoin</name>
		<url>https://github.com/RockinChaos/ItemJoin</url>
	</organization>
</project>