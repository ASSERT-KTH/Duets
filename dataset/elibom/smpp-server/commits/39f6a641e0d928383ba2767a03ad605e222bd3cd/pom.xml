<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>net.gescobar</groupId>
	<artifactId>smpp-server</artifactId>
	
	<name>SMPP Server</name>
	<version>0.3.1-SNAPSHOT</version>
	<description>A simple SMPP Server based on the cloudhopper library.</description>
	
	<dependencies>
		<dependency>
			<groupId>cloudhopper</groupId>
			<artifactId>ch-smpp</artifactId>
			<version>4.1.2</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.1</version>
		</dependency>
		
		<!-- Test -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>5.14</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>1.6.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.9.0</version>
			<scope>test</scope>
		</dependency>
            
	</dependencies>
	
	<scm>
		<connection>scm:git:git@github.com:germanescobar/smpp-server.git</connection>
		<url>scm:git:git@github.com:germanescobar/smpp-server.git</url>
	</scm>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<inherited>true</inherited>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<showDeprecation>false</showDeprecation>
					<showWarnings>true</showWarnings>
					<optimize>true</optimize>
					<compilerVersion>1.6</compilerVersion>
					<fork>true</fork>
				</configuration>
			</plugin>
			
			<!-- generate sources -->
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1.1</version>
				<executions>
					<execution>
						<id>bundle-sources</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<!-- generate javadoc -->
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.7</version>
				<executions>
					<execution>
						<id>javadoc-jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration />
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
	
	<repositories>
		<repository>
			<id>cloudhopper</id>
			<url>http://maven.cloudhopper.com/repos/third-party/</url>
		</repository>
	</repositories>
	
	<distributionManagement>  
 		<!-- Publish the versioned releases here -->  
 		<repository>  
  			<id>elibom</id>  
  			<name>Elibom Nexus Repository</name>  
  			<url>http://repository.elibom.net/nexus/content/repositories/releases</url>  
 		</repository>  
  
 		<!-- Publish the versioned releases here -->  
 		<snapshotRepository>  
  			<id>elibom</id>  
  			<name>Elibom Nexus Repository</name>  
  			<url>http://repository.elibom.net/nexus/content/repositories/snapshots</url>  
 		</snapshotRepository>  
	</distributionManagement>
	
</project>