<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kohsuke</groupId>
  <artifactId>file-leak-detecter</artifactId>
  <packaging>jar</packaging>
  <version>1.2</version>
  <name>File Leak Detecter</name>

  <scm>
    <connection>scm:svn:https://svn.dev.java.net/svn/file-leak-detecter/tags/file-leak-detecter-1.2</connection>
    <developerConnection>scm:svn:https://svn.dev.java.net/svn/file-leak-detecter/tags/file-leak-detecter-1.2</developerConnection>
    <url>https://file-leak-detecter.dev.java.net/source/browse/file-leak-detecter/tags/file-leak-detecter-1.2</url>
  </scm>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
        <artifactId>maven-antrun-extended-plugin</artifactId>
        <version>1.32</version>
        <executions>
          <execution>
            <!--
              Using ASM 3.x breaks ASM 2.x app, and vice versa, so we have to package-rename it to
              avoid conflicts.
             -->
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <resolveArtifact artifactId="asm" property="asm.jar" />
                <taskdef name="jarjar" classname="com.tonicsystems.jarjar.JarJarTask" />
                <jarjar jarfile="target/all.jar">
                  <manifest>
                    <attribute name="Premain-Class" value="org.kohsuke.file_leak_detecter.Main" />
                  </manifest>
                  <fileset dir="target/classes" />
                  <zipfileset src="${asm.jar}" />
                  <rule pattern="org.objectweb.asm.**" result="org.kohsuke.file_leak_detecter.internal.asm.@1" />
                </jarjar>
                <attachArtifact file="target/all.jar" />
              </tasks>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.tonicsystems</groupId>
            <artifactId>jarjar</artifactId>
            <version>0.6</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
    <extensions>
      <extension>
        <groupId>org.jvnet.wagon-svn</groupId>
        <artifactId>wagon-svn</artifactId>
        <version>1.8</version>
      </extension>
    </extensions>
  </build>

    <distributionManagement>
    <site>
      <id>file-leak-detecter-www</id>
      <url>java-net:/file-leak-detecter/trunk/www/</url>
    </site>
      <repository>
        <uniqueVersion>false</uniqueVersion>
        <id>java.net-maven2-repository</id>
        <url>java-net:/maven2-repository/trunk/www/repository/</url>
      </repository>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
      <version>3.1</version>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm-all</artifactId>
      <version>3.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>  

  <repositories>
    <repository>
      <id>maven2-repository.dev.java.net</id>
      <name>Java.net Repository for Maven</name>
      <url>http://download.java.net/maven/2/</url>
    </repository>
  </repositories>
</project>
