<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.tyzoid</groupId>
    <artifactId>Colors</artifactId>
    <version>2.0.4a</version>

    <name>Colors</name>
    <description>Colors is a simple and lightweight chat plugin for bukkit servers.</description>
    <url>http://ci.tyzoid.com/Colors</url>
    <inceptionYear>2013</inceptionYear>
    <licenses>
        <license>
            <name>TPL v1.1</name>
            <url>https://raw.github.com/tyzoid/Colors/master/readme.md</url>
            <distribution>repo</distribution>
            <comments>Tyzoid Public License</comments>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>Tyzoid</id>
            <name>Tyler Dence</name>
            <email>tyzoid.d@gmail.com</email>
            <url>http://tyzoid.com/</url>
            <roles>
                <role>Architect</role>
                <role>Designer</role>
                <role>Developer</role>
            </roles>
            <timezone>-5</timezone>
        </developer>
    </developers>
    <issueManagement>
        <system>Github Issues</system>
        <url>https://github.com/tyzoid/Colors/issues</url>
    </issueManagement>
    <scm>
        <url>https://github.com/tyzoid/Colors</url>
        <connection>scm:git:git://github.com/tyzoid/Colors.git</connection>
        <developerConnection>scm:git:git@github.com:UltimateDev/jailr.git</developerConnection>
    </scm>

    <repositories>
        <repository>
            <id>Bukkit</id>
            <url>http://repo.bukkit.org/content/groups/public</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.6.4-R2.0</version>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>clean compile package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>../lib/</classpathPrefix>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
