<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openhab.bundles</groupId>
		<artifactId>binding</artifactId>
		<version>1.12.0</version>
		<relativePath />
	</parent>

	<groupId>org.openhab.binding</groupId>
	<artifactId>org.openhab.binding.bacnet</artifactId>
	<packaging>eclipse-plugin</packaging>
	<version>1.12.0-SNAPSHOT</version>

	<name>openHAB BacNet Binding</name>

    <licenses>
        <license>
            <name>GNU General Public License, version 2</name>
            <url>https://www.gnu.org/licenses/gpl-2.0.txt</url>
            <comments>Due to bacnet4j dependency this library must be licensed under GNU GPL.</comments>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git://github.com/openhab/org.openhab.binding.bacnet.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/openhab/org.openhab.binding.bacnet.git</developerConnection>
        <url>https://github.com/openhab/org.openhab.binding.bacnet</url>
      <tag>HEAD</tag>
  </scm>

	<properties>
		<bundle.symbolicName>org.openhab.binding.bacnet</bundle.symbolicName>
		<bundle.namespace>org.openhab.binding.bacnet</bundle.namespace>
		<deb.name>openhab-addon-binding-bacnet</deb.name>
		<deb.description>${project.name}</deb.description>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.vafer</groupId>
				<artifactId>jdeb</artifactId>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>bintray</id>

			<url>https://dl.bintray.com/openhab/mvn</url>
		</repository>
	</repositories>


</project>
