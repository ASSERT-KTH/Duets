<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jensoft-core</artifactId>
	<version>0.9.0-SNAPSHOT</version>
	<name>JenSoft API Core</name>

	<parent>
		<groupId>com.jensoft</groupId>
		<artifactId>jensoft-parent</artifactId>
		<version>1.0</version>
	</parent>

	<scm>
		<connection>scm:svn:http://www.jensoft.org/svn/trunk/jensoft-core</connection>
		<developerConnection>scm:svn:http://www.jensoft.org/svn/trunk/jensoft-core</developerConnection>
		<url>http://www.jensoft.org/svn/trunk/jensoft-core</url>
	</scm>

	<dependencies>

		<!-- you need to install system lib jnlp.jar in local repository , can 
			be found in java jdk sample pack, download separately -->
		<!-- mvn install:install-file -Dfile=C:\usr\Java\jdk1.6.0_38\sample\jnlp\servlet\jnlp.jar 
			-DgroupId=javax.jnlp -DartifactId=jnlp-api -Dversion=6.0 -Dpackaging=jar 
			-DlocalRepositoryPath=C:\Users\sebastien\.m2\repository -->
		<dependency>
			<groupId>javax.jnlp</groupId>
			<artifactId>jnlp-api</artifactId>
			<version>6.0</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<fork>true</fork>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>sign</id>
						<phase>install</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
					<execution>
						<id>verify</id>
						<phase>install</phase>
						<goals>
							<goal>sign-verify</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<archive>
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
					<keystore>${basedir}/jensoft.keystore</keystore>
					<alias>jensoft</alias>
					<storepass>password</storepass>
					<keypass>password</keypass>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- <plugin> -->
			<!-- <groupId>org.apache.maven.plugins</groupId> -->
			<!-- <artifactId>maven-javadoc-plugin</artifactId> -->
			<!-- <executions> -->
			<!-- <execution> -->
			<!-- <id>attach-javadocs</id> -->
			<!-- <goals> -->
			<!-- <goal>jar</goal> -->
			<!-- </goals> -->
			<!-- </execution> -->
			<!-- </executions> -->
			<!-- </plugin> -->
		</plugins>
	</build>


	<url>http://www.jensoft.org</url>
</project>