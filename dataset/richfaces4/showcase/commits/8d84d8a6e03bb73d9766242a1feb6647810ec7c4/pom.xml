                                </configuration>
                            </execution>
                            <execution>
                                <id>jbas7</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>war</goal>
                                </goals>
                                <configuration>
                                    <classifier>jbas7</classifier>
                                    <webappDirectory>${project.build.directory}/${project.build.finalName}-jbas7
                                    </webappDirectory>

