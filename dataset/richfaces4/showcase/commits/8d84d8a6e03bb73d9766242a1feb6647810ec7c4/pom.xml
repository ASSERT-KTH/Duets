                                    <classifier>tomcat6</classifier>
                                    <webappDirectory>${project.build.directory}/${project.build.finalName}-tomcat6
                                    </webappDirectory>
                                    <webResources>
                                        <resource>
                                            <directory>src/main/webapp-tomcat</directory>
                                            <targetPath>/</targetPath>
                                            <filtering>true</filtering>
