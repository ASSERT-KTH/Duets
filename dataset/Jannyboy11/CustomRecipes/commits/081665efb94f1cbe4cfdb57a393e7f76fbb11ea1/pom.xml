<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.gmail.jannyboy11</groupId>
  <artifactId>CustomRecipes</artifactId>
  <version>2.3.0-SNAPSHOT</version>
  <name>CustomRecipes</name>
  <description>Create and remove recipes for your Spigot server</description>
  
  <build>
  
    <defaultGoal>clean package install</defaultGoal>

      <resources>
        <resource>
          <directory>src/main/resources</directory>
          <filtering>true</filtering>
        </resource>
      </resources>
  
    <plugins>
    
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.0.0-M1</version>
        <configuration>
          <show>protected</show>
          <nohelp>true</nohelp>
          <excludePackageNames>
            com.gmail.jannyboy11.customrecipes.commands:
            com.gmail.jannyboy11.customrecipes.gui:
            com.gmail.jannyboy11.customrecipes.impl:
            com.gmail.jannyboy11.customrecipes.serialize:
            com.gmail.jannyboy11.customrecipes.util
          </excludePackageNames>
          <failOnError>false</failOnError>
          <links>
            <link>https://hub.spigotmc.org/javadocs/spigot/</link>
          </links>
        </configuration>
      </plugin>
    </plugins>
    
  </build>
  
  <dependencies>
    <dependency>
      <groupId>org.ow2.asm</groupId>
      <artifactId>asm</artifactId>
      <version>5.2</version>
    </dependency>
    
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>Spigot</artifactId>
      <version>1.12-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  
</project>