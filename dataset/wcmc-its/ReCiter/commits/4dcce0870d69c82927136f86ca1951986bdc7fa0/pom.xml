  <description>ReCiter is a publication suggestions engine</description>
  <url>https://github.com/wcmc-its/ReCiter</url>
  <organization>
    <url>https://github.com/wcmc-its</url>
    <name>Weill Cornell Medicine ITS</name>
  </organization>
  <licenses>
    <license>
      <name>The Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <name>Sarbajit Dutta</name>
      <email>szd2013@med.cornell.edu</email>
      <organization>Weill Cornell Medicine ITS</organization>
      <organizationUrl>https://github.com/wcmc-its</organizationUrl>
      <timezone>GMT-8</timezone>
    </developer>
    <developer>
      <name>Jie Lin</name>
      <email>jie265@gmail.com</email>
      <organization>Weill Cornell Medicine ITS</organization>
      <organizationUrl>https://github.com/wcmc-its</organizationUrl>
      <timezone>GMT-5</timezone>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:git://github.com/wcmc-its/ReCiter.git</connection>
    <developerConnection>scm:git:git@github.com:wcmc-its/ReCiter.git</developerConnection>
    <url>https://github.com/wcmc-its/ReCiter</url>
    <tag>0.0.1-SNAPSHOT</tag>
  </scm>
  <properties>
    <sqlite4java.version>1.0.392</sqlite4java.version>
  </properties>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>prepare</id>
            <phase>package</phase>
            <configuration>
              <tasks>
                <unzip dest="${project.build.directory}/${project.build.finalName}" src="${project.build.directory}/${project.build.finalName}.jar" />
                <copy overwrite="false" todir="${project.build.directory}/${project.build.finalName}/">
                  <fileset dir="./" includes=".ebextensions/**" />
                </copy>
                <zip basedir="${project.build.directory}/${project.build.finalName}" compress="false" destfile="${project.build.directory}/${project.build.finalName}.jar" />
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.19.1</version>
        <configuration />
      </plugin>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.8.5</version>
        <executions>
          <execution>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>report</id>
            <phase>test</phase>
            <goals>
              <goal>report</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.1.2.RELEASE</version>
  </parent>
