<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <plugin-version>0.7.3-SNAPSHOT</plugin-version>
        <plugin-debug>true</plugin-debug>

        <plugin-author>DPOH-VAR</plugin-author>
        <plugin-website>http://dev.bukkit.org/bukkit-plugins/varscript/</plugin-website>
        <plugin-description>Powerful nbt editor for bukkit and MCPC+</plugin-description>

        <java-version>1.7</java-version>
        <bukkit-version>1.7.9-R0.1-SNAPSHOT</bukkit-version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <groupId>me.dpohvar.powernbt</groupId>
    <artifactId>PowerNBT</artifactId>
    <version>${plugin-version}</version>
    <packaging>jar</packaging>

    <distributionManagement>
        <downloadUrl>http://dev.bukkit.org/bukkit-plugins/powernbt/</downloadUrl>
        <snapshotRepository>
            <id>dpohvar.ru</id>
            <name>dpohvar.ru-snapshots</name>
            <url>http://dpohvar.ru/artifactory/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>dpohvar.ru</id>
            <name>dpohvar.ru-releases</name>
            <url>http://dpohvar.ru/artifactory/release</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>bukkit-repo</id>
            <url>http://repo.bukkit.org/content/groups/public/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>${bukkit-version}</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>${artifactId}</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <configuration>
                    <show>public</show>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>