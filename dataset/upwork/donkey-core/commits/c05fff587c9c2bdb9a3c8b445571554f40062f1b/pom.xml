<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.upwork.donkey</groupId>
    <artifactId>donkey-core</artifactId>
    <version>0.1</version>

    <name>Donkey</name>
    <description>DSL grammar and code generator for defining contracts of RESTful services</description>
    <url>http://github.com/upwork/donkey-core</url>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Alexander Steshenko</name>
            <email>lcf@upwork.com</email>
            <organization>Upwork</organization>
            <organizationUrl>http://upwork.com</organizationUrl>
        </developer>
        <developer>
            <name>Nikolay Garbuzov</name>
            <email>nikolaygarbuzov@cloud.upwork.com</email>
            <organization>Upwork</organization>
            <organizationUrl>http://upwork.com</organizationUrl>
        </developer>
        <developer>
            <name>Gabor Neorcsity</name>
            <email>gaborneorcsity@cloud.upwork.com</email>
            <organization>Upwork</organization>
            <organizationUrl>http://upwork.com</organizationUrl>
        </developer>
        <developer>
            <name>Artem Nakonechny</name>
            <email>artemnakonechny@cloud.upwork.com</email>
            <organization>Upwork</organization>
            <organizationUrl>http://upwork.com</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/upwork/donkey-core.git</connection>
        <developerConnection>scm:git:git@github.com:upwork/donkey-core.git</developerConnection>
        <url>http://github.com/upwork/donkey-core/tree/master</url>
      <tag>donkey-core-0.1</tag>
  </scm>

    <dependencies>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4-runtime</artifactId>
            <version>4.6</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>18.0</version>
        </dependency>
        <dependency>
            <groupId>commons-validator</groupId>
            <artifactId>commons-validator</artifactId>
            <version>1.4.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.4</version>
        </dependency>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.2</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.3</version>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
</project>