<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
            http://maven.apache.org/POM/4.0.0
            http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.github.rmannibucau</groupId>
  <artifactId>rblog</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>RBlog</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <tomee.version>8.0.3</tomee.version>
    <selenium.version>2.53.1</selenium.version>

    <frontend.installDirectory>${user.home}/.rblog-build/node-installation-dir</frontend.installDirectory>
    <frontend.environment>prod</frontend.environment>
    <frontend.base>src/main/frontend</frontend.base>

    <dev.mysql.version>6.0.6</dev.mysql.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.geronimo.javamail</groupId>
      <artifactId>geronimo-javamail_1.4_mail</artifactId>
      <version>1.9.0-alpha-2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-jcache_1.0_spec</artifactId>
      <version>1.0-alpha-1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.tomee</groupId>
      <artifactId>javaee-api</artifactId>
      <version>8.0-3</version>
      <scope>provided</scope>
      <classifier>tomcat</classifier>
    </dependency>
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-servlet-api</artifactId>
      <version>9.0.35</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.12</version>
      <scope>provided</scope>
    </dependency>
    <dependency> <!-- not strictly needed but makes tooling smoother cause of PersistenceCapable usage -->
      <groupId>org.apache.openjpa</groupId>
      <artifactId>openjpa</artifactId>
      <version>3.1.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency> <!-- for custom date format + lombok integration -->
      <groupId>org.apache.johnzon</groupId>
      <artifactId>johnzon-jaxrs</artifactId>
      <version>1.2.5</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.geronimo</groupId>
      <artifactId>geronimo-jcache-simple</artifactId>
      <version>1.0.4</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.tomee</groupId>
      <artifactId>tomee-embedded</artifactId>
      <version>${tomee.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>1.4.200</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-fileupload</groupId>
      <artifactId>commons-fileupload</artifactId>
      <version>1.4</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.tomee</groupId>
      <artifactId>ziplock</artifactId>
      <version>${tomee.version}</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.seleniumhq.selenium</groupId>
      <artifactId>selenium-chrome-driver</artifactId>
      <version>${selenium.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.seleniumhq.selenium</groupId>
      <artifactId>selenium-support</artifactId>
      <version>${selenium.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.icegreen</groupId>
      <artifactId>greenmail</artifactId>
      <version>1.4.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>com.sun.mail</groupId>
          <artifactId>javax.mail</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.openjpa</groupId>
        <artifactId>openjpa-maven-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>enhancer</id>
            <phase>process-classes</phase>
            <goals>
              <goal>enhance</goal>
            </goals>
            <configuration>
              <includes>com/github/rmannibucau/rblog/jpa/*.class</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.22.0</version>
        <executions>
          <execution>
            <id>default-test</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <excludes>
                <exclude>**/webapp/*.class</exclude>
              </excludes>
            </configuration>
          </execution>
          <execution>
            <id>web-surefire</id>
            <phase>package</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <includes>
                <include>**/webapp/*.class</include>
              </includes>
              <skip>true</skip> <!-- requires localstorage to work but seems chrome has a bug -->
            </configuration>
          </execution>
        </executions>
        <configuration>
          <argLine>
            "-javaagent:${settings.localRepository}/org/apache/tomee/openejb-javaagent/${tomee.version}/openejb-javaagent-${tomee.version}.jar"
            -Dwebdriver.chrome.driver=${chrome.driver}
          </argLine>
          <trimStackTrace>false</trimStackTrace>
          <runOrder>alphabetical</runOrder>
          <forkCount>1</forkCount>
          <reuseForks>true</reuseForks>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.tomee.maven</groupId>
        <artifactId>tomee-embedded-maven-plugin</artifactId>
        <version>${tomee.version}</version>
        <configuration>
          <context>ROOT</context>
          <docBase>${frontend.base}/dist</docBase>
          <classpathAsWar>true</classpathAsWar>
          <webResourceCached>false</webResourceCached>
          <containerProperties>
            <!-- we don't need a 100% EE server yet so switch off few things slowing down the boot or polluting logs -->
            <openejb.environment.default>false</openejb.environment.default>
            <tomee.skip-tld>false</tomee.skip-tld>

            <!-- easier js dev -->
            <rblog.environment>dev</rblog.environment>
            <org.apache.johnzon.max-string-length>16384</org.apache.johnzon.max-string-length>

            <!-- for perf tests -->
            <connector.attributes.maxThreads>512</connector.attributes.maxThreads>
            <executor>new://Resource?type=ManagedExecutorService</executor>
            <executor.Max>1024</executor.Max> <!-- some tolerance between request and their thread processing -->
            <executor.Queue>0</executor.Queue> <!-- reject immediately -->
            <executor.Lazy>false</executor.Lazy>

            <!-- to test analytics setup
            <rblog.analytics.code>UA-XXXXX</rblog.analytics.code>
            -->
            <rblogDataSource>new://Resource?type=DataSource</rblogDataSource>
            <rblogDataSource.JdbcUrl>jdbc:mysql://localhost:3306/rblog?nullNamePatternMatchesAll=true&amp;useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;serverTimezone=UTC</rblogDataSource.JdbcUrl>
            <rblogDataSource.JdbcDriver>com.mysql.jdbc.Driver</rblogDataSource.JdbcDriver>
            <rblogDataSource.Username>root</rblogDataSource.Username>
            <rblogDataSource.Password>password</rblogDataSource.Password>
          </containerProperties>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${dev.mysql.version}</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin> <!-- frontend build (nodejs), generated at prepare-package to be there for tests -->
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>install-node-and-npm</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>install-node-and-npm</goal>
            </goals>
            <configuration>
              <nodeVersion>v6.2.1</nodeVersion>
              <npmVersion>3.9.6</npmVersion>
            </configuration>
          </execution>
          <execution>
            <id>npm-install</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>npm</goal>
            </goals>
            <configuration>
              <arguments>install</arguments>
            </configuration>
          </execution>
          <execution>
            <id>npm-build</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>npm</goal>
            </goals>
            <configuration>
              <arguments>run build</arguments>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <installDirectory>${frontend.installDirectory}</installDirectory>
          <workingDirectory>${frontend.base}</workingDirectory>
          <environmentVariables>
            <APP_END>${frontend.environment}</APP_END>
          </environmentVariables>
        </configuration>
      </plugin>
      <plugin> <!-- just to be able to test in not embedded mode before deployments -->
        <groupId>org.apache.tomee.maven</groupId>
        <artifactId>tomee-maven-plugin</artifactId>
        <version>${tomee.version}</version>
        <configuration>
          <context>ROOT</context>
          <systemVariables>
            <rblogDataSource>new://Resource?type=DataSource</rblogDataSource>
            <rblogDataSource.JdbcUrl>jdbc:mysql://localhost:3306/rblog?nullNamePatternMatchesAll=true&amp;useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;serverTimezone=UTC</rblogDataSource.JdbcUrl>
            <rblogDataSource.JdbcDriver>com.mysql.jdbc.Driver</rblogDataSource.JdbcDriver>
            <rblogDataSource.Username>root</rblogDataSource.Username>
            <rblogDataSource.Password>password</rblogDataSource.Password>
          </systemVariables>
          <libs>
            <lib>mysql:mysql-connector-java:${dev.mysql.version}</lib>
          </libs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <webResources>
            <resource>
              <directory>${frontend.base}/dist</directory>
              <excludes> <!-- skip 20M (but keep the generation since it is nice locally) -->
                <exclude>**/*.map</exclude>
                <exclude>**/*.map.gz</exclude>
              </excludes>
            </resource>
          </webResources>
          <failOnMissingWebXml>false</failOnMissingWebXml>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
