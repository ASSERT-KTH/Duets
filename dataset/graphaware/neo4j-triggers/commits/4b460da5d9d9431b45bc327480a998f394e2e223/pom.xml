        <system>Travis CI</system>
    </ciManagement>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/graphaware/neo4j-triggers/issues</url>
    </issueManagement>

    <organization>
        <name>Graph Aware Limited</name>
        <url>http://graphaware.com</url>
