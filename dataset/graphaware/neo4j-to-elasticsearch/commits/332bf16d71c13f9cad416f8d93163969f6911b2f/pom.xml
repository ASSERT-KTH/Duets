<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.graphaware.integration.elasticsearch</groupId>
    <artifactId>neo4j-es</artifactId>
    <version>2.2.4.34.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.graphaware.neo4j</groupId>
        <artifactId>module-parent</artifactId>
        <version>2.2.4.34</version>
    </parent>

    <properties>
        <elasticsearch.version>1.7.1</elasticsearch.version>
    </properties>

    <modules>
        <module>es-plugin</module>
        <module>neo4j-plugin</module>
        <module>integration-tests</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!-- Neo4j Plugin -->
            <dependency>
                <groupId>io.searchbox</groupId>
                <artifactId>jest</artifactId>
                <version>0.1.6</version>
            </dependency>

            <!-- ES Plugin -->
            <dependency>
                <groupId>org.elasticsearch</groupId>
                <artifactId>elasticsearch</artifactId>
                <version>${elasticsearch.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>com.sun.jersey</groupId>
                <artifactId>jersey-client</artifactId>
                <version>1.19</version>
                <!--<scope>provided</scope>-->
            </dependency>

            <!-- Integration Tests -->
            <!-- Inter project dependencies -->
            <dependency>
                <groupId>com.graphaware.integration.elasticsearch</groupId>
                <artifactId>es-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <!--<scope>test</scope>-->
            </dependency>
            <dependency>
                <groupId>com.graphaware.integration.elasticsearch</groupId>
                <artifactId>neo4j-plugin</artifactId>
                <version>2.2.4.34.0-SNAPSHOT</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.graphaware.neo4j</groupId>
                <artifactId>recommendation-engine</artifactId>
                <version>2.2.4.34.8</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.codelibs</groupId>
                <artifactId>elasticsearch-cluster-runner</artifactId>
                <version>1.7.0.0</version>
                <!--<scope>test</scope>-->
            </dependency>
            <dependency>
                <groupId>org.apache.lucene</groupId>
                <artifactId>lucene-core</artifactId>
                <version>3.6.2</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- disable assembly from parent -->
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4.1</version>
                <executions>
                    <execution>
                        <phase/>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>