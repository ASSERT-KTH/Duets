<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>1.454</version><!-- which version of Jenkins is this plugin built against? -->
  </parent>

  <groupId>com.flowdock.jenkins</groupId>
  <name>Flowdock plugin</name>
  <description>Posts build notifications to your flow</description>
  <artifactId>jenkins-flowdock-plugin</artifactId>
  <version>1.0.2</version>
  <packaging>hpi</packaging>
  <url>https://github.com/flowdock/jenkins-flowdock-plugin</url>

  <developers>
    <developer>
      <id>anttipitkanen</id>
      <name>Antti Pitkanen</name>
      <email>antti@flowdock.com</email>
    </developer>
  </developers>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <scm>
    <connection>scm:git:git@github.com:flowdock/jenkins-flowdock-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:flowdock/jenkins-flowdock-plugin.git</developerConnection>
    <url>https://github.com/flowdock/jenkins-flowdock-plugin</url>
  </scm>

  <!-- get every artifact through maven.glassfish.org, which proxies all the artifacts that we need -->
  <repositories>
    <repository>
      <id>m.g.o-public</id>
      <url>http://maven.glassfish.org/content/groups/public/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>m.g.o-public</id>
      <url>http://maven.glassfish.org/content/groups/public/</url>
    </pluginRepository>
  </pluginRepositories>
</project>
