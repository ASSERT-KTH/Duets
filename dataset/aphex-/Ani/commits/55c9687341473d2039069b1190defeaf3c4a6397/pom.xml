<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.nukethemoon.tools.ani</groupId>
	<artifactId>ani</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>
	<name>Ani Animations</name>
	<description>A simple library to write custom animations.</description>
	<url>https://github.com/aphex-/Ani</url>
	<licenses>
		<license>
			<name>The Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<name>Luca Hofmann</name>
			<email>hofmannluca@gmail.com</email>
			<organization>Nuke The Moon</organization>
			<organizationUrl>http://www.lucahofmann.com</organizationUrl>
		</developer>
	</developers>
	<scm>
		<connection>scm:git:git@github.com:aphex-/Ani.git</connection>
		<developerConnection>scm:git:git@github.com:aphex-/Ani.git</developerConnection>
		<url>git@github.com:aphex-/Ani.git</url>
	</scm>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<id>sign</id>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<keystore>/path/to/the/keystore</keystore>
					<alias>Alias name</alias>
					<storepass>Store password</storepass>
					<keypass>Key password</keypass>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>