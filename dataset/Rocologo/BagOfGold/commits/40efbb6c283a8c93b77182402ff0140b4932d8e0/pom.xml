<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>au.com.mineauz</groupId>
	<artifactId>MobHunting</artifactId>
	<packaging>jar</packaging>
	<version>2.2.1</version>
	<name>MobHunting</name>
	<url>http://dev.bukkit.org/server-mods/mobhunting/</url>
	<description>MobHunting adds a new level of fun to hunting monsters. Now you can get money from kills, get bonuses for skilled and creative kills, and get special achievements!</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<mainClass>${project.groupId}.${project.artifactId}</mainClass>
		<bukkit.version>1.8.7-R0.1-SNAPSHOT</bukkit.version>
		<spigotmc.version>1.8.7-R0.1-SNAPSHOT</spigotmc.version>
		<metrics.version>R7</metrics.version>
		<vault.version>LATEST</vault.version>
		<minigames.version>1.7.0-SNAPSHOT</minigames.version>
		<mypet.version>LATEST</mypet.version>
		<mobarena.version>0.96.9</mobarena.version>
		<pvparena.version>1.3.0.548</pvparena.version>
		<worldedit.version>LATEST</worldedit.version>
		<worldguard.version>LATEST</worldguard.version>
		<citizensapi.version>2.0.16-SNAPSHOT</citizensapi.version>
		<mythicmobs.jar.version>MythicMobs-2.0.6.jar</mythicmobs.jar.version>
		<javacompiler.version>1.7</javacompiler.version>
		<mavenCompilerPlugin.version>3.1</mavenCompilerPlugin.version>
		<mavenShadePlugin.version>1.5</mavenShadePlugin.version>
		<mcstats.pluginname>${groupId}.${artifactId}</mcstats.pluginname>
	</properties>

	<organization>
		<name>Rocologo</name>
		<url>https://www.lindegaard.tk</url>
	</organization>

	<!-- ********************************************************************** -->
	<!-- ******************************** Build ******************************* -->
	<!-- ********************************************************************** -->
	<build>
		<defaultGoal>clean package install</defaultGoal>
		<finalName>${project.name}-${project.version}</finalName>
		<sourceDirectory>${basedir}/src</sourceDirectory>
		<resources>
			<resource>
				<targetPath>.</targetPath>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>plugin.yml</include>
				</includes>
			</resource>
			<resource>
				<targetPath>lang</targetPath>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources/lang</directory>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<!-- <version>2.3.2</version> -->
				<version>${mavenCompilerPlugin.version}</version>
				<configuration>
					<source>${javacompiler.version}</source>
					<target>${javacompiler.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>${mavenShadePlugin}</version>
				<configuration>
					<artifactSet>
						<includes>
							<include>org.mcstats.*:*</include>
						</includes>
					</artifactSet>
					<relocations>
						<relocation>
							<pattern>org.mcstats</pattern>
							<shadedPattern>${mcstats.pluginname}</shadedPattern>
						</relocation>
					</relocations>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<!-- ********************************************************************** -->
	<!-- **************************** Dependencies **************************** -->
	<!-- ********************************************************************** -->
	<dependencies>
		<!-- CraftBukkit Dependency for experimental features -->
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>craftbukkit</artifactId>
			<version>${bukkit.version}</version>
		</dependency>

		<!-- SpigotMC -->
		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>${spigotmc.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>

		<!-- Vault / -->
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>Vault</artifactId>
			<version>${vault.version}</version>
		</dependency>

		<!-- Minigames -->
		<dependency>
			<groupId>au.com.mineauz</groupId>
			<artifactId>Minigames</artifactId>
			<version>${minigames.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.bukkit</groupId>
					<artifactId>bukkit</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.bukkit</groupId>
					<artifactId>craftbukkit</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- WorldEdit -->
		<dependency>
			<groupId>com.sk89q</groupId>
			<artifactId>worldedit</artifactId>
			<version>${worldedit.version}</version>
		</dependency>

		<!-- MCStats / Plugin Metrics -->
		<dependency>
			<groupId>org.mcstats.bukkit</groupId>
			<artifactId>metrics</artifactId>
			<version>${metrics.version}</version>
			<scope>compile</scope>
		</dependency>

		<!-- MyPet -->
		<dependency>
			<groupId>de.keyle</groupId>
			<artifactId>mypet</artifactId>
			<version>${mypet.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>

		<!-- MobArena -->
		<dependency>
			<groupId>com.garbagemule.mobarena</groupId>
			<artifactId>mobarena</artifactId>
			<version>${mobarena.version}</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/MobArena.jar</systemPath>
			<!-- <type>jar</type> <scope>provided</scope> -->
		</dependency>

		<!-- PvpArena -->
		<dependency>
			<groupId>net.slipcor.pvparena</groupId>
			<artifactId>PVPArena</artifactId>
			<version>${pvparena.version}</version>
			<!-- <type>jar</type> <scope>provided</scope> -->
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/pvparena.jar</systemPath>
		</dependency>

		<!-- Worldguard -->
		<dependency>
			<groupId>com.sk89q</groupId>
			<artifactId>worldguard</artifactId>
			<version>${worldguard.version}</version>
		</dependency>

		<!-- MythicMobs -->
		<dependency>
			<groupId>net.elseland.mythicmobs</groupId>
			<artifactId>MythicMobs</artifactId>
			<version>${pvparena.version}</version>
			<!-- <type>jar</type> <scope>provided</scope> -->
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/${mythicmobs.jar.version}</systemPath>
		</dependency>

		<!-- Citizens -->
		<dependency>
			<groupId>net.citizensnpcs</groupId>
			<artifactId>citizensapi</artifactId>
			<version>${citizensapi.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>

	</dependencies>

	<!-- ********************************************************************** -->
	<!-- **************************** Repositories **************************** -->
	<!-- ********************************************************************** -->
	<repositories>
		<!-- Bukkit Repository -->
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public/</url>
		</repository>

		<!-- SpigotMC Repository -->
		<repository>
			<id>spigot-repo</id>
			<url>https://hub.spigotmc.org/nexus/content/groups/public/</url>
		</repository>

		<!-- Vault repository -->
		<repository>
			<id>vault-repo</id>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
		</repository>

		<!-- Addstar repo -->
		<repository>
			<id>addstar-repo</id>
			<url>http://maven.addstar.com.au/artifactory/ext-release-local</url>
		</repository>
		<repository>
			<id>addstar-snapshot-repo</id>
			<url>http://maven.addstar.com.au/artifactory/ext-snapshot-local</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>

		<!-- Maven repository -->
		<repository>
			<id>maven-central</id>
			<url>http://repo1.maven.org/maven2/</url>
		</repository>

		<!-- sk89q repository -->
		<repository>
			<id>sk89q-repo</id>
			<url>http://maven.sk89q.com/repo/</url>
		</repository>

		<!-- mypet repository -->
		<repository>
			<id>mypet-repo1</id>
			<url>http://nexus.keyle.de/content/repositories/</url>
		</repository>
		<repository>
			<id>mypet-repo</id>
			<url>http://nexus.keyle.de/content/groups/public/</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>

		<!-- MobArena repository -->
		<repository>
			<id>mobarena-repo</id>
			<url>https://github.com/garbagemule/MobArena</url>
		</repository>

		<!-- PvpArena repository -->
		<repository>
			<id>pvparena-repo</id>
			<url>git://git.bukkit.org/minecraft/pvparena/mainline.git</url>
		</repository>


		<!-- Spout Repository -->
		<repository>
			<id>spout-repo</id>
			<url>http://nexus.spout.org/content/groups/public/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<!-- citizens repository -->
		<repository>
			<id>citizens-repo</id>
			<!-- <url>https://github.com/CitizensDev/Citizens2.git</url> -->
			<url>http://repo.citizensnpcs.co/</url>
		</repository>

		<!-- minigamesAPI repository -->
		<repository>
			<id>MinigamesAPI-Repo</id>
			<name>MinigamesAPI Repository</name>
			<url>http://www.instancedev.com/bukkitdev/MinigamesAPI/maven/</url>
		</repository>

		<!-- MCStats -->
		<repository>
			<id>Plugin Metrics</id>
			<url>http://repo.mcstats.org/content/repositories/public</url>
		</repository>
	</repositories>

</project>
