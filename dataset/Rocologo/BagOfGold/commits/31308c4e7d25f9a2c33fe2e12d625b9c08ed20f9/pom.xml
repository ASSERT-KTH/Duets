<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>au.com.mineauz</groupId>
	<artifactId>MobHunting</artifactId>
	<version>${project.plugin.version}</version>
	<name>MobHunting</name>
	<url>http://dev.bukkit.org/bukkit-plugins/mobhunting/</url>
	<description> Here is the description....</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<mainClass>${project.groupId}.${project.artifactId}</mainClass>
		<plugin.version>1.8.4</plugin.version>
		<bukkit.version>1.8-R0.1-SNAPSHOT</bukkit.version>
		<spigotmc.version>1.8-R0.1-SNAPSHOT</spigotmc.version>
		<metrics-lite.version>R7</metrics-lite.version>
		<mypet.version>1.2.0</mypet.version>
		<vault.version>1.5.2</vault.version>
		<minigames.version>1.7.0-SNAPSHOT</minigames.version>
		<worldedit.version>6.0.0-SNAPSHOT</worldedit.version>
		<javacompiler.version>1.7</javacompiler.version>
	</properties>

	<organization>
		<name>Rocologo</name>
		<url>https://www.lindegaard.tk</url>
	</organization>

	<!-- <distributionManagement> <repository> <id>pub-repo</id> <name>Public 
		Releases</name> <url>http://nexus.theyeticave.net/content/repositories/pub_releases/</url> 
		</repository> <snapshotRepository> <id>pub-repo</id> <name>Public Snapshots</name> 
		<url>http://nexus.theyeticave.net/content/repositories/pub_snapshots/</url> 
		</snapshotRepository> </distributionManagement> -->
	<repositories>
		<repository>
			<id>pub-repo</id>
			<name>Public Releases</name>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases/</url>
		</repository>

		<!-- Repository for Bukkit -->
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public/</url>
		</repository>

		<!-- SpigotMC Repository -->
		<repository>
			<id>spigot-repo</id>
			<url>https://hub.spigotmc.org/nexus/content/groups/public/</url>
		</repository>

		<!-- Addstar repo -->
		<repository>
			<id>addstar-repo</id>
			<url>http://maven.addstar.com.au/artifactory/ext-release-local</url>
			
		</repository>
		<repository>
			<id>addstar-snapshot-repo</id>
			<url>http://maven.addstar.com.au/artifactory/ext-snapshot-local</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>

		<!-- Maven repository -->
		<repository>
			<id>maven-central</id>
			<url>http://repo1.maven.org/maven2/</url>
		</repository>

		<!-- sk89q repository -->
		<repository>
			<id>sk89q-repo</id>
			<url>http://maven.sk89q.com/repo/</url>
		</repository>

		<!-- mypet repository -->
		<repository>
			<id>mypet-repo</id>
			<url>http://nexus.keyle.de/content/groups/public/</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>

		<!-- Spout Repository -->
		<repository>
			<id>spout-repo</id>
			<url>http://nexus.spout.org/content/groups/public/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<!-- citizens repository -->
		<repository>
			<id>citizens-repo</id>
			<url>http://repo.citizensnpcs.co/</url>
		</repository>

		<!-- minigames repository 
		<repository>
			<id>minigames-repo</id>
			<url>https:github.com/Razz0991/Minigames/</url>
		</repository>
		-->
		
		<!-- vault repository -->
		<repository>
			<id>vault-repo</id>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
		</repository>
		<repository>
			<id>milkbowl-repo</id>
			<url>http://ci.milkbowl.net/plugin/repository/everything/</url>
		</repository>

		<!-- MCStats Repository -->
		<repository>
			<id>metrics-repo</id>
			<url>http://repo.mcstats.org/content/repositories/releases/</url>
		</repository>

		<!-- minigamesAPI repository -->
		<repository>
			<id>MinigamesAPI-Repo</id>
			<name>MinigamesAPI Repository</name>
			<url>http://www.instancedev.com/bukkitdev/MinigamesAPI/maven/</url>
		</repository>

		<!-- other repositories -->
		<repository>
			<id>oss-sonartype-repo</id>
			<url>https://oss.sonatype.org/content/groups/public/</url>
		</repository>

		<!-- Outdated -->
		<repository>
			<id>zml-repo</id>
			<url>http://files.zachsthings.com/repo/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

	</repositories>

	<dependencies>
		<!-- Bukkit -->

		<!-- CraftBukkit Dependency for experimental features -->
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>${bukkit.version}</version>
		</dependency>

		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>${spigotmc.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>

		<!-- Used for Economy interop -->
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>Vault</artifactId>
			<version>${vault.version}</version>
		</dependency>

		<!-- Minigames -->
		<dependency>
			<groupId>au.com.mineauz</groupId>
			<artifactId>Minigames</artifactId>
			<version>${minigames.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.bukkit</groupId>
					<artifactId>bukkit</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.bukkit</groupId>
					<artifactId>craftbukkit</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		

		<dependency>
			<groupId>com.sk89q</groupId>
			<artifactId>worldedit</artifactId>
			<version>${worldedit.version}</version>
		</dependency>

		<dependency>
			<groupId>org.mcstats.bukkit</groupId>
			<artifactId>metrics-lite</artifactId>
			<version>${metrics-lite.version}</version>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>de.keyle</groupId>
			<artifactId>mypet</artifactId>
			<version>${mypet.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<targetPath>.</targetPath>
				<filtering>true</filtering>
				<directory>${basedir}/.</directory>
				<includes>
					<include>plugin.yml</include>
				</includes>
			</resource>
			<resource>
				<directory>lang</directory>
				<filtering>true</filtering>
				<targetPath>lang</targetPath>
			</resource>
		</resources>

		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<!-- <version>2.3.2</version> -->
				<configuration>
					<source>${javacompiler.version}</source>
					<target>${javacompiler.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
