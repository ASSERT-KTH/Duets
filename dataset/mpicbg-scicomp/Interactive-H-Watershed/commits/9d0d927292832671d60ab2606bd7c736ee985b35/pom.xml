<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.scijava</groupId>
        <artifactId>pom-scijava</artifactId>
        <version>14.0.0</version>
        <relativePath/>
    </parent>

    <groupId>de.mpicbg.scf</groupId>
    <artifactId>InteractiveWatershed</artifactId>
    <version>1.0.0</version>

    <name>InteractiveWatershed</name>
    <description>
        InteractiveWatershed
    </description>
    <url>http://imagej.net/Interactive_Watershed</url>
    <inceptionYear>2017</inceptionYear>
    <organization>
        <name>MPI CBG</name>
        <url>https://www.mpi-cbg.de/services-facilities/core-facilities/scientific-computing-facility/services/</url>
    </organization>
    <licenses>
        <license>
            <name>BSD License Version 3</name>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>benoitlo</id>
            <name>Benoit Lombardot</name>
            <email>lombardo@mpi-cbg.de</email>
            <organization>Scientific Computing Facility, MPI CBG Dresden</organization>
            <url>http://imagej.net/User:Benoit</url>
            <roles>
				<role>developer</role>
                <role>maintainer</role>
            </roles>
        </developer>
    </developers>
    <contributors>
        <contributor>
            <name>none</name>
        </contributor>
    </contributors>

    <mailingLists>
        <mailingList>
            <name>none</name>
        </mailingList>
    </mailingLists>

    <scm>
        <url>none</url>
    </scm>
    <issueManagement>
        <system>None</system>
    </issueManagement>
    <ciManagement>
        <system>None</system>
    </ciManagement>

    <properties>
        <main-class>de.mpicbg.scf.InteractiveWatershed.Interactive_HWatershed</main-class>
        <scijava.jvm.version>1.8</scijava.jvm.version>
        <license.licenseName>bsd_3</license.licenseName>
        <license.copyrightOwners>Max Planck Institute of Molecular Cell Biology and Genetics, Dresden
        </license.copyrightOwners>
    </properties>


    <repositories>
        <repository>
            <id>imagej.public</id>
            <url>http://maven.imagej.net/content/groups/public</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej-legacy</artifactId>
            <scope>runtime</scope>
        </dependency>

        <dependency>
			<groupId>net.imagej</groupId>
			<artifactId>imagej</artifactId>
		</dependency>

    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
