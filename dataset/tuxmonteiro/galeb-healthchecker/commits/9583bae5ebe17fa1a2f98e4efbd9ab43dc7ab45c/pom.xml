<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.openvraas</groupId>
  <artifactId>openvraas-healthchecker</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <licenses>
    <license>
        <name>Apache License Version 2.0</name>
        <url>http://repository.jboss.org/licenses/apache-2.0.txt</url>
        <distribution>repo</distribution>
    </license>
  </licenses>

  <properties>
    <org.jboss.resteasy.version>3.0.10.Final</org.jboss.resteasy.version>
    <org.mortbay.jetty.alpn.jdk7.version>7.1.2.v20141202</org.mortbay.jetty.alpn.jdk7.version>
    <org.mortbay.jetty.alpn.jdk8.version>8.1.2.v20141202</org.mortbay.jetty.alpn.jdk8.version>
    <google.gson.version>2.3.1</google.gson.version>
    <org.jboss.weld.version>2.2.8.Final</org.jboss.weld.version>
    <org.jboss.logging.version>3.2.0.Final</org.jboss.logging.version>
    <org.apache.logging.log4j.version>2.1</org.apache.logging.log4j.version>
    <org.apache.commons.commons-lang3.version>3.3.2</org.apache.commons.commons-lang3.version>
    <org.quartz-scheduler.version>2.2.1</org.quartz-scheduler.version>
  </properties>

  <profiles>
    <profile>
      <id>jdk8</id>
      <activation>
        <jdk>1.8</jdk>
      </activation>
      <properties>
        <org.mortbay.jetty.alpn.version>${org.mortbay.jetty.alpn.jdk8.version}</org.mortbay.jetty.alpn.version>
      </properties>
    </profile>
    <profile>
      <id>jdk7</id>
      <activation>
        <jdk>1.7</jdk>
      </activation>
      <properties>
        <org.mortbay.jetty.alpn.version>${org.mortbay.jetty.alpn.jdk7.version}</org.mortbay.jetty.alpn.version>
      </properties>
    </profile>
  </profiles>

  <dependencies>
    <dependency>
      <groupId>org.mortbay.jetty.alpn</groupId>
      <artifactId>alpn-boot</artifactId>
      <version>${org.mortbay.jetty.alpn.version}</version>
    </dependency>

    <dependency>
      <groupId>com.openvraas</groupId>
      <artifactId>openvraas-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.openvraas</groupId>
      <artifactId>openvraas-undertow</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.openvraas</groupId>
      <artifactId>openvraas-hazelcast</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.jboss.weld.se</groupId>
      <artifactId>weld-se</artifactId>
      <version>${org.jboss.weld.version}</version>
      <exclusions>
        <exclusion>
          <groupId>org.jboss.logging</groupId>
          <artifactId>jboss-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
      <version>${org.apache.logging.log4j.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
      <version>${org.apache.logging.log4j.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-jul</artifactId>
      <version>${org.apache.logging.log4j.version}</version>
    </dependency>
    <dependency>
      <groupId>org.quartz-scheduler</groupId>
      <artifactId>quartz</artifactId>
      <version>${org.quartz-scheduler.version}</version>
    </dependency>
    <dependency>
      <groupId>org.quartz-scheduler</groupId>
      <artifactId>quartz-jobs</artifactId>
      <version>${org.quartz-scheduler.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-slf4j-impl</artifactId>
      <version>${org.apache.logging.log4j.version}</version>
    </dependency>
    <dependency>
      <groupId>com.openvraas</groupId>
      <artifactId>openvraas-services</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <outputFile>target/openvraas-${project.version}-uber.jar</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
        <archive>
          <manifest>
            <mainClass>com.openvraas.services.healthchecker.Starter</mainClass>
            <addClasspath>true</addClasspath>
          </manifest>
        </archive>
       </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-server</argument>
            <argument>-Xms1024m</argument>
            <argument>-Xmx1024m</argument>
            <argument>-Dorg.jboss.logging.provider=log4j2</argument>
            <argument>-Djava.util.logging.manager=org.apache.logging.log4j.jul.LogManager</argument>
            <argument>-Dlog4j.configurationFile=log4j.xml</argument>
            <argument>-jar</argument>
            <argument>target/openvraas-${project.version}-uber.jar</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
