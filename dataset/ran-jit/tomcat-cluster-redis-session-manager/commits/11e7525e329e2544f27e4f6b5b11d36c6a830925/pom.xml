            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler.version}</version>
                <configuration>
                    <source>${source-java.version}</source>
                    <target>${target-java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
