        <!-- MiniGames -->
        <dependency>
            <groupId>com.cnaude.minigames</groupId>
            <artifactId>MiniGames17</artifactId>
            <version>1.7.0</version>
        </dependency>
        
        <!-- MiniGames -->
        <dependency>
            <groupId>com.cnaude.minigames</groupId>
